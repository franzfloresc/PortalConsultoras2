@model Portal.Consultoras.Web.Models.RVDigitalPaqueteDocumentarioModel
@{
    ViewBag.Title = "PaqueteDocumentario";
}
<script type="text/javascript">
    jQuery(function () {
        $("#ddlPais").prop('disabled', 'disabled');

        IniFecha();

        $("#btnDescargar").click(function () {
            RealizarDescarga();
        });
    });

    function IniFecha() {

        $("#txtFechaFacturacion").datepicker({
            showOn: "button",
            buttonImage: '@Url.Content("~/Content/Images/calendar.png")',
            buttonImageOnly: true,
            dateFormat: 'dd/mm/yy'
        }).mask('99/99/9999');

        $("#txtFechaFacturacion").datepicker("setDate", new Date());
    }
    function RealizarDescarga() {
        var item = {
            paisID: $("#ddlPais").val()
        };

        if ($("#ddlPais").val() == "") {
            alert("Debe seleccionar un País, verifique");
            return false;
        } else if ($("#txtFechaFacturacion").val() == "") {
            alert("codigo de consultora invalido, verifique");
            return false;
        } else {
            waitingDialog({});
            $.ajax({
                type: 'POST',
                url: baseUrl + 'RVDigital/EnviarTxt',
                data: item,
                success: function (data) {
                    if (checkTimeout(data)) {
                        closeWaitingDialog();
                        if (data.success == true) {
                            alert("Proceso culminado con éxito.")
                        }
                        else {
                            alert(data.mensaje);
                        }
                    }
                },
                error: function (data, error) {
                    if (checkTimeout(data)) {
                        closeWaitingDialog();
                        alert("Error del Sistema.");
                    }
                }
            });
        }
    }
</script>
<div class="wrap_cab">
    <div class="filtros">
        <div class="elements">
            <div class="div-2">
                <h1>Cargar Paquete Documentario</h1>
            </div>
        </div>
    </div>
</div>
<div class="wrap">
<div class="container clearfix">
        <div class="border-wrapper_reg">

            <div class="div-3">
                <div class="titF">País:</div>
                <div class="selectP2 borde_redondeado">
                    @Html.DropDownListFor(model => model.PaisID, new SelectList(Model.listaPaises, "PaisID", "Nombre"), new { id = "ddlPais" })
                </div>
            </div>

            <div class="div-3">
                <div class="titF">Fecha :</div>
                <div class="calendar borde_redondeado">
                    <input type="text" id="txtFechaFacturacion" />
                </div>
            </div>
            <div class="div-3">
                <div class="titF"></div>
                <div class="input_add_alert_left">
                    <input type="button" name="" id="btnDescargar" value="Descargar" />
                </div>
            </div>
            <div id="DivDescargas" class="div-4" style="display: none">
                <div class="noti3">
                    Puede descargar los archivos generados haciendo click en los siguientes enlaces:<br />
                    Cabecera: <a id="Aheader" href="#" onclick="DescargarCabecera()"></a>
                    <br />
                    Detalle: <a id="Ddetail" href="#" onclick="DescargarDetalle()"></a>
                </div>
            </div>
        </div>
    </div>
</div>
<input type="hidden" id="hdnfileHeader" name="hdnfileHeader" />
<input type="hidden" id="hdnfileDetail" name="hdnfileDetail" />
<div id="loadingScreen"></div>
