                                <div class="div-3">
                                    <div class="titI"></div>
                                    <div class="input_search">
                                        <input id="btnGrabar" type="submit" value="Grabar" />
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>

                </div>
                <div id="tab-masiva" class="contenido_tab">
                    
                    <div class="div-3">
                        <div class="titB">País:</div>
                        <div class="selectA borde_redondeado">
                            <select id="ddlPaisM"></select>
                        </div>
                        @*</div>
                            <div class="div-3">*@
                        <div class="titI">Año Campaña:</div>
                        <div class="selectA borde_redondeado">
                         <select id="ddlCampaniaM" disabled></select>

                        </div>
                    


                    </div>
                    <div class="div-3" id="divArchivo" style="display:none">
                        <div class="titB">Archivo:</div>
                        <div id="divuplArchivo" class="titB">
                            @*<input id="uplArchivo" name="uplArchivo" type="file" />*@
                            <input type="file" id="uplArchivo" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel,.xlsx" />
                        </div>
                    </div>
                    <div class="div-3" id="divregistrosValidos" style="display:none">
                        <div class="titB">Registros Válidos:</div>
                        <div style="float:right;width:90%">
                            <div id="divTotalRegistrosValidos" style="float:left;width:100%">Registros Totales : <span id="spanTotales1"></span> - Registros Válidos : <span id="spanValido"></span></div>
                            <div style="float:left;width:100%">
                                <div id="tablaCuvsValidos" style="height:200px; overflow:auto; float:left ;width:95%"> </div>
