    <div class="container clearfix" style="min-height: 250px;">
        <div class="border-wrapper_reg">

            <div class="div-3">
                <div class="titF">País :</div>
                <div class="selectP2 disabled borde_redondeado">
                    <input type="text" id="txtPais" disabled="disabled" />
                </div>
            </div>

            <div class="div-3">
                <div class="titF">Fecha de Ejecución :</div>
                <div class="calendar borde_redondeado">
                    <input type="text" id="txtFecha" />                    
                </div>
                <div style="float: left; width: 16px; height: auto; text-align: left;">
                    <input type="checkbox" value="1" id="chkModificar"/>
                </div>
                <div style="float: left; width: 80px; height: auto; padding: 9px 9px 9px 4px; color: #702789; font-size: 14px; text-align: left;">Modificar</div>
            </div>

            <div class="div-3">
                <div class="titF"></div>
                <div class="input_add_alert_left">
                    <input type="button" name="" id="btnDescargar" value="Descargar" />
                </div>
