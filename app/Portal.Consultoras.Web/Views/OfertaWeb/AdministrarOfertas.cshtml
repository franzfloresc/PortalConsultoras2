                                    }
                                });
                            } else RegistrarOfertaWeb();
                        } else {
                            $.getJSON(baseUrl + 'OfertaWeb/ValidarPriorizacion', { paisID: paisID, codigoOferta: $.trim($("#hdCodigoOferta").val()), CampaniaID: jQuery('#hdCampaniaID').val(), Orden: $("#txtOrdenModal").val() }, function (data) {
