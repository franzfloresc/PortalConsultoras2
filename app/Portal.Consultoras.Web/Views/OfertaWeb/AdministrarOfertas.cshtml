    function RegistrarOfertaWeb() {

        var accion = "";

        if ($("#FlagTransaccion").val() == "1")
            accion = "UpdateOfertaWeb";
        else
            accion = "InsertOfertaWeb";

        var Item = {
            CampaniaID: jQuery('#hdCampaniaID').val(),
            CUV: jQuery('#txtCUVModal').val(),
            Descripcion: $("#txtDescripcionModal").val(),
            PrecioOferta: $("#txtPrecioOfertaModal").val(),
            ImagenProducto: $("#ImagenProducto").val(),
            ImagenProductoAnterior: $('#ImagenProductoAnterior').val(),
            Orden: $("#txtOrdenModal").val(),
            UnidadesPermitidas: 0,
            CodigoCampania: $("#txtCampaniaModal").val(),
            FlagHabilitarProducto: $("#chkHabilitarOferta").attr('checked') ? 1 : 0,
            CodigoTipoOferta: $.trim($("#hdCodigoOferta").val()),
            FlagImagen: $("#hdFlagImagen").val(),
            DescripcionLegal: $("#txtDescripcionLegalModal").val(),
            PaisID: paisID
        };
        jQuery.ajax({
            type: 'POST',
            url: baseUrl + 'OfertaWeb/' + accion,
            dataType: 'json',
            contentType: 'application/json; charset=utf-8',
            data: JSON.stringify(Item),
            async: true,
            success: function (data) {
                if (checkTimeout(data)) {
                    if (data.success == true) {
                        alert(data.message);
                        HideDialog("DialogRegistroOfertaWeb");
                        LimpiarDatos();
                        jQuery("#list").setGridParam({ datatype: 'json', page: 1 }).trigger('reloadGrid');
                    }
                    else {
                        alert(data.message);
                    }
                }
            },
            error: function (data, error) {
                if (checkTimeout(data)) {
                    alert(data.message);
                    HideDialog("DialogRegistroOfertaWeb");
                }
            }
        });

    }
</script>
