            <div class="addlist_tab" style="float:right;">
                <input type="button"  id="btncancelar" title="Cancelar" value="Cancelar" />
            </div>
            <div class="addlist_tab" style="float:right;">
                    <input type="button" id="btnguardar" title="Aceptar" value="Guardar" />
            </div>
            
    
    </div>

    </form>
    
</div>
