<div class="wrap">

    <section class="container clearfix">
        <div class="border-wrapper">
            <table id="list"></table>
            <div id="pager"></div>
        </div>
        <br />

        <div class="div-3">
                <div class="input_horizontal">
                    <input type="button" value="Descargar" id="btnExportarExcel" name="btnExportarExcel" onclick="ExportarExcel();">
