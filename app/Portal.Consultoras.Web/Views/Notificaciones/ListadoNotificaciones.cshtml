@model Portal.Consultoras.Web.Models.NotificacionesModel
<table id="tbListadoPedido">
    <thead>
        <tr>
            <th style="width: 20%;">Destinatario
            </th>
            <th style="width: 40%;">Asunto
            </th>
            <th style="width: 20%;">Fecha y Hora
            </th>
            <th style="width: 20%;">Campaña
            </th>
        </tr>
    </thead>
    <tbody>
           @Html.Hidden("TieneNotificacion", Model.ListaNotificaciones.Count(x=>x.Visualizado==false)>0?1:0)
           

        @foreach (var item in Model.ListaNotificaciones)
        {
            var estilo = item.Visualizado ? "f3" : "f1";
            <tr class="@estilo">
                <td class="center">
                    SOMOSBELCORP
                </td>
                <td class="center">
                    <a href="#" onclick="VisualizarPopup('@item.ProcesoId','@item.Observaciones','@item.Estado','@item.FacturaHoy.ToString()','@item.FechaFacturacion.Day','@item.FechaFacturacion.Month','@item.Visualizado.ToString()','@item.Asunto','@item.Proceso','@item.EsMontoMinimo.ToString()')" >@item.Asunto</a>
                </td>
                <td class="center">
                    @Html.DisplayTextFor(modelItem => item.FechaHoraValidación)
                </td>
                <td class="center">
                    @if (item.CampaniaId != 0)
                    {
                       @Html.DisplayTextFor(modelItem => item.CampaniaId)
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
