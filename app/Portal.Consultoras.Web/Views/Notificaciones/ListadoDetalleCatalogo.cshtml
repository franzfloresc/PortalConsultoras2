@model Portal.Consultoras.Web.Models.NotificacionesModel
@*R20150802*@
<div id="ldnHeader">
    <div id="ldnHeader_titulo">
        <p>
            Estimada<br />
            <b>@Model.NombreConsultora</b>
        </p>
    </div>
    <div id="ldnHeader_logo">
        Has recibido una<br />
        <b style="font-family: 'museo_sans_700regular';">Solicitud de pedido</b>
    </div>
</div>
<div style="background: white; padding: 0px;">
    <div class="clear"></div>
    <div style="margin: 5px auto 5px auto; width: 700px; font-family: 'museo_sans_100regular'; font-size: 14px; color: #425363">
        <p>Te ha llegado el siguiente pedido a través del Catálogo virtual</p>
        <table style="margin: 20px auto 20px auto; font-family: 'Museo Sans 300';">
            <tr>
                <td style="width: 200px">Nombre de cliente:
                </td>
                <td style="width: 200px">
                    @Model.NotificacionDetalleCatalogo.NombreCliente
                </td>
            </tr>
            <tr>
                <td>Correo:
                </td>
                <td>
                    @Model.NotificacionDetalleCatalogo.CorreoCliente
                </td>
            </tr>
            <tr>
                <td>Teléfono:
                </td>
                <td>
                    @Model.NotificacionDetalleCatalogo.TelefonoCliente
                </td>
            </tr>
        </table>
        @if (Model.NotificacionDetalleCatalogo != null)
        {
            <p style="text-align: justify;">A continuación se detalla lo que el cliente ha solicitado y el precio que espera pagar.</p>                         
            <div class="divDetalleCatalogo">
                @Html.Raw(Model.NotificacionDetalleCatalogo.DetalleNotificacion)
            </div>
        }
        <br />
        <p style='font-size: 14px;'>
            Gracias,<br />
            Equipo BELCORP
        </p>
    </div>
</div>
<script type="text/javascript">
    $(".divDetalleCatalogo table tr:last td:lt(4)").css({ border: "none", background: "white" });
    $(".divDetalleCatalogo table tr:last td:gt(3)").css({ "font-family": "museo_sans_700regular", "font-size": "15px", "background": "white", "width": "90px", "color": "#009999" });    

</script>
