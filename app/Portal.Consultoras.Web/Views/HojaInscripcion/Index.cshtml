@using System.Web.Optimization
<!DOCTYPE html>

@{
    Layout = null;
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>.: Registro de Postulante :.</title>
    <link href='https://fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css'>
    @Styles.Render("~/Bundle/Css/Desktop/HojaInscripcion")
</head>
<body>
    <script> var urlActionPaso1 = '@Url.Action("Paso1")';</script>
    @Scripts.Render("~/bundles/JSHojaInscripcion")
    <script async defer type="text/javascript" src="https://maps-api-ssl.google.com/maps/api/js?v3.exp"></script>        
    <div id="load_img">
        <img src="@Url.Content("~/Content/HojaInscripcion/Images/loader.gif")" />
    </div>
    <div id="wrap_formulario">
        <h1>REGISTRO DE POSTULANTE</h1>
        <div id="wrap_tabs">
            <div data-paso="1" data-form-action="@Url.Action("RegresarAPaso1")" class="item item_color">1</div>
            <div data-paso="2" data-form-action="@Url.Action("RegresarAPaso2")" class="item">2</div>
            <div data-paso="3" class="item">3</div>
        </div>
        @if (!string.IsNullOrWhiteSpace(ViewBag.NroTicket))
        {
            <h2 style="padding-bottom: 0 !important;">Ticket: @ViewBag.NroTicket</h2>
        }
        <div id="contenedor_pais">
            <div class="field4 no-margin-bottom">Pa&iacute;s</div>
            <div class="field8 no-margin-bottom lastfield">
                @ViewBag.Pais
            </div>
        </div>
        <div id="Formulario" class="field12">
            @Html.Action("Paso1", new 
            { 
                codigoISO = ViewBag.CodigoISO,
                paisID = ViewBag.PaisID,
                fuenteIngreso = ViewBag.FuenteIngreso,
                usuarioCreacion = ViewBag.UsuarioCreacion,
            })
        </div>
        <div class="clear"></div>
    </div>
</body>
</html>
