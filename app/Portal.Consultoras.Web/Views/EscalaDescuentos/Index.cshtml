@{
    ViewBag.Title = "Escala de Descuentos";
}

<!-- Titulo -->
<div class="fondo_f9f9f9">
    <div class="content_belcorp content_belcorp_misPedidos">
        <div class="fondo_negro_lateral"></div>
        <div class="titulo_interiores">ESCALA DE <span>DESCUENTOS</span></div>
    </div>
    <hr class="clear" />
    <div class="linea_separadora" style="margin-top:-1px"></div>
</div>
<div class="pestana_lbel" style="margin-left:119px;"></div><!--PESTAÑA PARA DARLE ESTILO CON LBEL-->
<!-- Fin titulo-->

<div class="wrap_cab">
    <div class="filtros">
        <div class="elements">
            <div class="div-1">
                <div class="box">
                    <div class="box-t"></div>
                    <div class="box-c">
                        @if (ViewBag.Campania != null)
                        {
                            if (ViewBag.Dias == 0)
                            {
                            <p class="azul">Hoy es el cierre de <span>@ViewBag.Campania</span></p>
                            }
                            else
                            {
                            <p class="azul">Estás en <span>@ViewBag.Campania</span>, te quedan <strong>@ViewBag.Dias días</strong> para el cierre.</p>
                            }
                            <p>@ViewBag.MensajeCierreCampania</p>
                            //R20151104
                            if (ViewBag.TieneFechaPromesa == 1)
                            { 
                                    <p>@ViewBag.MensajeFechaPromesa</p>
                            }
                        }
                        else
                        {
                            <p>La Zona @ViewBag.CodigoZonaConsultora no se ubica en el cronograma, por favor contacte al Servicio de Atención al Cliente.</p>
                        }
                    </div>
                    <div class="box-b"></div>
                </div>
            </div>
            @*<div class="div-2">
                <h1><span>Escala de Descuentos</span></h1>
            </div>*@
        </div>
    </div>
</div>


<div class="wrap">
    <div class="container clearfix container_escalaDescuento">
        <div>
            <img src="@ViewBag.Ruta"/>
        </div>
    </div>
</div>

<div id="loadingScreen"></div>
