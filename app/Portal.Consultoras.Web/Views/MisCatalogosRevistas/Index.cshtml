@using Portal.Consultoras.Common
@using Portal.Consultoras.Web.Models
@model MisCatalogosRevistasModel

@{
    Layout = "~/Views/Shared/_MainLayoutResponsive.cshtml";
    var title = Model.Titulo;
    ViewBag.Title = title;
    ViewBag.FbCustomInit = "1";
}



<link href="@Url.Content("~/Content/Css/Site/MisCatalogosYRevistas/MisCatalogosYRevistas.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/Css/Site/jquery.tag-editor.css")" rel="stylesheet">
@if (Model.EsDispositivoMovil)
{
    <link href="@Url.Content("~/Content/Css/Mobile/RevistaDigital/Bienvenido-Pedido-Catalogo.css")" rel="stylesheet" />
}
else
{
    <link href="@Url.Content("~/Content/Css/Site/RevistaDigital/Bienvenido-Pedido-Catalogo.css")" rel="stylesheet" />
}

<input type="hidden" id="hdPaisNombre" value="@Model.PaisNombre" />
<input type="hidden" id="hdCampaniaAnterior" value="@Model.CampaniaAnterior" />
<input type="hidden" id="hdCampaniaActual" value="@Model.CampaniaActual" />
<input type="hidden" id="hdCampaniaSiguiente" value="@Model.CampaniaSiguiente" />
<input type="hidden" id="hdrCampaniaAnterior" value="@Model.CampaniaAnterior" />
<input type="hidden" id="hdrCampaniaActual" value="@Model.CampaniaActual" />
<input type="hidden" id="hdrCampaniaSiguiente" value="@Model.CampaniaSiguiente" />

<main class="w-100 row flex-column justify-content-center ml-0 mr-0 layout__main__content">

    <!-- TITULO DE VISTA CATÁLOGOS -->
    <section class="row flex-row justify-content-start ml-0 mr-0 layout__view__title__wrapper">
        <div class="col-12 pl-0 pr-0 mx-auto layout__view__title">
            <div class="layout__view__title__background mostrarEnDesktop"></div>
            <h1 class="col-12 col-lg-6 col-xl-6 pl-lg-0 pl-xl-0 pr-lg-0 pr-xl-0 row flex-column flex-lg-row flex-xl-row flex-wrap flex-lg-nowrap flex-xl-nowrap justify-content-center justify-content-lg-start justify-content-xl-start align-items-lg-center align-items-xl-center layout__view__title__text text-uppercase">

                <a href="@Request.UrlReferrer" class="d-block layout__view__title__icono__volver mostrarEnMobile">
                    <img class="d-block" src="@Url.Content("~/Content/Images/icono_volver_mobile.svg")" alt="" />
                </a>
                <span class="d-block text-bold">
                    Mis <span class="text-bold">@title</span>
                </span>
            </h1>
        </div>
    </section>
    <div class="row flex-row mx-auto pestana__lbel"></div>
    <!-- FIN - TITULO DE VISTA CATÁLOGOS -->
    <!-- TABS PARA MOSTRAR SECCIÓN CATÁLOGOS O REVISTAS -->
    <ul class="row flex-row justify-content-between ml-0 mr-0 mb-0 tabs__catalogos__revistas mostrarEnMobile">
        <li id="catalog" class="col-6 pl-0 pr-0 tab__catalogos__revistas tab__catalogos">
            <a class="d-block text-uppercase text-center" title="Catálogos">
                Catálogos
            </a>
            <div class="col-12 pl-0 pr-0 d-block indicador__catalogos__revistas indicador__catalogos__revistas--activo"></div>
        </li>

        @if (ViewBag.TieneSeccionRevista)
        {
            <li class="col-6 pl-0 pr-0 tab__catalogos__revistas tab__revistas">
                <a class="d-block text-uppercase text-center" title="Revistas">
                    Revistas
                </a>
                <div class="col-12 pl-0 pr-0 d-block indicador__catalogos__revistas"></div>
            </li>
        }


    </ul>
    <!-- FIN - TABS PARA MOSTRAR SECCIÓN CATÁLOGOS O REVISTAS -->

    <section class="row flex-row justify-content-center ml-0 mr-0 mx-auto layout__content">

        <!-- CONTENIDO DE VISTA -->
        <section class="col-12 pl-0 pr-0 contenido__seccion__catalogo">
            <div class="col-12 col-sm-8 col-md-8 col-lg-7 col-xl-7 pl-0 pr-0 text-left info__catalogos__revistas mostrarEnDesktop">
                Revisa y comparte los catálogos digitales con tus clientes.
            </div>
            <div class="col-12 pl-0 pr-0 text-center mx-auto info__catalogos__revistas mostrarEnMobile">
                Revisa y comparte los nuevos <span class="text-bold">Catálogos Digitales</span> con tus clientes.
            </div>
        </section>
        <!-- SECCIÓN CARRUSEL DE CATÁLOGOS CAMPAÑA ANTERIOR, ACTUAL Y SIGUIENTE -->
        <section class="col-12 pl-0 pr-0 row flex-row justify-content-center justify-content-lg-between justify-content-xl-between ml-lg-0 mr-lg-0 ml-xl-0 mr-xl-0 catalogos__por__campania__slider__wrapper contenido__seccion__catalogo">

            <div class="col-8 col-lg-12 col-xl-12 text-center pl-0 pr-0 catalogos__por__campania__num" id="contentCatalogo">
                <span class="text-uppercase text-bold" id="TextoCampania">Catálogos </span>
                @*<span class="text-uppercase text-bold num__campania">C17</span>*@
            </div>
            <div class="col-1 pl-0 pr-0 row flex-row justify-content-start align-items-start align-items-lg-center align-items-xl-center ml-0 mr-0 catalogos__por__campania__slider__control catalogos__por__campania__slider__control__izq">
                <a onclick="CatalogoMostrar(-1, this)" data-accion="a" class="col-12 pl-0 pr-0 text-left" title="Atrás">
                    <img class="d-inline-block" src="@Url.Content("~/Content/Images/arrow_left.svg")" alt="" />
                </a>
            </div>
            <div class="col-12 col-lg-10 col-xl-10 pl-0 pr-0 row flex-row justify-content-center ml-0 mr-0 catalogos__por__campania__item__slider" id="divSection">

            </div>

            <div id="xhtmlSection" style="display: none;">
                <section class="col-12 pl-0 pr-0 row flex-row justify-content-center ml-0 mr-0 catalogos__por__campania__item__slider" id="{sectionid}">
                    <div class="row flex-row align-items-center ml-0 mr-0 catalogos__por__campania__item__imagenes">

                        <div class="col-12 pl-0 pr-0 row flex-row align-items-center ml-0 mr-0 content_carrusel_catalogo" id={divCatalogo}>

                        </div>

                    </div>
                </section>
            </div>

            <div id="xHtmlItemCatalogo" style="display: none;">
                <div class="col-12 col-lg-3 col-xl-3 pl-0 pr-0 catalogos__por__campania__item__imagen" data-cam="{campania}" data-cat="{tipoCatalogo}" data-estado="{estado}" style="display:none;">
                    <a class="d-block mx-auto revista" data-tipo="img" href="" target="_blank">
                        <img class="d-block" src="@Url.Content("~/Content/Images/catalogo_no_disponible.jpg")" alt="" />
                    </a>
                    <div class="row flex-row justify-content-between align-items-start ml-0 mr-0 catalogos__por__campania__item__modos__compartir" data-tipo="content">

                        <div data-tipo="descrip" style="display:none;">{descripcion}</div>
                        <input id="txtUrl{tipoCatalogo}" type="hidden" value="" />

                        <a class="col-4 col-lg-6 col-xl-6 pl-0 pr-0 row flex-row justify-content-center align-items-center ml-0 mr-0 modo__compartir__catalogo modo__compartir__catalogo--whatsapp mostrarEnMobile" title="Compartir por WhatsApp" data-accion="whatsapp" onclick="RedesSociales.TagManagerWS('{comp}','{campania}');">
                            <img src="@Url.Content("~/Content/Images/mobile/Esika/catalogo_ws2.png")" alt="Compartir por WhatsApp" />
                        </a>
                        <a class="col-4 col-lg-6 col-xl-6 pl-0 pr-0 row flex-row justify-content-center align-items-center ml-0 mr-0 modo__compartir__catalogo modo__compartir__catalogo--facebook" title="Compartir por Facebook" data-accion="face" onclick="RedesSociales.CompartirFacebook('{comp}', '{campania}', this)">
                            <img src="@Url.Content("~/Content/Images/Esika/catalogo_facebook.png")" alt="Compartir por Facebook" />
                        </a>
                        <a class="col-4 col-lg-6 col-xl-6 pl-0 pr-0 row flex-row justify-content-center align-items-center ml-0 mr-0 modo__compartir__catalogo modo__compartir__catalogo--mail" title="Compartir por email" onclick="javascript: RedesSociales.AbrirCompartirCorreoActual('{tipoCatalogo}', '{campania}');">
                            <img src="@Url.Content("~/Content/Images/Esika/catalogo_mensaje.png")" alt="Compartir por email" />
                        </a>
                    </div>
                </div>
            </div>

            <div id="xhtmlSectionActual" style="display: none;">
                <section class="col-12 col-lg-10 col-xl-10 pl-0 pr-0 row flex-row justify-content-center ml-0 mr-0 catalogos__por__campania__item__slider" id="{sectionid}">
                    <div class="row flex-row flex-nowrap flex-lg-wrap flex-xl-wrap align-items-center ml-lg-0 ml-xl-0 mr-lg-0 mr-xl-0 catalogos__por__campania__item__imagenes" id={divCatalogo}>

                    </div>
                </section>
            </div>

            <div id="xHtmlItemCatalogoActual" style="display: none;">
                <div class="col-10 col-lg-3 col-xl-3 pl-0 pr-0 catalogos__por__campania__item__imagen" data-cam="{campania}" data-cat="{tipoCatalogo}" data-estado="{estado}">
                    <a class="d-block revista" data-tipo="img" href="" target="_blank">
                        <img class="d-block" src="@Url.Content("~/Content/Images/catalogo_no_disponible.jpg")" alt="" />
                    </a>
                </div>
            </div>

            <div id="xHtmlItemCatalogoPasosActual" style="display: none;">
                <div class="col-12 pl-0 pr-0 row flex-row justify-content-center justify-content-lg-between justify-content-xl-between align-items-center ml-0 mr-0 catalogos__por__campania__item__descrip">
                    <input id="txtUrlActual" value="" class="txtUrlActual" />

                    <div class="col-9 pl-0 pr-0 mostrarEnDesktop">
                        Mejoramos la manera de compartir<br />nuestros catálogos. <span class="text-bold">¡Ahora son digitales!</span>
                    </div>
                    <div class="col-8 col-lg-3 col-xl-3 pl-0 pr-0 compartir__catalogo__area">
                        <a id="btnCompartir" class="col-12 pl-0 pr-0 row flex-row ml-0 mr-0 justify-content-center text-uppercase btn__compartir btn__compartir--slider">
                            Compartir
                        </a>
                        <div class="row flex-row justify-content-around align-items-center ml-0 mr-0 mx-auto opciones__compartir__catalogos">

                            <a class="d-block col-3 col-lg col-xl pl-0 pr-0 text-center opcion__compartir__catalogo opcion__compartir__catalogo--whatsapp" title="Compartir por WhatsApp" data-accion="whatsapp" onclick="javascript: RedesSociales.CompartirWhatsAppActual('{tipoCatalogoTodo}', '{campania}', '{textourl}')">
                                <img class="d-block mx-auto" src="@Url.Content("~/Content/Images/logo_whatsapp.svg")" alt="Compartir por WhatsApp" />
                            </a>
                            <a class="d-block col-3 col-lg col-xl pl-0 pr-0 text-center opcion__compartir__catalogo opcion__compartir__catalogo--facebook" title="Compartir por Facebook" data-accion="face" onclick="javascript: CompartirFacebookActual('{tipoCatalogoTodo}', '{campania}', '{textourl}')">
                                <img class="d-block mx-auto" src="@Url.Content("~/Content/Images/logo_facebook2.svg")" alt="Compartir por Facebook" />
                            </a>
                            <a class="d-block col-3 col-lg col-xl pl-0 pr-0 text-center opcion__compartir__catalogo opcion__compartir__catalogo--facebookMessenger" title="Compartir por Facebook Messenger" data-accion="ms" onclick="javascript: RedesSociales.CompartirMessengerActual(/*'{tipoCatalogoTodo}',*/ '{campania}'/*, '{textourl}', '{isMovil}', '{FBAppId}'*/)">
                                <img class="d-block mx-auto" src="@Url.Content("~/Content/Images/logo__facebook__messenger.svg")" alt="Compartir por Facebook Messenger" />
                            </a>
                            <a class="d-block col-3 col-lg col-xl pl-0 pr-0 text-center opcion__compartir__catalogo opcion__compartir__catalogo--email" title="Compartir por Email" data-accion="mail" onclick="javascript: RedesSociales.AbrirCompartirCorreoActual('{tipoCatalogoTodo}', '{campania}');">
                                <img class="d-block mx-auto" src="@Url.Content("~/Content/Images/logo_gmail.svg")" alt="Compartir por Email" />
                            </a>
                            <a class="d-block text-center text-uppercase opcion__compartir__catalogo opcion__compartir__catalogo--copiarEnlace" title="Copiar enlace" data-accion="copiar" onclick="javascript: CopiarEnlaceActual('{tipoCatalogoTodo}', '{campania}')">
                                Copiar enlace
                            </a>
                        </div>
                    </div>
                </div>
                <div class="row flex-row justify-content-center ml-0 mr-0 mx-auto info__pasos__compartir__catalogo__campaniaActual__wrapper">
                    <div class="col-12 col-lg-7 col-xl-7 pl-lg-0 pr-xl-0 info__pasos__compartir__catalogo__campaniaActual">
                        <p class="col-12 pl-0 pr-0 text-left text-lg-center text-xl-center info__pasos__compartir__catalogo__campaniaActual__subtitulo info__pasos--parteSuperior">
                            <span class="d-block col-12 pl-0 pr-0">
                                A continuación te contamos cómo funciona :
                            </span>
                        </p>
                        <ul class="col-12 pl-0 pr-0 text-left lista__pasos__compartir__catalogo__campaniaActual">
                            <li class="row flex-row flex-nowrap flex-lg-wrap flex-xl-wrap justify-content-start align-items-start ml-0 mr-0 paso__compartir__catalogo__campaniaActual">
                                <span class="icono__paso__compartir__catalogo__campaniaActual">
                                    <img src="@Url.Content("~/Content/Images/icono_paso_compartir_catalogo.svg")" alt="" />
                                </span>
                                <span class="icono__paso__compartir__catalogo__campaniaActual__descrip">
                                    Comparte los 3 catálogos con un solo click.
                                </span>
                            </li>
                            <li class="row flex-row flex-nowrap flex-lg-wrap flex-xl-wrap justify-content-start align-items-start ml-0 mr-0 paso__compartir__catalogo__campaniaActual">
                                <span class="icono__paso__compartir__catalogo__campaniaActual">
                                    <img src="@Url.Content("~/Content/Images/icono_paso_compartir_catalogo.svg")" alt="" />
                                </span>
                                <span class="icono__paso__compartir__catalogo__campaniaActual__descrip">
                                    Tu cliente podrá seleccionar los productos directamente en el catálogo, agregarlos a su bolsa de compras y enviártelos.
                                </span>
                            </li>
                            <li class="row flex-row flex-nowrap flex-lg-wrap flex-xl-wrap justify-content-start align-items-start ml-0 mr-0 paso__compartir__catalogo__campaniaActual">
                                <span class="icono__paso__compartir__catalogo__campaniaActual">
                                    <img src="@Url.Content("~/Content/Images/icono_paso_compartir_catalogo.svg")" alt="" />
                                </span>
                                <span class="icono__paso__compartir__catalogo__campaniaActual__descrip">
                                    Te llegará una notificación cada vez que tengas un nuevo pedido y podrás aceptarlo o rechazarlo. Si lo aceptas, se agregará automáticamente a tu pase de pedido.
                                </span>
                            </li>
                        </ul>
                    </div>
                    <div class="w-100" style="position:relative;">
                        <p class="col-12 col-sm-8 col-md-8 col-lg-7 col-xl-7 pl-0 pr-0 text-center mx-auto info__pasos__compartir__catalogo__campaniaActual__subtitulo info__pasos--parteInferior">
                            <span class="d-block col-12 pl-0 pr-0 text-bold mb-14">
                                ¡Olvídate de las capturas de pantalla y las libretas, nosotros llevamos los apuntes por ti!
                            </span>
                            <span class="d-block col-12 pl-0 pr-0">
                                Empieza a compartir los catálogos digitales por los medios que más uses
                            </span>
                        </p>
                        <div class="col-12 pl-0 pr-0 background__opciones__compartir__catalogos mostrarEnMobile"></div>
                        <div class="col-12 col-lg-8 col-xl-8 pl-0 pr-0 mx-auto compartir__catalogo__area">
                            <a class="col-12 pl-0 pr-0 row flex-row ml-0 mr-0 mx-auto justify-content-center text-uppercase btn__compartir" id="btnCompartirActual">
                                Compartir
                            </a>
                            <div class="row flex-row justify-content-around align-items-center ml-0 mr-0 mx-auto opciones__compartir__catalogos">
                                <a class="d-block col-3 col-lg col-xl pl-0 pr-0 text-center opcion__compartir__catalogo opcion__compartir__catalogo--whatsapp" title="Compartir por WhatsApp" data-accion="whatsapp" onclick="javascript: RedesSociales.CompartirWhatsAppActual('{tipoCatalogoTodo}', '{campania}', '{textourl}')">
                                    <img class="d-block mx-auto" src="@Url.Content("~/Content/Images/logo_whatsapp.svg")" alt="Compartir por WhatsApp" />
                                </a>
                                <a class="d-block col-3 col-lg col-xl pl-0 pr-0 text-center opcion__compartir__catalogo opcion__compartir__catalogo--facebook" title="Compartir por Facebook" data-accion="face" onclick="javascript: CompartirFacebookActual('{tipoCatalogoTodo}', '{campania}', '{textourl}')">
                                    <img class="d-block mx-auto" src="@Url.Content("~/Content/Images/logo_facebook2.svg")" alt="Compartir por Facebook" />
                                </a>
                                <a class="d-block col-3 col-lg col-xl pl-0 pr-0 text-center opcion__compartir__catalogo opcion__compartir__catalogo--facebookMessenger" title="Compartir por Facebook Messenger" data-accion="ms" onclick="javascript: RedesSociales.CompartirMessengerActual(/*'{tipoCatalogoTodo}',*/ '{campania}'/*, '{textourl}', '{isMovil}', '{FBAppId}'*/)">
                                    <img class="d-block mx-auto" src="@Url.Content("~/Content/Images/logo__facebook__messenger.svg")" alt="Compartir por Facebook Messenger" />
                                </a>
                                <a class="d-block col-3 col-lg col-xl pl-0 pr-0 text-center opcion__compartir__catalogo opcion__compartir__catalogo--email" title="Compartir por Email" data-accion="mail" onclick="javascript: RedesSociales.AbrirCompartirCorreoActual('{tipoCatalogoTodo}', '{campania}');">
                                    <img class="d-block mx-auto" src="@Url.Content("~/Content/Images/logo_gmail.svg")" alt="Compartir por Email" />
                                </a>
                                <a class="d-block text-center text-uppercase opcion__compartir__catalogo opcion__compartir__catalogo--copiarEnlace" title="Copiar enlace" data-accion="copiar" onclick="javascript: CopiarEnlaceActual('{tipoCatalogoTodo}', '{campania}')">
                                    Copiar enlace
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-1 pl-0 pr-0 row flex-row justify-content-end align-items-start align-items-lg-center align-items-xl-center ml-0 mr-0 catalogos__por__campania__slider__control catalogos__por__campania__slider__control__der">
                <a onclick="CatalogoMostrar(1, this)" data-accion="s" class="col-12 pl-0 pr-0 text-right" title="Siguiente">
                    <img class="d-inline-block" src="@Url.Content("~/Content/Images/arrow_right.svg")" alt="" />
                </a>
            </div>
        </section>
        <!-- FIN - SECCIÓN CARRUSEL DE CATÁLOGOS CAMPAÑA ANTERIOR, ACTUAL Y SIGUIENTE -->
        <!-- SECCIÓN MI REVISTA -->
        <section class="col-12 pl-0 pr-0 row flex-row justify-content-center align-items-start ml-0 mr-0 mi__revista__y__marquesina__rd__wrapper">

            @if (Model.TieneSeccionRevista)
            {
                @Html.Partial("~/Views/MisCatalogosRevistas/template-revista-slide.cshtml",
                 new ViewDataDictionary {
                { "TieneGnd", Model.TieneGND },
                { "EsConsultoraNueva", ViewBag.EsConsultoraNueva },
                { "EsDispositivoMovil", Model.EsDispositivoMovil }
                     })
            }

            @if (Model.TieneSeccionRD)
            {
                <section class="col-12 pl-0 pr-0 expoferta_revista text-center">
                    @if (Model.EsDispositivoMovil)
                    {
                        @Html.Partial("~/Areas/Mobile/Views/Catalogo/_PartialSectionBpt.cshtml", Model.PartialSectionBpt)
                    }
                    else
                    {
                        @Html.Partial("~/Views/MisCatalogosRevistas/_PartialSectionBpt.cshtml", Model.PartialSectionBpt)
                    }
                </section>
            }

            <span id="spNroCampania" style="display: none;">@Model.CampaniaActual</span>
            <div class="titulo_central" id="numero_campania" hidden="hidden">@Model.CampaniaActual</div>

            @if (!Model.EsDispositivoMovil)
            {
                if (!ViewBag.EsConsultoraNueva)
                {
                    <div class="revista_content" id="contenedorExpofertaMCR" style="display: none;">
                        <div style="text-align: center; font-family: 'lato'; font-size: 16pt; color: black; letter-spacing: 0.25px; font-weight: 700; margin-top: 48px; margin-bottom: 28px;">EXPOFERTA C-@(Model.CampaniaActual.Substring(4, 2))</div>
                        <div id="catalogoExpoferta" class="revista_carrusel text-center">
                            <img src="@Url.Content("~/Content/Images/Esika/expoferta_c13.png")" />
                        </div>
                    </div>
                }
            }

        </section>
        <!-- FIN - SECCIÓN MI REVISTA -->
        <!-- FIN - CONTENIDO DE VISTA -->
    </section>

</main>

