
@model Portal.Consultoras.Web.Models.ConfiguracionSeccionHomeModel

<div class="parche_presentacion_contenedor" onclick="javascript: window.location.href = '@Model.UrlLandig'" 
     data-plantilla="Banner" style="background: url(@Model.ImagenFondo);
    height: 500px;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;">

    <div class="bloque-menu">
        <div class="titulo">
            <span>@Model.Titulo</span>
        </div>
        <div class="cantidad">
            <span style="display:none;">Mostrando 3 de 161</span>
        </div>
        @if (Model.VerMas)
        {
            <div class="ir">
                <a href="javascript:;" onclick="javascript: window.location.href = '@Model.UrlLandig'">VER MÁS OFERTAS</a>
            </div>
        }
        <div class="parche_clear"></div>   
    </div>
    <div class="bloque-contenido"></div>
</div>