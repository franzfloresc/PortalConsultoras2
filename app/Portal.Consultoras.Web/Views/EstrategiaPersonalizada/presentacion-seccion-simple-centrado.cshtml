
@model Portal.Consultoras.Web.Models.ConfiguracionSeccionHomeModel
<style>
    .slick-slider {
        margin-top: 15px !important;
    }
</style>
<div class="bc_plantilla_estrategia_personalizada" style="background: url(@Model.ImagenFondo); background-size: 100% 100% !important;
    background-position: center !important; min-height: 500px;">
    <div class="content_estrategia_carrusel">
        <div class="titulo">
            @if (Model.Titulo != "")
            {
                <h2>@Model.Titulo</h2>
            }
            @if (Model.VerMas)
            {
                <div class="boton-ir">
                    <a href="javascript: window.location.href = '@Model.UrlLandig'">VER MÁS OFERTAS</a>
                </div>
            }
        </div>
        <div class="clear"></div>
        <div class="contenido" data-seccion-productos=""></div>
    </div>
</div>