@using Portal.Consultoras.Common
@using Portal.Consultoras.Web.Models
@model PartialSectionBpt

@{
    ConfiguracionPaisDatosModel configuracionPaisDatosModel = Model.ConfiguracionPaisDatos;
    RevistaDigitalModel revistaDigital = Model.RevistaDigital;

    var urlLogo = revistaDigital.DLogoComercialNoActiva;
    if (revistaDigital.TieneRDC && revistaDigital.EsSuscrita)
    {
        urlLogo = revistaDigital.DLogoComercialActiva;
    }
}

@if (revistaDigital.TieneRDC)
{
    if (revistaDigital.EsSuscrita)
    {

        <div class="contenedor_ganamas">
            <div class="sb_contenedor_ganamas_bg dorado_club">

            </div>
            <div class="sb_contenedor_ganamas">
                <div class="head_gana_mas">
                    <div class="club_logo">
                        <div class="centrar_vertical">
                            <div class="centrar_cont_club">
                            </div>
                        </div>
                    </div><div class="clubtxt">
                        <div class="centrar_vertical">
                            <div class="centrar_cont_club">
                                <p style="color:white">@Html.Raw(configuracionPaisDatosModel.Valor1)</p>
                            </div>
                        </div>
                    </div><div class="club_btn">
                        <div class="centrar_vertical club_btn_dorado">
                            <div class="centrar_cont_club club_btn_dorado">
