@using Portal.Consultoras.Common
@using Portal.Consultoras.Web.Models
@model RevistaDigitalModel

@{
    ConfiguracionPaisDatosModel configuracionPaisDatosModel;
    var urlLogo = Model.DLogoComercialNoActiva;
    if (Model.TieneRDC && Model.EsSuscrita)
    {
        urlLogo = Model.DLogoComercialActiva;
    }
}

@if (Model.TieneRDC)
{

    if (Model.EsActiva)
    {
        if (Model.EsSuscrita)
        {
            configuracionPaisDatosModel = Model.ConfiguracionPaisDatos.FirstOrDefault(x => x.Codigo == Constantes.ConfiguracionPaisDatos.RD.DBienvenidaInscritaActiva) ?? new ConfiguracionPaisDatosModel();
        }
        else
        {
            configuracionPaisDatosModel = Model.ConfiguracionPaisDatos.FirstOrDefault(x => x.Codigo == Constantes.ConfiguracionPaisDatos.RD.DBienvenidaNoInscritaActiva) ?? new ConfiguracionPaisDatosModel();
        }
        <div class="home_block_rd home_rd" style="position:relative; z-index:1">
            <div class="hblock"></div>
            <div class="content_belcorp" style="background-color: black;">
                <div class="rd_logo">
                    <img src="@urlLogo" height="70" alt="">
                </div>
                <div class="hblock_text">
                    <div class="hblock_tit">@Html.Raw(configuracionPaisDatosModel.Valor1)</div>
                    <div style="width: 65%">@Html.Raw(configuracionPaisDatosModel.Valor2)</div>
                    <div class="btn_diagonal">
                        <a href="javascript:RedireccionarContenedorComprar(@Constantes.OrigenPedidoWeb.RevistaDigitalDesktopHomeSeccion, '@Constantes.ConfiguracionPais.RevistaDigital')">
                            VER TODAS MIS OFERTAS
                            <img class="rd_arrowright" src="@Url.Content("~/Content/Images/RevistaDigital/rd_arrowright.png")" alt="">
                            <img class="rd_arrowright_blanco" src="@Url.Content("~/Content/Images/RevistaDigital/rd_arrowright_blanco.png")" alt="">
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <hr class="clear" />
        <div class="" id="divListadoEstrategia2" data-origenpedidoweb="@Constantes.OrigenPedidoWeb.RevistaDigitalDesktopHomeSeccion"></div>
        <hr class="clear" />
    }
    else
    {
        if (Model.EsSuscrita)
        {
            configuracionPaisDatosModel = Model.ConfiguracionPaisDatos.FirstOrDefault(x => x.Codigo == Constantes.ConfiguracionPaisDatos.RD.DBienvenidaInscritaNoActiva) ?? new ConfiguracionPaisDatosModel();
        }
        else
        {
            configuracionPaisDatosModel = Model.ConfiguracionPaisDatos.FirstOrDefault(x => x.Codigo == Constantes.ConfiguracionPaisDatos.RD.DBienvenidaNoInscritaNoActiva) ?? new ConfiguracionPaisDatosModel();
        }
        <div class="home_block_rd home_rd1">
            <div class="content_belcorp" style="background-color: black;">
                <div class="rd_logo">
                    <img src="@urlLogo" height="70" alt="">
                </div>
                <div class="hblock_text">
                    <div class="hblock_tit">@Html.Raw(configuracionPaisDatosModel.Valor1)</div>
                    <div style="max-width: 68%">@Html.Raw(configuracionPaisDatosModel.Valor2)</div>
                    <div class="btn_diagonal">
                        <a href="javascript:RedireccionarContenedorComprar(@Constantes.OrigenPedidoWeb.RevistaDigitalDesktopHomeSeccion, 
                           '@Constantes.ConfiguracionPais.RevistaDigital')">
                            VER TODAS MIS OFERTAS
                            <img class="rd_arrowright" src="@Url.Content("~/Content/Images/RevistaDigital/rd_arrowright.png")" alt="">
                            <img class="rd_arrowright_blanco" src="@Url.Content("~/Content/Images/RevistaDigital/rd_arrowright_blanco.png")" alt="">
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <hr class="clear" />
        <div style="height: 35px; background: #fff;"></div>
        @Html.Partial("~/Views/Bienvenida/template-seccion-opt.cshtml",
            new ViewDataDictionary { { "Source", 2 }, { "NombreConsultora", Model.NombreConsultora }, { "Origen", Constantes.OrigenPedidoWeb.OfertasParaTiDesktopHome } });
    }
}
else if (Model.TieneRDR)
{
    configuracionPaisDatosModel = Model.ConfiguracionPaisDatos.FirstOrDefault(x => x.Codigo == Constantes.ConfiguracionPaisDatos.RDR.DBienvenidaRdr) ?? new ConfiguracionPaisDatosModel();
    <div class="home_block_rd home_rd" style="position:relative; z-index:1">
        <div class="hblock"></div>
        <div class="content_belcorp" style="background-color: black;">
            <div class="rd_logo">
                <img src="@urlLogo" height="70" alt="">
            </div>
            <div class="hblock_text">
                <div class="hblock_tit">@Html.Raw(configuracionPaisDatosModel.Valor1)</div>
                <div style="width: 65%">@Html.Raw(configuracionPaisDatosModel.Valor2)</div>
                <div class="btn_diagonal">
                    <a href="javascript:RedireccionarContenedorComprar(@Constantes.OrigenPedidoWeb.RevistaDigitalDesktopHomeSeccion, '@Constantes.ConfiguracionPais.RevistaDigitalReducida')">
                        VER TODAS MIS OFERTAS
                        <img class="rd_arrowright" src="@Url.Content("~/Content/Images/RevistaDigital/rd_arrowright.png")" alt="">
                        <img class="rd_arrowright_blanco" src="@Url.Content("~/Content/Images/RevistaDigital/rd_arrowright_blanco.png")" alt="">
                    </a>
                </div>
            </div>
        </div>
    </div>
    <hr class="clear" />
    <div class="" id="divListadoEstrategia2" data-origenpedidoweb="@Constantes.OrigenPedidoWeb.RevistaDigitalDesktopHomeSeccion"></div>
    <hr class="clear" />
}
else
{
    @Html.Partial("~/Views/Bienvenida/template-seccion-opt.cshtml",
            new ViewDataDictionary { { "Source", 1 }, { "NombreConsultora", Model.NombreConsultora }, { "Origen", Constantes.OrigenPedidoWeb.OfertasParaTiDesktopHome } });
}
