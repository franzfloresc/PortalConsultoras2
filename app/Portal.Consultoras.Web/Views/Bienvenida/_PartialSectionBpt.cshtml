                                    <a href="javascript:;">VER MÁS</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div style="clear:both;"></div>
                </div>
                <div class="contenido_gana_mas">
                    @if (revistaDigital.EsActiva)
                    {

                        <hr class="clear" />
