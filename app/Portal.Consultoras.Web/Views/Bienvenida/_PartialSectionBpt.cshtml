                                    <a href="javascript:;">VER MÁS OFERTAS</a>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div style="clear:both;"></div>
                </div>
                <div class="contenido_gana_mas" style="background: none;">

                    @if (revistaDigital.EsActiva)
                    {

                        <hr class="clear" />
