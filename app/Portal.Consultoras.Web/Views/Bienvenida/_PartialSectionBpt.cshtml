                             data-OrigenPedidoWeb-popup="@Constantes.OrigenPedidoWeb.RevistaDigitalDesktopHomePopUp"></div>
                        <hr class="clear" />
                        <div class="clearfix"></div>
                    }
                    else
                    {
                        @Html.Partial("~/Views/Bienvenida/template-seccion-opt.cshtml",
                            new ViewDataDictionary
                            {
                                { "Source", 3 },
                                { "NombreConsultora", revistaDigital.NombreConsultora },
                                { "Origen", Constantes.OrigenPedidoWeb.OfertasParaTiDesktopHome },
                                { "NombrePalanca", revistaDigital.NombreComercialNoActiva}
                            });
                    }

                </div>
            </div>
        </div>

