@using Portal.Consultoras.Common
@using Portal.Consultoras.Web.Models
@model PartialSectionBpt

@{
    ConfiguracionPaisDatosModel configuracionPaisDatosModel = Model.ConfiguracionPaisDatos;
    RevistaDigitalModel revistaDigital = Model.RevistaDigital;

    var urlLogo = revistaDigital.DLogoComercialNoActiva;
    if (revistaDigital.TieneRDC && revistaDigital.EsSuscrita)
    {
        urlLogo = revistaDigital.DLogoComercialActiva;
    }
}

@if (revistaDigital.TieneRDC)
{
    if (revistaDigital.EsSuscrita)
    {

        <div class="contenedor_ganamas">
            <div class="sb_contenedor_ganamas_bg dorado_club">

            </div>
            <div class="sb_contenedor_ganamas">
                <div class="head_gana_mas">
                    <div class="club_logo">
                        <div class="centrar_vertical">
                            <div class="centrar_cont_club">
                            </div>
                        </div>
                    </div><div class="clubtxt">
                        <div class="centrar_vertical">
                            <div class="centrar_cont_club">
                                <p>@Html.Raw(configuracionPaisDatosModel.Valor1)</p>@*<b>Consultoras ya suscritas ¡Ganan hasta 10% más!</b>*@
                            </div>
                        </div>
                    </div><div class="club_btn">
                        <div class="centrar_vertical club_btn_dorado">
                            <div class="centrar_cont_club club_btn_dorado">
                                <div class="activar_boton_blanco_no_animado">
                                    <a href="javascript:RedireccionarContenedorComprar(@Constantes.OrigenPedidoWeb.RevistaDigitalDesktopHomeSeccion,'@Constantes.ConfiguracionPais.RevistaDigital')">VER MÁS OFERTAS</a>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div style="clear:both;"></div>
                </div>
                <div class="contenido_gana_mas" style="background: none;">

                    @if (revistaDigital.EsActiva)
                    {

                            <hr class="clear" />
                            <div class="content_carrusel_ofertas content_carrusel_agregado" id="divListadoEstrategia" style="padding-bottom: 20px;"
                                    data-origenpedidoweb="@Constantes.OrigenPedidoWeb.RevistaDigitalDesktopHomeSeccion"
                                    data-origenpedidoweb-popup="@Constantes.OrigenPedidoWeb.RevistaDigitalDesktopHomePopUp"></div>
                            <hr class="clear" />
                            <div class="clearfix"></div>
                    }
                    else
                    {
                            @Html.Partial("~/Views/Bienvenida/template-seccion-opt.cshtml",
                                                new ViewDataDictionary {
                            { "Source", 3 },
                            { "NombreConsultora", revistaDigital.NombreConsultora },
                            { "Origen", Constantes.OrigenPedidoWeb.OfertasParaTiDesktopHome },
                            { "NombrePalanca", revistaDigital.NombreComercialNoActiva}});
                    }

                </div>
            </div>
        </div>

    }
    else
    {
        <div class="contenedor_ganamas">
            <div class="sb_contenedor_ganamas_bg">

            </div>
            <div class="sb_contenedor_ganamas">
                <div class="head_gana_mas">
                    <div class="club_logo">
                        <div class="centrar_vertical">
                            <div class="centrar_cont_club logo_no_suscrita">
                            </div>
                        </div>
                    </div><div class="clubtxt">
                        <div class="centrar_vertical">
                            <div class="centrar_cont_club">
                                <p>@Html.Raw(configuracionPaisDatosModel.Valor1)</p> @*@revistaDigital.NombreConsultora, TODAS <b>TUS OFERTAS EN UN SOLO LUGAR</b>*@
                            </div>
                        </div>
                    </div><div class="club_btn">
                        <div class="centrar_vertical">
                            <div class="centrar_cont_club">
                                <div class="activar_boton_esika_no_animado bg_activar_boton_no_animado">
                                    <a href="javascript:RedireccionarContenedorComprar(@Constantes.OrigenPedidoWeb.RevistaDigitalDesktopHomeSeccion, '@Constantes.ConfiguracionPais.RevistaDigital')">VER MÁS OFERTAS</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div style="clear:both;"></div>
                </div>
                <div class="contenido_gana_mas">
                    <!-- insertar carrusel aquí -->
                    @if (revistaDigital.EsActiva)
                    {

                        <hr class="clear" />
                        <div class="content_carrusel_ofertas content_carrusel_agregado" id="divListadoEstrategia" style="padding-bottom: 20px;"
                                data-origenpedidoweb="@Constantes.OrigenPedidoWeb.RevistaDigitalDesktopHomeSeccion"
                                data-origenpedidoweb-popup="@Constantes.OrigenPedidoWeb.RevistaDigitalDesktopHomePopUp"></div>
                        <hr class="clear" />
                        <div class="clearfix"></div>
                    }
                    else
                    {
                        @Html.Partial("~/Views/Bienvenida/template-seccion-opt.cshtml",
                                         new ViewDataDictionary {
                        { "Source", 3 },
                        { "NombreConsultora", revistaDigital.NombreConsultora },
                        { "Origen", Constantes.OrigenPedidoWeb.OfertasParaTiDesktopHome },
                        { "NombrePalanca", revistaDigital.NombreComercialNoActiva}});
                   }

                </div>
            </div>
        </div>
        

    }
}
else if (revistaDigital.TieneRDI)
{
    <div class="home_block_rd home_rd" style="position:relative; z-index:1">
        <div class="hblock"></div>
        <div class="content_belcorp" style="background-color: black;">
            <div class="rd_logo">
                <img src="@urlLogo" alt="" class="large">
            </div>
            <div class="hblock_text">
                <div class="hblock_tit">@Html.Raw(configuracionPaisDatosModel.Valor1)</div>
                <div>@Html.Raw(configuracionPaisDatosModel.Valor2)</div>
            </div>
            <div class="btn_diagonal">
                <a href="javascript:RedireccionarContenedorComprar(@Constantes.OrigenPedidoWeb.OfertasParaTiDesktopHome, '@Constantes.ConfiguracionPais.RevistaDigitalIntriga')">
                    VER TODAS MIS OFERTAS
                    <img class="rd_arrowright" src="@Url.Content("~/Content/Images/RevistaDigital/rd_arrowright.png")" alt="">
                    <img class="rd_arrowright_blanco" src="@Url.Content("~/Content/Images/RevistaDigital/rd_arrowright_blanco.png")" alt="">
                </a>
            </div>
        </div>
    </div>
    <hr class="clear" />
    @Html.Partial("~/Views/Bienvenida/template-seccion-opt.cshtml",
                                                new ViewDataDictionary {
                                                    { "NombreConsultora", revistaDigital.NombreConsultora },
                                                    { "Origen", Constantes.OrigenPedidoWeb.OfertasParaTiDesktopHome },
                                                    { "NombrePalanca", revistaDigital.NombreComercialNoActiva }
                                                                                                                    });
                                                    }
else if (revistaDigital.TieneRDR)
{
    <div class="home_block_rd home_rd" style="position:relative; z-index:1">
        <div class="hblock"></div>
        <div class="content_belcorp" style="background-color: black;">
            <div class="rd_logo">
                <img src="@urlLogo" alt="" class="large">
            </div>
            <div class="hblock_text">
                <div class="hblock_tit">@Html.Raw(configuracionPaisDatosModel.Valor1)</div>
                <div>@Html.Raw(configuracionPaisDatosModel.Valor2)</div>
            </div>
            <div class="btn_diagonal">
                <a href="javascript:RedireccionarContenedorComprar(@Constantes.OrigenPedidoWeb.RevistaDigitalDesktopHomeSeccion, '@Constantes.ConfiguracionPais.RevistaDigitalReducida')">
                    VER TODAS MIS OFERTAS
                    <img class="rd_arrowright" src="@Url.Content("~/Content/Images/RevistaDigital/rd_arrowright.png")" alt="">
                    <img class="rd_arrowright_blanco" src="@Url.Content("~/Content/Images/RevistaDigital/rd_arrowright_blanco.png")" alt="">
                </a>
            </div>
        </div>
    </div>
    <hr class="clear" />
    <div class="" id="divListadoEstrategia2" data-origenpedidoweb="@Constantes.OrigenPedidoWeb.RevistaDigitalDesktopHomeSeccion"></div>
    <hr class="clear" />
}
else
{
    @Html.Partial("~/Views/Bienvenida/template-seccion-opt.cshtml",
                                        new ViewDataDictionary {
                                            { "Source", 1 },
                                            { "NombreConsultora", revistaDigital.NombreConsultora },
                                            { "Origen", Constantes.OrigenPedidoWeb.OfertasParaTiDesktopHome },
                                            { "NombrePalanca", revistaDigital.NombreComercialNoActiva }
                                                                                                                            });
                                            }
