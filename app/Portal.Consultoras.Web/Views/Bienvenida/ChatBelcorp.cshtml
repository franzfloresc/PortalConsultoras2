@{
    Layout = null;
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-2" />
    <title>Chat Belcorp</title>
    <script src="@Url.Content("~/Scripts/jquery-1.11.2.min.js")" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            localStorage.setItem('PopUpChatOpened', 'true');
            $(window).bind("beforeunload", function() { 
                localStorage.setItem('PopUpChatOpened', 'false');
            });
        });
    </script>
</head>
<body style="overflow:hidden">
    <div style="text-align:center;">
        <iframe src='@ViewBag.UrlBelcorpChatPais' align="center" style="overflow:hidden;height:95%;width:100%" height="95%" width="100%" frameBorder="0"></iframe>
    </div>
</body>
</html>
