@model Portal.Consultoras.Web.Models.CronogramaFICModel
@{
    ViewBag.Title = "Desactivar Cronograma FIC";
}
<script>
    function LimpiarDependencias(Id) {
        var ddlRegion = $('#ddlRegion');
        var ddlZona = $('#ddlZona');
        ddlRegion.empty();
        ddlZona.empty();
        $('#chkSeleccionar').attr('checked', false);

        if (Id != "") {
            ddlZona.append($('<option/>', {
                value: "",
                text: "-- Todas --"
            }));
            ddlRegion.append($('<option/>', {
                value: "",
                text: "-- Todas --"
            }));
        } else {
            ddlZona.append($('<option/>', {
                value: "",
                text: "-- Seleccionar --"
            }));
            ddlRegion.append($('<option/>', {
                value: "",
                text: "-- Seleccionar --"
            }));
        }
    }

    // se refresca el arbol con el pais, region y zona seleccionadas
    function CargarArbol(pais, campania, zona) {
        
        waitingDialog({});
        $.jstree._reference($("#arbolRegionZona")).refresh(-1);
    }

    function Grabar() {
        waitingDialog({});
        var CronogramaFICModel = {
            Lista: []
        };
        
        // se capturan todas las consultoras seleccionadas
        var objLista;

        $("#arbolRegionZona ul li").each(function () {
            
            if (this.className == "jstree-leaf jstree-checked" ||this.className == "jstree-last jstree-leaf jstree-checked") {
                var Zona = this.attributes.codigozona.value;
                var Campania = this.attributes.codigocampania.value;
                var CodigoConsultora = this.attributes.codigoconsultora.value;
                    objLista = {
                        Zona: Zona,
                        Campania: Campania,
                        CodigoConsultora: CodigoConsultora
                    };
                    CronogramaFICModel.Lista.push(objLista);
            }
        });
        //$.jstree._reference($("#arbolRegionZona")).get_checked(null, true).each(function () {
        //    
        //    // solo para nodos de tipo hoja (leaf)
        //    if (this.className.toLowerCase().indexOf("jstree-leaf") == -1) {
        //        return true;
        //    }
        //    objLista = {
        //        Zona: this.codigozona,
        //        Campania: this.codigocampania,
        //        CodigoConsultora: this.codigoconsultora
        //    };
        //    CronogramaFICModel.Lista.push(objLista);
        //});

        // se envian los ids al servidor para ser grabados
        if (CronogramaFICModel.Lista.length == 0) {
            alert("Debe seleccionar al menos una consultora y/0 zona.");
            closeWaitingDialog();
            return false;
        }

        $.ajax({
            type: 'POST',
            dataType: 'json',
            contentType: 'application/json; charset=utf-8',
            url: baseUrl + 'CronogramaFIC/DeshabilitarConsultoras',
            data: JSON.stringify({ lista: CronogramaFICModel.Lista }),
            success: function (data) {
                
                if (checkTimeout(data)) {
                    alert(data.message);
                    $('#chkSeleccionar').attr('checked', false);
                    CargarArbol();
                    closeWaitingDialog();
                }
            },
            error: function (data, error) {
                
                if (checkTimeout(data)) {
                    closeWaitingDialog();
                    alert("Se produjo un error al realizar la modificación de cronograma");
                }
            }
        });
    }

    function fnGrilla() {
        jQuery("#list").jqGrid({
            url: baseUrl + "ModificacionCronograma/ConsultarLog",
            hidegrid: false,
            datatype: 'json',
            mtype: 'GET',
            contentType: "application/json; charset=utf-8",
            colNames: ['Código Usuario', 'Fecha', 'Región / Zona', 'Días Cronograma Anterior', 'Dias Cronograma Nuevo'],
            colModel: [
                { name: 'CodigoUsuario', index: 'CodigoUsuario', width: 30, editable: true, resizable: false },
                { name: 'Fecha', index: 'Fecha', width: 40, editable: true, resizable: false },
                { name: 'CodigosRegionZona', index: 'CodigosRegionZona', width: 100, editable: true, resizable: false },
                { name: 'DiasCronogramaAnterior', index: 'DiasCronogramaAnterior', width: 60, editable: true, resizable: false },
                { name: 'DiasCronogramaActual', index: 'DiasCronogramaActual', width: 60, editable: true, resizable: false },
            ],
            jsonReader:
                {
                    root: "rows",
                    page: "page",
                    total: "total",
                    records: "records",
                    repeatitems: true,
                    cell: "cell",
                    id: "id",
                    ISOPais: 'ISOPais'
                },
            pager: jQuery('#pager'),
            loadtext: 'Cargando datos...',
            recordtext: "{0} - {1} de {2} Registros",
            emptyrecords: 'No hay resultados',
            rowNum: 10,
            scrollOffset: 0,
            rowList: [10, 20, 30, 40, 50],
            sortname: 'Fecha',
            sortorder: 'desc',
            viewrecords: true,
            multiselect: false,
            height: 'auto',
            width: 930,
            pgtext: 'Pág: {0} de {1}',
            altRows: true,
            altclass: 'jQGridAltRowClass',
            gridComplete: function () { }
        });
        jQuery("#list").jqGrid('navGrid', "#pager", { edit: false, add: false, refresh: false, del: false, search: false });
        jQuery("#list").setGridParam({ datatype: 'json', page: 1 }).trigger('reloadGrid');
    }

    function MostrarDialogo() {
        
        fnGrilla();
        showDialog("DialogVerLog");
    }

    $(function () {
        $("#btnCancelar").click(function () {
            location.href = '@Url.Action("Index", "CronogramaFIC")';
        })

        $("#btnBuscar").click(function () {
            if ($("#ddlPais").val() == "") {
                alert("Debe seleccionar un País, verifique");
                return false;
            }
            if ($("#ddlCampania").val() == "") {
                alert("Debe seleccionar una Capamaña, verifique");
                return false;
            }

            if ($("#ddlZona").val() == "") {
                alert("Debe seleccionar una Zona, verifique");
                return false;
            }

            $('#chkSeleccionar').attr('checked', false);
            CargarArbol();

        });

        $("#arbolRegionZona").jstree({
            json_data: {
                //data: treeModel
                ajax: {
                    url: baseUrl + "CronogramaFIC/CargarArbolRegionesZonas",
                    //async: true,
                    data: function (n) {
                        
                        return { PaisID: $("#ddlPais").val(), Codigocampaña: $("#ddlCampania").val(), ZonaID: $("#ddlZona").val() };
                    },
                    type: "GET",
                    error: function (XMLHttpRequest, textStatus, errorThrown) {
                        
                    },
                    success: function (data, textStatus, jqXHR) {
                        
                    },
                    complete: function () {
                        
                        $("#arbolRegionZona").jstree("set_theme", "apple", "@Url.Content("~/Content/Css/jstree/apple/stylejstree.css")");
                        closeWaitingDialog();
                    }
                }
            },
            //checkbox: {
            //    real_checkboxes: true,
            //    real_checkboxes_names: function (n) {
            //        return [("check_" + (n[0].id || Math.ceil(Math.random() * 10000))), n[0].id]
            //    }
            //},
            "themes": {
                "theme": "apple",
                "dots": true,
                "icons": false
            },
            plugins: ["themes", "json_data", "ui", "checkbox"]
        });
        //.bind("loaded.jstree", function (event, data) {
        //    $('#demoTree').jstree('check_node', 'li[selected=selected]');
        //});

        $('#txtDiasDuracionCronograma').val("1");

        $('#txtDiasDuracionCronograma').keyup(function (evt) {
            var theEvent = evt || window.event;
            var key = theEvent.keyCode || theEvent.which;
            key = String.fromCharCode(key);
            var regex = /[1-9]|\./;
            if (!regex.test(key)) {
                theEvent.returnValue = false;
                if (theEvent.preventDefault) theEvent.preventDefault();
            }
        });

        $('#txtDiasDuracionCronograma').keypress(function (e) {
            if (e.which != 8 && e.which != 0 && (e.which < 49 || e.which > 57)) {
                return false;
            }
        });

        $("#chkSeleccionar").click(function () {
            
            //alert(this.checked);
            //$.jstree._reference($("#arbolRegionZona")).check_all();
            if (this.checked)
                //$.jstree._reference($("#arbolRegionZona")).get_checked(null, true)
                $.jstree._reference($("#arbolRegionZona")).check_all();
            else
                $.jstree._reference($("#arbolRegionZona")).uncheck_all();
        });
    });
</script>

<div class="wrap_cab">
    <div class="filtros">
        <div class="elements">
            <div class="div-2">
                <h1>Desactivar <span>Cronograma FIC</span></h1>
