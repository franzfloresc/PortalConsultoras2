@using System.Web.Optimization;
@{
    Layout = null;
    ViewBag.Title = "Verifica Tu Autenticidad";
}

<!DOCTYPE html>
<html lang="es" class="no-js">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=10,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <meta name="description" content="Portal de consultoras" />
    <meta name="author" content="Belcorp" />
    <title>Somos Belcorp ::: Verificación de Autenticidad</title>
    <link href="https://fonts.googleapis.com/css?family=Lato:300,300i,400,400i,700,700i,900" rel="stylesheet" type="text/css">
    @if (System.Configuration.ConfigurationManager.AppSettings.Get("PaisesEsika").Contains(ViewBag.PaisAnalytics == null ? "" : ViewBag.PaisAnalytics))
    {
        <link rel="stylesheet" href="@Url.Content("~/Content/Css/Site/Esika/styleDefault.css")">
        <link rel="stylesheet" href="@Url.Content("~/Content/Css/Site/Esika/verificacion-pin.css")">
    }
    else
    {
        <link rel="stylesheet" href="@Url.Content("~/Content/Css/Site/Lbel/styleDefault.css")">
        <link rel="stylesheet" href="@Url.Content("~/Content/Css/Site/Lbel/verificacion-pin.css")">
    }
    @Styles.Render("~/Content/Css/Login")    
</head>
<body>
    <div class="fondo_f9f9f9">
        <div class="content_belcorp">
            <div class="fondo_negro_lateral"></div>
            <div class="titulo_interiores">
                <div class="pestana_lbel"></div>
                <a href="#" title="Volver" class="v-alignMiddle enlace_volver_mobile">
                    <img src="@Url.Content("~/Content/Images/icono_volver_mobile.svg")" alt="" />
                </a>
                <div class="inline-block v-alignMiddle">
                    <span class="text-bold">VERIFICA</span> TU AUTENTICIDAD
                </div>
            </div>
        </div>
        <hr class="clear" />
        <div class="linea_separadora" style="margin-top:-10px"></div>
    </div>
    @{ 
        var OpcionSms = true;
        var OpcionEmail = true;
        if (Model.MostrarOpcion == 2) { OpcionSms = false; }
        if (Model.MostrarOpcion == 3) { OpcionEmail = false; }
    }

    <section class="block vista_flujo_restablecer_contrasenia">
        <div class="block center-block wrapper_content_verificacion_autenticidad">
            <div class="block">
                <a id="divVolver" title="Volver" class="block enlace_volver_a_mi_perfil text-uppercase text-bold">
                    <span class="inline-block v-alignMiddle icono_back_arrow">
                        <img src="@Url.Content("~/Content/Images/icono_volver.svg")" alt="Volver" />
                    </span>
                    <span class="inline-block v-alignMiddle enlace_texto">Volver</span>
                </a>
                <!-- OPCIONES DE VERIFICACIÓN DE AUTENTICIDAD -->
                <div id="divPaso1" class="block opciones_verificacion_autenticidad">
                    <div class="block mt-20-mobile">
                        <p class="block texto_verificacion_datos">
                            <span class="block">¡Bienvenida @Model.PrimerNombre! </span>
                            <span class="block" style="display:none;">¡Nos alegra que hayas vuelto!</span>
                        </p>
                        <p class="block texto_verificacion_datos">
                            <span class="block">@Model.MensajeSaludo</span>
                            @*<span class="block" style="display:none;">Como hace tiempo que no sabíamos de ti, por tu seguridad vamos a verificar tus datos.</span>*@
                        </p>
                        <p class="block texto_verificacion_datos">
                            <span class="block">Elige la opción que desees:</span>
                        </p>
                    </div>
                    <div class="block center-block lista_opciones_verificacion_autenticidad">
                        @{
                            if (OpcionSms)
                            {
                                <a title="Opción Sms" class="block opcion_verificacion_autenticidad RecuperarPorSms">
                                    <div class="inline-block v-alignMiddle icono_opcion_verificacion_autenticidad icono_opcion_sms"></div>
                                    <div class="inline-block v-alignMiddle datos_verificacion_autenticidad">
                                        <div class="block text-uppercase">Mensaje de texto (sms)</div>
                                        <div class="block text-bold">@Model.CelularEnmascarado</div>
                                    </div>
                                    <div class="divTiempoRestanteSms" style="display:none; margin-top: 15px; font-size: 12px; text-align:center;">@ViewBag.MensajeOpcionCelular</div>
                                </a>
                            }
                            if (OpcionEmail)
                            {
                                <a title="Opción Correo" class="block opcion_verificacion_autenticidad RecuperarPorCorreo">
                                    <div class="inline-block v-alignMiddle icono_opcion_verificacion_autenticidad icono_opcion_correo"></div>
                                    <div class="inline-block v-alignMiddle datos_verificacion_autenticidad">
                                        <div class="block text-uppercase">Correo Electrónico</div>
                                        <div class="block text-bold">@Model.CorreoEnmascarado</div>
                                    </div>
                                    <div class="divTiempoRestanteCorreo" style="display:none; margin-top: 15px; font-size: 12px; text-align:center;">@ViewBag.MensajeOpcionCorreo</div>
                                </a>
                            }
                        }
                    </div>
                    @{ if (Model.OpcionChat)
                        {
                            <div class="block">
                                <p class="texto_alternativa_call_center block">
                                    <span class="inline-block v-alignMiddle">
                                        Si no reconoces tu celular o correo, comunícate con nuestro
                                        <a title="Chat" id="aChatearConNosotros" class="inline-block v-alignBottom enlace_call_center text-bold">Chat</a>
                                    </span>
                                </p>
                            </div>
                        }
                    }

                </div>
                <!-- FIN - OPCIONES DE VERIFICACIÓN DE AUTENTICIDAD -->
                <!-- VERIFICACIÓN POR CÓDIGO SMS -->
                <div id="divPaso2sms" class="block revisa_tu_celular text-center" style="display:none;">
                    <h1 class="block center-block mt-20-mobile titulo_revisa_tu_celular text-uppercase mb-13">
                        Revisa <span class="text-bold">tu celular</span>
                    </h1>
                    <div class="block center-block icono_mensaje_sms"></div>
                    <p class="w-100 envio_instrucciones_info block mb-35">
                        <span class="w-100 block mb-7">Te hemos enviado un código SMS al:</span>
                        <span class="w-100 block text-bold font-size-17">@Model.CelularEnmascarado</span>
                    </p>
                    <div class="area_ingreso_codigo_sms block mb-35 mb-20-mobile">
                        <div class="block texto_ingreso_codigo text-uppercase text-bold">Ingresa el código aquí</div>
                        <fieldset class="block center-block campos_ingreso_codigo_sms">
                            <input id="1sDigito" data-tipo="1" class="inline-block v-alignBottom campo_ingreso_codigo_sms text-center" type="text" maxlength="1" />
                            <input id="2sDigito" data-tipo="1" class="inline-block v-alignBottom campo_ingreso_codigo_sms text-center" type="text" maxlength="1" />
                            <input id="3sDigito" data-tipo="1" class="inline-block v-alignBottom campo_ingreso_codigo_sms text-center" type="text" maxlength="1" />
                            <input id="4sDigito" data-tipo="1" class="inline-block v-alignBottom campo_ingreso_codigo_sms text-center" type="text" maxlength="1" />
                            <input id="5sDigito" data-tipo="1" class="inline-block v-alignBottom campo_ingreso_codigo_sms text-center" type="text" maxlength="1" />
                            <input id="6sDigito" data-tipo="1" class="inline-block v-alignBottom campo_ingreso_codigo_sms text-center" type="text" maxlength="1" />
                            <div class="IconoError block icono_validacion_codigo_sms validacion_erronea"></div>
                        </fieldset>
                        <div class="block codigo_sms_caducidad text-uppercase">El código caduca en <span class="spnMin default-color">03</span>:<span class="spnSeg default-color">00</span></div>
                        <div class="reenvios" style="display:none;"><b>Agotaste tus dos intentos de reenvío</b></div>
                    </div>
                    <p class="w-100 envio_instrucciones_info block mb-35 mb-20-mobile">
                        <span class="w-100 block mb-13">¿Aún no recibes el mensaje de texto?</span>
                        <a id="linkRenviarSms" title="Reenvíenme el código" class="block enlace_reenviar_instrucciones w-100 mb-10 text-uppercase text-bold RecuperarPorSms" style="cursor:pointer;">
                            Reenvíenme el código
                        </a>
                        <a title="Escoger otra opción" style="display:none;color:red;cursor:pointer;" class="block escogeOtraOpcion default-color enlace_reenviar_instrucciones w-100 text-uppercase text-bold">
                            Escoger otra opción
                        </a>
                    </p>
                </div>
                <div id="divPaso3sms" class="block celular_validado text-center" style="display:none;">
                    <div class="block center-block mt-20-mobile icono_validacion_celular_exitosa"></div>
                    <h1 class="block center-block titulo_celular_validado text-uppercase">
                        ¡Validamos<br /><span class="text-bold">tu celular</span>!
                    </h1>
                    <p class="block mensaje_celular_validado">
                        Continúa visitando somosbelcorp.com<br />y descubre todas la ofertas que tenemos para ti.
                    </p>
                    <p class="block mensaje_celular_validado mb-45 mb-33-mobile">
                        Te recomendamos además actualizar tu contraseña por tu seguridad.
                    </p>
                    <a  class="block center-block mb-20-mobile enlace_ir_a_somos_belcorp text-uppercase text-bold default-background-color mb-31 aContinuarLogin">Ir a somos belcorp</a>
                    <a  title="Actualizar contraseña" class="block enlace_actualizar_contrasenia text-bold aContinuarLogin">Actualizar contraseña</a>
                </div>
                <!-- FIN - VERIFICACIÓN POR CÓDIGO SMS -->
                <!-- VERIFICACIÓN POR CORREO ELECTRÓNICO -->
                <div id="divPaso2Email" class="revisa_tu_correo block text-center" style="display:none;">
