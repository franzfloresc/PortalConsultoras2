    var EsMobile = '@Model.EsMobile';
    var VerCambioClaveMobile = '@Url.Action("Index", "MisDatos", new { area = "Mobile" })';
</script>

@Scripts.Render("~/Bundle/Js/Mixto/Login-VerificaAutenticidad")

@{
    <script type="text/javascript" src="@Url.Content("~/emt_chat/js/inject.js")"></script>
}


