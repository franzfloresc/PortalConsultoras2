    <script>
        window.fbAsyncInit = function () {
            FB.init({
                appId: fbAppId,
                xfbml: true,
                version: 'v2.8'
            });

            FB.getLoginStatus(function (response) {
                if (response.status === 'connected') {
                    console.log('Logged in.');
                    getInfoFB(2);
                }
                //else {
                //    FB.login();
                //}
            });
        };

        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) { return; }
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/en_US/sdk.js";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));

        function loginFB() {
            FB.login(function (response) {
                if (response.status === 'connected') {
                    console.log('We are connected.');
                    getInfoFB(1);
                }
                else if (response.status === 'not_authorized') {
                    console.log('We are not logged in.');
                }
                else {
                    console.log('You are not logged into Facebook.');
                }
            }, { scope: 'public_profile,email,user_birthday,user_location' });
        }

        function getInfoFB(opt) {
            FB.api('/me', 'GET', { fields: 'birthday,email,first_name,gender,hometown,id,last_name,link,location,name,picture' }, function (response) {
                console.log(response);
                if (response.id != null) {
                    if (opt == 1) {
                        validExternalUser('Facebook', response);
                    }
                    else if (opt == 2) {
                        $('#btnLoginFB').text("Continuar como " + response.name);
                    }
                }
            });
        }

        function validExternalUser(provider, data) {
            // prevent submit
            $('#ddlPais option:not(:selected)').prop('disabled', true);
            $('#txtUsuario').attr('readonly', true);
            $('#txtContrasenia').attr('readonly', true);
            $('#btnLogin').prop('disabled', true);

            var obj = {
                codigoISO: $('#ddlPais').val(),
                provider: provider,
                idapp: data.id
            };

            $.ajax({
                type: 'POST',
                url: '/Login/ValidExternalUser',
                data: JSON.stringify(obj),
                contentType: 'application/json; charset=utf-8',
                dataType: 'json',
                success: function (response) {
                    console.log(response);
                    if (response.success) {
                        if (!response.exists) {
                            $('#hdeProveedor').val(provider);
                            $('#hdeIdApp').val(data.id);
                            $('#hdeLogin').val(data.name);
                            $('#hdeNombres').val(data.first_name);
                            $('#hdeApellidos').val(data.last_name);
                            $('#hdeFechaNacimiento').val(data.birthday);
                            $('#hdeCorreo').val(data.email);
                            $('#hdeGenero').val(data.gender);
                            $('#hdeUbicacion').val(data.location);
                            $('#hdeLinkPerfil').val(data.link);
                            $('#hdeFotoPerfil').val(data.picture.data.url);

                            $('#btnLoginFB').hide();
                            $('#spnLoginFB').text(data.name);
                            $('#divAsociarLoginExterno').show();

                            // disable prevent submit
                            $('#ddlPais option:not(:selected)').prop('disabled', false);
                            $('#txtUsuario').attr('readonly', false);
                            $('#txtContrasenia').attr('readonly', false);
                            $('#btnLogin').prop('disabled', false);
                        }
                        else {
                            if (response.redirectTo != null) {
                                document.location.href = response.redirectTo;
                            }
                        }
                    }
                    else {
                        console.log(response);
                        alert("Error al procesar la solicitud")
                    }
                },
                error: function (response) {
                    console.log(response);
                    alert("Error al procesar la solicitud");
                }
            });
        }

    </script>
