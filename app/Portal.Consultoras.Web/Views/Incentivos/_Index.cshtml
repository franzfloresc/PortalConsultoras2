@model Portal.Consultoras.Web.Models.IncentivosModel
@{
    ViewBag.Title = "Incentivos";
}

<script type="text/javascript">
    function SetGoogleAnalytics(NombreImagen)
    {
        _gaq.push(['_trackEvent', 'Incentivo', 'Link', NombreImagen]);
        _gaq.push(['_trackEvent', 'Incentivo', 'Link']);
        dataLayer.push({
            'event': 'pageview',
            'virtualUrl': '/Incentivo/Link/' + NombreImagen
        });
    }
</script>

<div class="wrap_cab">
    <div class="filtros">
        <div class="elements">
            <div class="div-1">
                <div class="box">
                    <div class="box-t"></div>
                    <div class="box-c">
                        @if (ViewBag.Campania != null)
                        {
                            if (ViewBag.Dias == 0)
                            {
                            <p class="azul">Hoy es el cierre de <span>@ViewBag.Campania</span></p>
                            }
                            else
                            {
                            <p class="azul">Estás en <span>@ViewBag.Campania</span>, te quedan <strong>@ViewBag.Dias días</strong> para el cierre.</p>
                            }
                            <p>@ViewBag.MensajeCierreCampania</p>
                        }
                        else
                        {
                            <p>La Zona @ViewBag.CodigoZonaConsultora no se ubica en el cronograma, por favor contacte al Servicio de Atención al Cliente.</p>
                        }
                    </div>
                    <div class="box-b"></div>
                </div>
            </div>
            <div class="div-2">
                <h1>Incentivos</h1>
            </div>
        </div>
    </div>
</div>

<div class="wrap">
    <div class="container clearfix">
        <div>
            @if (Model.listaIncentivos != null && Model.listaIncentivos.Count() > 0)
            {
                foreach (var incentivo in Model.listaIncentivos)
                {                    
                <div class="modulo_incentivo">
                    @Html.Hidden("IncentivoID", incentivo.IncentivoID)
                    <div class="modulo_incentivo_img">
                        @if (!string.IsNullOrEmpty(incentivo.ArchivoPDF))
                        {
                            <!-- a href='@Url.Content("~/Content/FileConsultoras/" + incentivo.ArchivoPDF)' target="_blank">
                                @*<img src="~/Content/Images/incentivos.png" alt="" />*@
                                <img src='@Url.Content("~/Content/Incentivos/" + Model.ISO + "/" + incentivo.ArchivoPortada)' alt="Logo Incentivo" width="210", height="282" onclick="SetGoogleAnalytics('@incentivo.ArchivoPortada')" />
                            </!a--> 
                            <!-- 1664 -->
                            <a href='@incentivo.ArchivoPDF' target="_blank">
                                @*<img src="~/Content/Images/incentivos.png" alt="" />*@
                                <img src='@incentivo.ArchivoPortada' alt="Logo Incentivo" width="210", height="282" onclick="SetGoogleAnalytics('@incentivo.ArchivoPortada')" />
                            </a>
                        }
                        else
                        {
                            <!-- a href='@incentivo.Url' target="_blank">
                                <img src='@Url.Content("~/Content/Incentivos/" + Model.ISO + "/" + incentivo.ArchivoPortada)' alt="Logo Incentivo" width="210", height="282" onclick="SetGoogleAnalytics('@incentivo.ArchivoPortada')" />
                            </!a-->  
                            <!-- 1664 -->
                            <a href='@incentivo.Url' target="_blank">
                                <img src='@incentivo.ArchivoPortada' alt="Logo Incentivo" width="210", height="282" onclick="SetGoogleAnalytics('@incentivo.ArchivoPortada')" />
                            </a> 
                        }
                    </div>
                    <div class="modulo_incentivo_des">
                        @incentivo.Titulo
                        <span>@incentivo.Subtitulo</span>
                    </div>
                </div>
                }
            }
            else
            {
            }
        </div>
    </div>
</div>
