        $("#fpUpload").empty();
        imagen = '';
        var cuv = $.trim($("#txtCUVSugeridoModal").val());
        var campaniaID = $.trim($("#ddlCampaniaModal").val());
        if (cuv == "" || campaniaID == "") {
            return false;
        }

        waitingDialog({});
