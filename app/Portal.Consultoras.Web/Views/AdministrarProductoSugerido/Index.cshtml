                    }
                }
            },
            "themes": {
                "theme": "apple",
                "dots": true,
                "icons": false
            },
            plugins: ["themes", "json_data", "ui", "checkbox"]
        });
        return false;
    }

    function GetZonas(obj) {
        //var obj = $("#arbolRegionZona");
        var zonas = "";
        $.jstree._reference(obj).get_checked(null, true).each(function () {
            if (this.className.toLowerCase().indexOf("jstree-leaf") == -1) {
                return true;
            }
            zonas += this.id + ",";
        });
        if (zonas != "") {
            zonas = zonas.substring(0, zonas.length - 1);
        }

        return zonas;
    }
