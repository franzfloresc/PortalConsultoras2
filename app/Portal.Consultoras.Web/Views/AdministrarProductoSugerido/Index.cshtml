                                if (this.className.toLowerCase().indexOf("jstree-leaf") == -1) {
                                    return true;
                                }
                                $("#chkSeleccionarModal").attr("checked", false);
                            });
                        } else {
                            $.jstree._reference($("#arbolRegionZonaModal")).check_all();
                            $.jstree._reference($("#arbolRegionZonaModal")).get_checked(null, true).each(function () {
                                if (this.className.toLowerCase().indexOf("jstree-leaf") == -1) {
                                    return true;
                                }
                            });
                            $("#chkSeleccionarModal").attr("checked", true);
                        }
