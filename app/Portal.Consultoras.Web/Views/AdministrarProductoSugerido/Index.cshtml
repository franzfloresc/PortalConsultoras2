                if (data.success == true) {
                    HideDialog("DialogRegistroProductoSugerido");
                    RegistroLimpiar();
                    $("#btnBuscar").click();
                }
            },
            error: function (data, error) {
                if (checkTimeout(data)) {
                    alert(data.message);
                    HideDialog("DialogRegistroProductoSugerido");
                }
            }
        });

    }

