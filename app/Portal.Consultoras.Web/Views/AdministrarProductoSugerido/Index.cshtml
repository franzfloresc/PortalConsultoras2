                var Edit = rowObject[4] + "&nbsp;<a class='jqGridMessageZona' href='javascript:;' onclick=\"VerMas(this,'" + rowObject[3] + "','" + rowObject[4] + "');\" > ...Ver mas" + "</a>";
            }
            else {
                var Edit = rowObject[3];
            }
            return Edit;
        };



    }

    function VerMas(object, CodigoCompleto, CodigoIncompleto) {
