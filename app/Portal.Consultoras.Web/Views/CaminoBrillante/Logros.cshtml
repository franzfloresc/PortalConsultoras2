
@{
    Layout = "~/Views/Shared/_MainLayoutResponsive.cshtml";
    var data = ViewBag.Informacion;
}

@section css{
    <link href="~/Content/CaminoBrillante/css/estilos.css" rel="stylesheet" />
}

<section data-layout="ubicacionWeb" class="row flex-row ml-0 mr-0 layout__view__breadcrumbs__wrapper mostrarEnDesktop">
    <div class="col-12 pl-0 pr-0 mx-auto layout__view__breadcrumbs">
        <ul class="row flex-row align-items-center ml-0 mr-0 layout__view__lista__breadcrumbs">
            <li class="layout__view__breadcrumb">
                <a href="/Bienvenida" class="d-block" title="Home">Home</a>
            </li>
            <li class="layout__view__breadcrumb">
                <a href="/CaminoBrillante" class="d-block" title="CaminoBrillante">Camino Brillante</a>
            </li>
            <li class="layout__view__breadcrumb layout__view__breadcrumb--active__view">
                <span class="d-block">@ViewBag.Vista</span>
            </li>
        </ul>
    </div>
</section>

<br />
<div class="container">
    <h2 class="title">@data.Titulo</h2>
    <div class="contain-camb">

        @for (int i = 0; i < data.Indicadores.Length; i++)
        {
            <div class="box-camb">
                <p class="text-bold">@data.Indicadores[i].Titulo</p>
                <div class="cambio-crec">
                    @{
                        var NombreModal = 1;
                    }
                    @foreach (var item2 in data.Indicadores[i].Medallas)
                    {
                        if (item2 != null)
                        {
                    <div class="itm">
                        @if (item2.Tipo == "PIE")
                        {
                            string[] torta = item2.Valor.Split('-');
                            var imagen = torta[1].PadLeft(2, '0') + "_" + torta[2].PadLeft(2, '0') + ".svg";
                            <div class="circle-porcent imgpizz">
                                <img src="~/Content/CaminoBrillante/imgs/PIZZA_@imagen" />
                            </div>
                        }
                        else if (item2.Tipo == "CIRC")
                        {
                            string Estilo = item2.Estado ? "crec-activo" : "crec-inactivo";
                            <div class="circle-porcent @Estilo">
                                <span>@item2.Valor</span>
                            </div>
                        }
                        else if (item2.Tipo == "NIV")
                        {
                            if (Portal.Consultoras.Common.Constantes.CaminoBrillante.Niveles.Iconos.Keys.Contains((string)item2.Valor))
                            {
                                int estado = item2.Estado ? 1 : 0;
                                <div class="circle-porcent imgpizz">
                                    <img src='@Portal.Consultoras.Common.Constantes.CaminoBrillante.Niveles.Iconos[(string)item2.Valor][estado]'>
                                </div>
                            }
                            else
                            {
                                <img src=''>
                            }
                        }
                        else if (item2.Tipo == "PED")
                        {
                            if (item2.Estado)
                            {
                                <img src="~/Content/CaminoBrillante/imgs/pedido_activo.svg" />
                            }
                            else
                            {
                                <img src="~/Content/CaminoBrillante/imgs/pedido_desactivo.svg" />
                            }
                        }
                        else if (item2.Tipo == "TIME")
                        {
                            if (item2.Estado)
                            {
                                <img src="~/Content/CaminoBrillante/imgs/Tiempojuntos_activo.svg" />
                            }
                            else
                            {
                                <img src="~/Content/CaminoBrillante/imgs/Tiempojuntos_inactivo.svg" />
                            }
                        }

                        @if (item2.Tipo != "NIV")
                        {
                            <a href="#" class="inactivo">@item2.Titulo</a>
                        }

                        @if (@item2.Subtitulo == "¡Ya lo tienes!")
                        {
                            <span class="como-log inactivo">@item2.Subtitulo</span>
                        }
                        else
                        {
                            <span data-toggle="modal" data-target="#Modal-@data.Indicadores[i].Codigo-@NombreModal" class="como-log" onclick="ComoLograrlo('@Html.Raw(data.Titulo)','@Html.Raw(data.Indicadores[i].Titulo)','@Html.Raw(item2.ModalTitulo)','@Html.Raw(item2.ModalDescripcion)')">@item2.Subtitulo</span>

                            if (@item2.ModalTitulo == null || item2.ModalTitulo == "" ||  item2.ModalDescripcion == null || item2.ModalDescripcion == "")
                            {

                            } else

                            {
                                <div class="modal fade" id="Modal-@data.Indicadores[i].Codigo-@NombreModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" onloadeddata="PopupComoLograrlo('@Html.Raw(data.Titulo)','@Html.Raw(data.Indicadores[i].Titulo)')">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="CerrarComoLograrlo('@Html.Raw(data.Titulo)','@Html.Raw(data.Indicadores[i].Titulo)')">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                            <div class="modal-body pad-center">
                                                <div class="indicador-nivel">
                                                    @if (item2.Tipo == "PED")
                                {
                                                        <div class="circle-porcent imgpizz">
                                                            <img src="~/Content/CaminoBrillante/imgs/pedido_activo.svg" />
                                                        </div>
                                                    }
                                                    else if (item2.Tipo == "PIE")
                                                    {
                                                        string[] torta = item2.Valor.Split('-');
                            var imagen = torta[1].PadLeft(2, '0') + "_" + torta[2].PadLeft(2, '0') + ".svg";
                                                        <div class="circle-porcent imgpizz">
                                                            <img src="~/Content/CaminoBrillante/imgs/PIZZA_@imagen" />
                                                        </div>
                                                    }
                                                    else if (item2.Tipo == "NIV")
                                                    {
                                                        if (Portal.Consultoras.Common.Constantes.CaminoBrillante.Niveles.Iconos.Keys.Contains((string)item2.Valor))
                                                        {
                                                            <div class="circle-porcent imgpizz">
                                                                <img src='@Portal.Consultoras.Common.Constantes.CaminoBrillante.Niveles.Iconos[(string)item2.Valor][1]'>
                                                            </div>
                                                        }
                                                        else
                                                        {
                                                            <img src=''>
                                                        }
                                                    }
                                               
                                                    <div class="left-mod">
                                                        <h2>@item2.ModalTitulo</h2>
                                                        <p>@Html.Raw(item2.ModalDescripcion)</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                        }
                        NombreModal = NombreModal + 1;
                    }
                </div>
            </div>
        }
    </div>
</div>

<script>

</script>

@section scripts{
    <script src="~/Scripts/jquery-1.11.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/PortalConsultoras/CaminoBrillante/logros.js"></script>