@{
    ViewBag.Title = "Index";
}
<link href="~/Content/CaminoBrillante/css/estilos.css" rel="stylesheet" />
<link href="~/Scripts/owl.carousel.2.0.0-beta.2.4/assets/owl.carousel.css" rel="stylesheet" />



@section styles{
    @System.Web.Optimization.Styles.Render("~/Bundle/Css/CaminoBrillante")
}
<br />

<div class="container ">
    <h2 class="title">AVANCE NIVEL</h2>
    <div id="box-niveles">
        <div id="ProgressBar">
        </div>
    </div>

    <div class="modal fade" id="BenefNivel" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <div class="modal-body pad-center">
                    <div class="indicador-nivel">
                        <img id="m_imagen" src="~/Content/CaminoBrillante/imgs/recurso-31-3-x-copy-5@2x.png" />
                        <div class="left-mod">
                            <h2 id="m_titulo"></h2>
                            <p id="m_montoMinimo"></p>
                        </div>
                    </div>
                    <h4 class="subtitle text-center">Mis Beneficios</h4>
                    <ul class="box-beneficios two-colums" id="ListaBeneficios"></ul>
                    <a href="" class="btn-principal"><em class="icon-niv"></em>Como subir de nivel <span>1</span></a>
                </div>
            </div>
        </div>
    </div>
    <div class="cont-benf" id="BeneficiosPrincipal">
    </div>
    <a id="OfertasEspeciales" class="btn-principal">Ofertas especiales</a>
    <div class="cont-logros">
        <h2 class="title">MIS LOGROS</h2>
        <p class="text">Mira los logros que has obtenido por ventas y pasar pedidos de forma constante, tu esfuerzo tiene recompensas</p>
        <div class="boxcenter">
            <div class="owl-carousel owl-crec">
                <div class="item">
                    <div class="shad box-crecimiento">
                        <p class="text-bold">Crecimiento</p>
                        <span class="text-down">Tu progreso tiene recompensas</span>
                        <ul class="list-crec">
                            <li>
                                <img src="~/Content/CaminoBrillante/imgs/recurso-17-3-x@2x.png">
                                <p>Ganancia</p>
                            </li>
                            <li>
                                <img src="~/Content/CaminoBrillante/imgs/recurso-18-3-x@2x.png">
                                <p>Ganancia</p>
                            </li>
                            <li>
                                <img src="~/Content/CaminoBrillante/imgs/recurso-19-3-x@2x.png">
                                <p>Ganancia</p>
                            </li>
                        </ul>
                        <a href="" class="btn-link">Ver todos</a>
                    </div>
                </div>
                <div class="item">
                    <div class="shad box-compromiso">
                        <p class="text-bold">Compromisos</p>
                        <span class="text-down">Pasar pedidos tiene recompesas</span>
                        <ul class="list-crec">
                            <li>
                                <img src="~/Content/CaminoBrillante/imgs/icono-2.png">
                                <p>Del 1 al 6</p>
                            </li>
                            <li>
                                <img src="~/Content/CaminoBrillante/imgs/icono-2.png">
                                <p>Del 6 al 12</p>
                            </li>
                            <li>
                                <img src="~/Content/CaminoBrillante/imgs/icono-2.png">
                                <p>Del 12 al 18</p>
                            </li>
                        </ul>
                        <a href="" class="btn-link">Ver todos</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="cont-ganancias">
        <div class="left-ganancias">
            <h2 class="title">MIS GANANCIAS</h2>
            <p class="text">Mira las ganancias que has obtenido durante una campaña o en lo que va del año</p>
            <ul class="list-ganacias">
                <li class="shad">
                    <p class="text-bold">Monto de  mi pedido C03-C08</p>
                    <span>S/ 250</span>
                </li>
                <li class="shad">
                    <p class="text-bold">Monto de  mi pedido C03-C08</p>
                    <span>S/ 250</span>
                </li>
                <li class="shad">
                    <p class="text-bold">Monto de  mi pedido C03-C08</p>
                    <span>S/ 250</span>
                </li>
                <li class="shad">
                    <p class="text-bold">Monto de  mi pedido C03-C08</p>
                    <span>S/ 250</span>
                </li>
            </ul>
            <div class="owl-carousel owl-mont" id="mov-mont">
                <div class="item">
                    <div class="shad">
                        <p class="text-bold">Monto de  mi pedido C03-C08</p>
                        <span>S/ 250</span>
                    </div>
                </div>
                <div class="item">
                    <div class="shad">
                        <p class="text-bold">Monto de  mi pedido C03-C08</p>
                        <span>S/ 250</span>
                    </div>
                </div>
                <div class="item">
                    <div class="shad">
                        <p class="text-bold">Monto de  mi pedido C03-C08</p>
                        <span>S/ 250</span>
                    </div>
                </div>
                <div class="item">
                    <div class="shad">
                        <p class="text-bold">Monto de  mi pedido C03-C08</p>
                        <span>S/ 250</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="shad right-ganancias">
            <p class="text-bold">Monto de mi  pedido C13-C18</p>
            <span class="text-down">Avance por campaña</span>
            <div id="chart-montos">
                <img src="~/Content/CaminoBrillante/imgs/barchar.png">
            </div>
        </div>
    </div>
</div>

@*@System.Web.Optimization.Scripts.Render("~/Bundle/Js/CaminoBrillante")*@

<script src="~/Scripts/jquery-1.11.2.min.js"></script>
