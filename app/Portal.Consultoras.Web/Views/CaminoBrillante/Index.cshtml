<script>
    (function ($) {
        $(document).ready(function () {
            var owl = $('.owl-crec');
            owl.owlCarousel({
                stagePadding: 35,
                margin: 20,
                nav: true,
                loop: false,
                responsive: {
                    0: {
                        items: 1
                    },
                    600: {
