    </div>
</div>
<div class="div-3">
    <div class="validation_clear"></div>
    <div class="validation">    
        @Html.ValidationMessageFor(m => Model.LugarNivel4)
    </div>
</div>
<div class="div-3">
 

    <div class="selectP2 seleccion_pagina textboxSB2">
