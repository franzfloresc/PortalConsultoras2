@using Portal.Consultoras.Web.Models
@using Portal.Consultoras.Common
@model Portal.Consultoras.Web.Models.EditarDireccionModel

@* Template para los países Colombia y Chile *@

<div class="div-3">
    @*<div class="titC">@DictionariesUnete.LabelLugar1[Model.CodigoPais]</div>*@
    <div class="titC">@Dictionaries.LabelLugar1[Model.CodigoPais]</div>
    <div class="selectP2 borde_redondeado">
        @Html.DropDownListFor(m => Model.LugarNivel1, Model.LugaresNivel1, "-- Seleccionar --", new { @class = "field_85" })
    </div>
</div>
<div class="div-3">
    <div class="validation_clear"></div>
    <div class="validation">
        @Html.ValidationMessageFor(m => Model.LugarNivel1)
    </div>
</div>

<div class="div-3">
    <div class="titC">@Dictionaries.LabelLugar2[Model.CodigoPais]</div>
    <div class="selectP2 borde_redondeado">
        @Html.DropDownListFor(m => Model.LugarNivel2, new List<SelectListItem>(), "-- Seleccionar --", new { @class = "field_85" })
    </div>
</div>
<div class="div-3">
    <div class="validation_clear"></div>
    <div class="validation">
        @Html.ValidationMessageFor(m => Model.LugarNivel2)
    </div>
</div>
<div class="div-3">
    @if (Model.CodigoPais == "CO")
    {
        <div class="titC">Barrio</div>
    }
    else
    {
        <div class="titC">Calle &oacute; avenida</div>
    }
    
    <div class="selectP2 borde_redondeado">
        @Html.TextBoxFor(m => Model.CalleOAvenida, new {@class = "field_85", @placeholder = "Ejm: Av. Castellana 100"})
    </div>
</div>
<div class="div-3">
    <div class="validation_clear"></div>
    <div class="validation">
        @Html.ValidationMessageFor(m => Model.CalleOAvenida)
    </div>
</div>

@if (Model.CodigoPais == "CO")
{
    <div class="div-3">
        <div class="titC">Dirección</div>
        <div class="selectP2 borde_redondeado">
            @Html.DropDownListFor(m => Model.LugarNivel3, Model.LugaresNivel3, "-- Seleccionar --", new {@class = "field_85"})
        </div>
    </div>
    <div class="div-3">
        <div class="validation_clear"></div>
        <div class="validation">
            @Html.ValidationMessageFor(m => Model.LugarNivel3)
        </div>
    </div>
    <div class="div-3">

        <div class="titC"></div>
        <div class="selectP2 borde_redondeado">
            @Html.TextBoxFor(m => Model.NombreDireccionEdicion, new {@class = "field_85", @placeholder = "Ejm: 97B 35 2"})
        </div>
    </div>
    <div class="div-3">
        <div class="validation_clear"></div>
        <div class="validation">
            @Html.ValidationMessageFor(m => Model.NombreDireccionEdicion)
        </div>
    </div>
}
else
{
    <div class="div-3">
        <div class="titC">Numero</div>
        <div class="selectP2 borde_redondeado">
            @Html.TextBoxFor(m => Model.Numero, new { @class = "numero field_85", @placeholder = "Ejm: 100", @maxlength = 5 })
        </div>
    </div>
    <div class="div-3">
        <div class="validation_clear"></div>
        <div class="validation">
            @Html.ValidationMessageFor(m => Model.Numero)
        </div>
    </div>
    <div class="div-3">
        <div class="titC">Referencia</div>
        <div class="selectP2 borde_redondeado">
            @Html.TextBoxFor(m => Model.Referencia, new { @class = "field_85", @placeholder = "Ej. entre calle 1 y calle 3" })
        </div>
    </div>
    <div class="div-3">
        <div class="validation_clear"></div>
        <div class="validation">
            @Html.ValidationMessageFor(m => Model.Referencia)
        </div>
    </div>
}