@using Portal.Consultoras.Common
@using Portal.Consultoras.Web.GestionPasos
@model Portal.Consultoras.Web.Models.DetalleSolicitudPostulanteModel

@* Template Datos Generales: Perú *@

@if (Model.TipoDocumento == Enumeradores.TipoDocumento.Ruc.ToInt() && Model.NumeroDocumento.StartsWith("20"))
{
    <div class="elements border_modal" style="padding-top: 15px !important">
        <div class="div-3 div_3_fix">
            <div class="titC">RUC:</div>
            <div class="selectP2 borde_redondeado">
                @Html.TextBoxForExpressionRequiredIf(m => m.NumeroDocumento)
            </div>
        </div>

        <div class="div-3 div_3_fix">
            <div class="validation_clear"></div>
            <div class="validation">
                @Html.ValidationMessageFor(m => m.NumeroDocumento)
            </div>
        </div>

        <div class="div-3 div_3_fix">
            <div class="titC">Razón Social:</div>
            <div class="selectP2 borde_redondeado">
                @Html.TextBoxFor(m => m.RazonSocial)
            </div>
            <div class="titC">1er. Nombre Representante Legal:</div>
            <div class="selectP2 borde_redondeado">
                @Html.TextBoxFor(m => m.PrimerNombre, new { @class = "texto" })
            </div>
            <div class="titC">2do. Nombre Representante Legal:</div>
            <div class="selectP2 borde_redondeado">
                @Html.TextBoxFor(m => m.SegundoNombre, new { @class = "texto" })
            </div>
        </div>
        <div class="div-3 div_3_fix">
            <div class="validation_clear"></div>
            <div class="validation">
                @Html.ValidationMessageFor(m => m.RazonSocial)
            </div>
            <div class="validation_clear"></div>
            <div class="validation">
                @Html.ValidationMessageFor(m => m.PrimerNombre)
            </div>
            <div class="validation_clear"></div>
            <div class="validation">
                @Html.ValidationMessageFor(m => m.SegundoNombre)
            </div>
        </div>
        <div class="div-3 div_3_fix">
            <div class="titC">Ape. Paterno Representante Legal:</div>
            <div class="selectP2 borde_redondeado">
                @Html.TextBoxFor(m => m.ApellidoPaterno, new { @class = "texto" })
            </div>
            <div class="titC">Ape. Materno Representante Legal:</div>
            <div class="selectP2 borde_redondeado">
                @Html.TextBoxFor(m => m.ApellidoMaterno, new { @class = "texto" })
            </div>
            <div class="titC">Fecha de Nacimiento:</div>
            <div class="selectP2 borde_redondeado calendar">
                @Html.TextBoxFor(m => m.FechaNacimiento, new { @class = "texto" })
            </div>
        </div>
        <div class="div-3 div_3_fix">
            <div class="validation_clear"></div>
            <div class="validation">
                @Html.ValidationMessageFor(m => m.ApellidoPaterno)
            </div>
            <div class="validation_clear"></div>
            <div class="validation">
                @Html.ValidationMessageFor(m => m.ApellidoMaterno)
            </div>
            <div class="validation_clear"></div>
            <div class="validation">
                @Html.ValidationMessageFor(m => m.FechaNacimiento)
            </div>
        </div>
        <div class="div-3 div_3_fix">
            <div class="titC">Tipo Documento Representante Legal:</div>
            <div class="selectP2 borde_redondeado">
                @Html.DropDownListFor(m => m.TipoDocumentoLegal, ViewBag.TiposDocumentos as SelectList, "Seleccione")
            </div>
            <div class="titC">Doc. Identidad de Representante Legal:</div>
            <div class="selectP2 borde_redondeado">
                @Html.TextBoxForExpressionRequiredIf(m => m.NumeroDocumentoLegal)
            </div>

            <div class="titC">Correo:</div>
            <div class="selectP2 borde_redondeado">
                @Html.TextBoxFor(m => m.CorreoElectronico)
            </div>
        </div>
        <div class="div-3 div_3_fix">
            <div class="validation_clear"></div>
            <div class="validation">
                @Html.ValidationMessageFor(m => m.TipoDocumentoLegal)
            </div>
            <div class="validation_clear"></div>
            <div class="validation">
                @Html.ValidationMessageFor(m => m.NumeroDocumentoLegal)
            </div>
            <div class="validation_clear"></div>
            <div class="validation">
                @Html.ValidationMessageFor(m => m.CorreoElectronico)
            </div>
        </div>
        <div class="div-3 div_3_fix">
            <div class="titC">Sexo:</div>
            <div class="selectP2 borde_redondeado" style="display: flex; align-items: center; font-size: 11px;">
                @Html.RadioButtonFor(m => m.Sexo, 'F', new { @style = "float:none;width:auto" }) &nbsp; Femenino&nbsp; <br />
                @Html.RadioButtonFor(m => m.Sexo, 'M', new { @style = "float:none;width:auto" }) &nbsp; Masculino
            </div>
        </div>
        <div class="div-3 div_3_fix">
            <div class="titC">Telf. Fijo:</div>
            <div class="selectP2 borde_redondeado">
                @*@Html.TextBoxFor(m => m.Telefono, new { @class = "numero" })*@
                @Html.TextBoxForExpressionRequiredIf(m => m.Telefono, new { @class = "numero" })
            </div>

            <div class="titC">Celular:</div>
            <div class="selectP2 borde_redondeado">
                @Html.TextBoxForExpressionRequiredIf(m => m.Celular, new { @class = "numero" })
            </div>
        </div>
        <div class="div-3 div_3_fix">
            <div class="validation_clear"></div>
            <div class="validation">
                @Html.ValidationMessageFor(m => m.Telefono)
            </div>
            <div class="validation_clear"></div>
            <div class="validation">
                @Html.ValidationMessageFor(m => m.Celular)
            </div>
        </div>
    </div>
}
else
{
    @Html.Partial("TemplatesDatosGenerales/_DatosGeneralesGrupo2", Model)
}
