@using Portal.Consultoras.Common
@using Portal.Consultoras.Web.GestionPasos
@model Portal.Consultoras.Web.Models.DetalleSolicitudPostulanteModel

@* Template Datos Generales: Perú *@

@if (Model.TipoDocumento == Enumeradores.TipoDocumento.Ruc.ToInt() && Model.NumeroDocumento.StartsWith("20"))
{
    <div class="elements border_modal" style="padding-top: 15px !important">
      
        <div class="div-3 estilo2">
            <div class="filterEdit">
                <div class="selectP2 seleccion_pagina textboxSBEdit2">
                    @Html.TextBoxForExpressionRequiredIf(m => m.NumeroDocumento, new { @class = " textboxSB", @placeholder = "RUC" })
                </div>
            </div>
           
        </div>

        <div class="div-3 div_3_fix">
            <div class="validation_clear"></div>
            <div class="validation">
                @Html.ValidationMessageFor(m => m.NumeroDocumento)
            </div>
        </div>

         
        <div class="div-3 estilo2">
            <div class="filterEdit">
                <div class="selectP2 seleccion_pagina textboxSBEdit2">
                    @Html.TextBoxFor(m => m.RazonSocial, new { @class = " textboxSB", @placeholder = "Razón Social" })
                </div>
            </div>
            <div class="filterEdit">
                <div class="selectP2 seleccion_pagina textboxSBEdit2">
                    @Html.TextBoxFor(m => m.PrimerNombre, new { @class = "texto textboxSB", @placeholder = "1er. Nombre Representante Legal" })
                </div>
            </div>
            <div class="filterEdit">
                <div class="selectP2 seleccion_pagina textboxSBEdit2">
                    @Html.TextBoxFor(m => m.SegundoNombre, new { @class = "texto textboxSB", @placeholder = "2do. Nombre Representante Legal" })
                </div>
            </div>
        </div>

        <div class="div-3 div_3_fix">
            <div class="validation_clear"></div>
            <div class="validation">
                @Html.ValidationMessageFor(m => m.RazonSocial)
            </div>
            <div class="validation_clear"></div>
            <div class="validation">
                @Html.ValidationMessageFor(m => m.PrimerNombre)
            </div>
            <div class="validation_clear"></div>
            <div class="validation">
                @Html.ValidationMessageFor(m => m.SegundoNombre)
            </div>
        </div>
         
        <div class="div-3 estilo2">
            <div class="filterEdit">
                <div class="selectP2 seleccion_pagina textboxSBEdit2">
                    @Html.TextBoxFor(m => m.ApellidoPaterno, new { @class = "texto textboxSB", @placeholder = "Ape. Paterno Representante Legal" })
                </div>
            </div>
            <div class="filterEdit">
                <div class="selectP2 seleccion_pagina textboxSBEdit2">
                    @Html.TextBoxFor(m => m.ApellidoMaterno, new { @class = "texto textboxSB", @placeholder = "Ape. Materno Representante Legal" })
                </div>
            </div>
            <div class="filterEdit">
                <div class="selectP2 seleccion_pagina textboxSBEdit2">
                    @Html.TextBoxFor(m => m.FechaNacimiento, new { @class = "texto textboxSB", @placeholder = "Fecha de Nacimiento" })
                </div>
            </div>
        </div>
        <div class="div-3 div_3_fix">
            <div class="validation_clear"></div>
            <div class="validation">
                @Html.ValidationMessageFor(m => m.ApellidoPaterno)
            </div>
            <div class="validation_clear"></div>
            <div class="validation">
                @Html.ValidationMessageFor(m => m.ApellidoMaterno)
            </div>
            <div class="validation_clear"></div>
            <div class="validation">
                @Html.ValidationMessageFor(m => m.FechaNacimiento)
            </div>
        </div>
         
        <div class="div-3 estilo2">
            <div class="filterEdit">
                <div class="selectP2 seleccion_pagina textboxSBEdit2">
                    @Html.DropDownListFor(m => m.TipoDocumentoLegal, ViewBag.TiposDocumentos as SelectList, "Tipo Documento Representante Legal", new { @class = "field_85 textboxSBEdit" })
                </div>
            </div>
            <div class="filterEdit">
                <div class="selectP2 seleccion_pagina textboxSBEdit2">
                    @Html.TextBoxForExpressionRequiredIf(m => m.NumeroDocumentoLegal, new { @class = "  textboxSB", @placeholder = "Fecha de Nacimiento" }))
                </div>
            </div>
            <div class="filterEdit">
                <div class="selectP2 seleccion_pagina textboxSBEdit2">
                    @Html.TextBoxFor(m => m.CorreoElectronico, new { @class = "textboxSB", @placeholder = "Correo Electronico" })
                </div>
            </div>
        </div>
        <div class="div-3 div_3_fix">
            <div class="validation_clear"></div>
            <div class="validation">
                @Html.ValidationMessageFor(m => m.TipoDocumentoLegal)
            </div>
            <div class="validation_clear"></div>
            <div class="validation">
                @Html.ValidationMessageFor(m => m.NumeroDocumentoLegal)
            </div>
            <div class="validation_clear"></div>
            <div class="validation">
                @Html.ValidationMessageFor(m => m.CorreoElectronico)
            </div>
        </div>
        
        <div class="div-3 estilo2">
            @Html.RadioButtonFor(m => m.Sexo, 'F', new { @style = "float:none;width:auto", @class = "RadioSB" })<span style="color:black">&nbsp; Femenino&nbsp; </span>
            @Html.RadioButtonFor(m => m.Sexo, 'M', new { @style = "float:none;width:auto", @class = "RadioSB" })<span style="color:black">&nbsp; Masculino </span>  
        </div>
     

        <div class="div-3 estilo2">
            <div class="filterEdit">
                <div class="selectP2 seleccion_pagina textboxSBEdit2">
                    @Html.TextBoxForExpressionRequiredIf(m => m.Telefono, new { @class = "numero  textboxSB", @placeholder = "Telf. Fijo" }))
                </div>
            </div>
            <div class="filterEdit">
                <div class="selectP2 seleccion_pagina textboxSBEdit2">
                    @Html.TextBoxForExpressionRequiredIf(m => m.Celular, new { @class = "numero  textboxSB", @placeholder = "Celular" }))
                </div>
            </div>
            
        </div>

        <div class="div-3 div_3_fix">
            <div class="validation_clear"></div>
            <div class="validation">
                @Html.ValidationMessageFor(m => m.Telefono)
            </div>
            <div class="validation_clear"></div>
            <div class="validation">
                @Html.ValidationMessageFor(m => m.Celular)
            </div>
        </div>
    </div>
}
else
{
    @Html.Partial("TemplatesDatosGenerales/_DatosGeneralesGrupo2", Model)
}
