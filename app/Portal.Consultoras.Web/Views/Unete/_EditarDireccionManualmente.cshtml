                <div class="div-3">
                   
                    <div class="selectP2 seleccion_pagina textboxSB2 editarDireccion_camposSelect">
                        @Html.DropDownListFor(m => Model.Region, ViewBag.Regiones as SelectList, " Región", new { @class = "field_85 textboxSB" })
