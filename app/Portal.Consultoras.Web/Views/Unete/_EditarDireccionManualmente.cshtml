                        @Html.ValidationMessageFor(m => Model.Region)
                    </div>
                </div>

                <div class="div-3">
                  
                    <div class="selectP2 seleccion_pagina textboxSB2 editarDireccion_camposSelect">
                        @Html.DropDownListFor(m => Model.Zona, zonas, "Zona", new { @class = "field_85 textboxSB", @disabled = true })
                    </div>
                </div>
