                        @Html.DropDownListFor(m => Model.Seccion, secciones, "Sección", new { @class = "field_85 textboxSB", @disabled = true })
                    </div>
                </div>
                <div class="div-3">
                    <div class="validation_clear"></div>
                    <div class="validation">
                        @Html.ValidationMessageFor(m => Model.Seccion)
                    </div>
                </div>

                <div class="div-3">
                   
                    <div class="selectP2 seleccion_pagina textboxSB2 editarDireccion_camposSelect">
                        @Html.DropDownListFor(m => Model.Territorio, territorios, "Territorio", new { @class = "field_85 textboxSB", @disabled = true })
                    </div>
                </div>
                <div class="div-3">
                    <div class="validation_clear"></div>
                    <div class="validation">
                        @Html.ValidationMessageFor(m => Model.Territorio)
                    </div>
                </div>


