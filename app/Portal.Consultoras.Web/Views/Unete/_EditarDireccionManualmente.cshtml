        }

        user agent stylesheet input, textarea, keygen, select, button, meter, progress {
            -webkit-writing-mode: horizontal-tb;
        }
    </style>


   
}

<script>
    var defaultOption = '<option value="" >Seleccione</option>';

    $(function () {

        $(document).ready(function () {

            $.validator.unobtrusive.parse('form');

            $('.numero').keydown(IntegerNumber);

            $('#btnCancelar, #imgCerrarOpcion').click(function () {
                // modalOpcion.dialog('close');

                $('#divEditarManualDireccion').hide();
            });

            $('select#Region').change(function () {
                $('select#Zona,select#Seccion,select#Territorio').attr('disabled', true);

                if (this.value == '') {
                    //$('select#Zona,select#Seccion,select#Territorio').html(defaultOption);
                    $('select#Zona').html('<option value="" >Zona</option>');
                    $('select#Seccion').html('<option value="" >Seccion</option>');
                    $('select#Territorio').html('<option value="" >Territorio</option>');
                    return;
                }

                $.getJSON('@Url.Action("ObtenerZonas")', { regionID: this.value }, function (data) {
                    //$('select#Zona,select#Seccion,select#Territorio').html(defaultOption);
                    $('select#Zona').html('<option value="" >Zona</option>');
                    $('select#Seccion').html('<option value="" >Seccion</option>');
                    $('select#Territorio').html('<option value="" >Territorio</option>');
                    $.map(data, function (e, i) {
                        $('select#Zona').append('<option value="' + e.Value + '">' + e.Text + '</option>');
                    });
                }).complete(function () {
                    $('select#Zona').attr('disabled', false);
                });
            });

            $('select#Zona').change(function () {
                $('select#Seccion,select#Territorio').attr('disabled', true);

                if (this.value == '') {
                    //   $('select#Seccion,select#Territorio').html(defaultOption);
 
                    $('select#Seccion').html('<option value="" >Seccion</option>');
                    $('select#Territorio').html('<option value="" >Territorio</option>');
                    $('#CodigoZona').val('');
                    return;
                }

                $('#CodigoZona').val($(this).find('option:selected').text());

                $.getJSON('@Url.Action("ObtenerSecciones")', { regionID: $('select#Region').val(), zonaID: this.value }, function (data) {
                    //$('select#Seccion,select#Territorio').html(defaultOption);
                    $('select#Seccion').html('<option value="" >Seccion</option>');
                    $('select#Territorio').html('<option value="" >Territorio</option>');
                    $.map(data, function (e, i) {
                        $('select#Seccion').append('<option value="' + e.Value + '">' + e.Text + '</option>');
                    });
                }).complete(function () {
                    $('select#Seccion').attr('disabled', false);
                });
            });

            $('select#Seccion').change(function () {
                $('select#Territorio').attr('disabled', true);

                if (this.value == '') {
                    //      $('select#Territorio').html(defaultOption);

                    $('select#Territorio').html('<option value="" >Territorio</option>');
                    $('#CodigoSeccion').val('');
                    return;
                }

                $('#CodigoSeccion').val($(this).find('option:selected').text());

                $.getJSON('@Url.Action("ObtenerTerritorios")', { regionID: $('select#Region').val(), zonaID: $('select#Zona').val(), seccionID: this.value }, function (data) {
                    //$('select#Territorio').html(defaultOption);
      
                    $('select#Territorio').html('<option value="" >Territorio</option>');
                    $.map(data, function (e, i) {
                        $('select#Territorio').append('<option value="' + e.Value + '">' + e.Text + '</option>');
                    });
                }).complete(function () {
                    $('select#Territorio').attr('disabled', false);
                });
            });

            $('select#Territorio').change(function () {

                if (this.value == '') {
                    $('#CodigoTerritorio').val('');
                    return;
                }

                $('#CodigoTerritorio').val($(this).find('option:selected').text());
            });
        });
    });

    function OnSuccess() {
       
        $('#divEditarManualDireccion').hide();
        //$('#divConsultarUbicacion').hide();
        //document.getElementById('btnBuscar').click();
    }
</script>
