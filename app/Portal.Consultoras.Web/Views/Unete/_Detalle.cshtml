    @Html.HiddenFor(m => Solicitud.CodigoConsultora)
    
    @Html.HiddenFor(m => Solicitud.SolicitudPostulanteID)
    @Html.HiddenFor(m => Solicitud.CodigoPais)
    @Html.HiddenFor(m => Model.ModoLectura)

