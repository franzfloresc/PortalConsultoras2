                    <div id="img-fondo-mobile" style="display: inline-block;vertical-align: middle;"></div>
                    <div class="pdr_modal2 borde_redondeado alignrigth">
                        <img src='@Url.Content("~/Content/Images/" + imagenVacia)' id="src-fondo-mobile" class="img-matriz-preview2" data-id="">
                    </div>
                </div>
            </div>

            <div class="div-3 hide-config-image-odd">
                <div class="titG" style="padding-bottom: 0;">
                    Color Texto:
                    <h6>(#F421E7)</h6>
                </div>
                <br />
                <div class="titG selectP2 borde_redondeado" style="width: 312px;">
                    @Html.TextBoxFor(m => m.MobileColorTexto, new { @maxlength = "7", @size = 7 })
                </div>
            </div>

            <div class="div-3">
                <div class="titG" style="padding-bottom: 0;">Orden:</div>
                <br />
                <div class="titG selectP2 borde_redondeado" style="width: 312px;">
                    @Html.TextBoxFor(m => m.MobileOrden, new { @style = "width: 312px;" })
                </div>
            </div>

            <div class="div-3">
                <div class="titG" style="padding-bottom: 0;">OrdenBPT:</div>
                <br />
                <div class="titG selectP2 borde_redondeado" style="width: 312px;">
                    @Html.TextBoxFor(m => m.MobileOrdenBpt, new { @style = "width: 312px;" })
                </div>
            </div>

            <div class="div-3">
                <div class="titG" style="padding-bottom: 0;">Título:</div>
                <div class="titG selectP2 borde_redondeado" style="width: 312px;">
                    @Html.TextBoxFor(m => m.MobileTitulo, new { @style = "width: 312px;" })
                </div>
            </div>
            <div class="div-3">
                <div class="titG" style="padding-bottom: 0;">Sub Título:</div>
                <div class="titG selectP2 borde_redondeado" style="width: 312px;">
                    @Html.TextBoxFor(m => m.MobileSubTitulo, new { @style = "width: 312px;" })
                </div>
            </div>
            <div class="div-3">
                <div class="titG">Cantidad:</div>
                <div class="titG borde_redondeado" style="width: 50px;">
                    @Html.TextBoxFor(m => m.MobileCantidadProductos, new { @style = "width: 50px;" })
                </div>
                <div class="titG" style="width: 100px; display: inline-block;">
                    Todos <input type="checkbox" id="cbMobileCantidadTodos"
                                 style="display: inline-block !important; margin: 5px; vertical-align: middle; height: 15px !important;" />
                </div>
            </div>

            <div class="div-3">
                <div class="titG">Tipo Presentación:</div>
                <div class="titG borde_redondeado">
                    @Html.DropDownListFor(model => model.MobileTipoPresentacion, new SelectList(Model.ListaTipoPresentacion, "Codigo", "Descripcion"), "-- Seleccionar --", new { id = "ddlMobileTipoPresentacionOfertas" })
                </div>
            </div>

            <div class="hide-configuration">
                <div class="div-3">
                    <div class="titG">Tipo Estrategia:</div>

                </div>
                <div class="div-3">
                    <div class="borde_redondeado">
                        @foreach (var estrategia in Model.ListaTipoEstrategia)
                        {
                            if (!string.IsNullOrEmpty(estrategia.Codigo))
                            {
                                bool checked1 = Model.MobileTipoEstrategia.Trim().Contains(estrategia.Codigo);
                                <input name="mobile-tipo-estrategia" type="checkbox" value="@estrategia.Codigo" checked="@checked1" style="display: inline-block !important;height: 13px !important;">
                                <label>@estrategia.Descripcion</label> <br />
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
