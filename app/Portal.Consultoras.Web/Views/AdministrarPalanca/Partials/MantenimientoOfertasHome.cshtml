
@model Portal.Consultoras.Web.Models.AdministrarOfertasHomeModel
@{
    string imagenVacia = "prod_grilla_vacio.png";
}

@Html.HiddenFor(model => model.ConfiguracionOfertasHomeID)
<div class="div-3">
    <div class="titG">Campaña:</div>
    <div class="titG selectP2 borde_redondeado">
        @Html.DropDownListFor(model => model.CampaniaID, new SelectList(Model.ListaCampanias, "CampaniaID", "NombreCorto"), "-- Seleccionar --", new { id = "ddlCampaniaOfertas" })
    </div>
</div>
<div class="div-3">
    <div class="titG">Palanca:</div>
    <div class="titG selectP2 borde_redondeado">
        <select data-val="true" data-val-required="El campo ConfiguracionPaisID es obligatorio." id="ddlConfiguracionIdOfertas" name="ConfiguracionPaisID">
            <option value="">-- Seleccionar --</option>
            @foreach (var item in Model.ListaConfiguracionPais)
            {
                var selectedOption = (item.ConfiguracionPaisID == Model.ConfiguracionPaisID) ? "selected='selected'" : "";
                <option data-codigo="@item.Codigo" value="@item.ConfiguracionPaisID" @selectedOption>@item.Descripcion</option>
            }
        </select>
        @*@Html.DropDownListFor(model => model.ConfiguracionPaisID, new SelectList(Model.ListaConfiguracionPais, "ConfiguracionPaisID", "Descripcion"), "-- Seleccionar --", new { id = "ddlConfiguracionIdOfertas" })*@
    </div>
</div>
