    <div class="fontColorAdm">
        <div class="sideLeft">
            <div class="div-3">
                <div class="titG">¿Activar?</div>
                <div class="titG">
                    @Html.CheckBoxFor(m => m.DesktopActivo)
                </div>
            </div>

            <div class="div-3 hide-config-image-odd">
                <div class="titG" style="padding-bottom: 0;">
                    Color Fondo:
                    <h6>(#F421E7)</h6>
                </div>
                <br />
                <div class="titG selectP2 borde_redondeado" style="width: 312px;">
                    @Html.TextBoxFor(m => m.DesktopColorFondo, new { @maxlength = "7", @size = 7 })
                </div>
            </div>

            <div class="div-3 hide-config-image-odd">
                <div class="titG">Usar Imagen Como Fondo: </div>
                <div class="titG">
                    @Html.CheckBoxFor(m => m.DesktopUsarImagenFondo)
                </div>
            </div>

            <div class="div-3" style="display: inline-block; text-align: left; margin-bottom: 15px;">
                <div class="titG">
                    Imagen Fondo:
                    <h6 class="hide-config-image-odd">(1920x500 pixeles)</h6>
                </div>
                <div style="display: inline-block;">
                    @Html.HiddenFor(m => m.DesktopImagenFondo, new { id = "nombre-fondo-desktop" })
                    <div id="img-fondo-desktop" style="display: inline-block;vertical-align: middle;"></div>
                    <div class="pdr_modal2 borde_redondeado alignrigth">
                        <img src='@Url.Content("~/Content/Images/" + imagenVacia)' id="src-fondo-desktop" class="img-matriz-preview2" data-id="">
                    </div>
                </div>
            </div>

            <div class="div-3 hide-config-image-odd">
                <div class="titG" style="padding-bottom: 0;">
                    Color Texto:
                    <h6>(#F421E7)</h6>
                </div>
                <br />
                <div class="titG selectP2 borde_redondeado" style="width: 312px;">
                    @Html.TextBoxFor(m => m.DesktopColorTexto, new { @maxlength = "7", @size = 7 })
                </div>
            </div>

            <div class="div-3">
                <div class="titG" style="padding-bottom: 0;">Orden:</div>
                <br />
                <div class="titG selectP2 borde_redondeado" style="width: 312px;">
                    @Html.TextBoxFor(m => m.DesktopOrden, new { @style = "width: 312px;" })
                </div>
            </div>

            <div class="div-3">
                <div class="titG" style="padding-bottom: 0;">OrdenBPT:</div>
                <br />
                <div class="titG selectP2 borde_redondeado" style="width: 312px;">
                    @Html.TextBoxFor(m => m.DesktopOrdenBpt, new { @style = "width: 312px;" })
                </div>
            </div>

            <div class="div-3">
                <div class="titG" style="padding-bottom: 0;">Título:</div>
                <br />
                <div class="titG selectP2 borde_redondeado" style="width: 312px;">
                    @Html.TextBoxFor(m => m.DesktopTitulo, new { @style = "width: 312px;" })
                </div>
            </div>
            <div class="div-3">
                <div class="titG" style="padding-bottom: 0;">Sub Título:</div>
                <br />
                <div class="titG selectP2 borde_redondeado" style="width: 312px;">
                    @Html.TextBoxFor(m => m.DesktopSubTitulo, new { @style = "width: 312px;" })
                </div>
            </div>
            <div class="div-3">
                <div class="titG">Cantidad:</div>
                <div class="titG borde_redondeado" style="width: 50px;">
                    @Html.TextBoxFor(m => m.DesktopCantidadProductos, new { @style = "width: 50px;" })
                </div>
                <div class="titG" style="width: 100px; display: inline-block;">
                    Todos <input type="checkbox" id="cbDesktopCantidadTodos"
                                 style="display: inline-block !important; margin: 5px; vertical-align: middle; height: 15px !important;" />
                </div>
            </div>

            <div class="div-3">
                <div class="titG">Tipo Presentación:</div>
                <div class="titG borde_redondeado">
                    @Html.DropDownListFor(model => model.DesktopTipoPresentacion, new SelectList(Model.ListaTipoPresentacion, "Codigo", "Descripcion"), "-- Seleccionar --", new { id = "ddlDesktopTipoPresentacionOfertas" })
                </div>
            </div>
            <div class="hide-configuration">
                <div class="div-3">
                    <div class="titG">Tipo Estrategia:</div>
                </div>
                <div class="div-3">
                    <div class="borde_redondeado checkBox">
                        @foreach (var estrategia in Model.ListaTipoEstrategia)
                        {
                            if (!string.IsNullOrEmpty(estrategia.Codigo))
                            {
                                bool checked1 = Model.DesktopTipoEstrategia.Trim().Contains(estrategia.Codigo);
                                <input name="desktop-tipo-estrategia" type="checkbox" value="@estrategia.Codigo" checked="@checked1" style="display: inline-block !important;height: 13px !important;">
                                <label>@estrategia.Descripcion</label><br />
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="sideRight">
            <div class="div-3">
                <div class="titG">¿Activar?</div>
                <div class="titG borde_redondeado">
                    @Html.CheckBoxFor(m => m.MobileActivo)
                </div>
            </div>

            <div class="div-3 hide-config-image-odd">
                <div class="titG" style="padding-bottom: 0;">
