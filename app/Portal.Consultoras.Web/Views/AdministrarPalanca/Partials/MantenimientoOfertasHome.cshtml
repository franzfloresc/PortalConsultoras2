                                    bool checked1 = Model.MobileTipoEstrategia.Trim().Contains(estrategia.Codigo);
                                    <input name="mobile-tipo-estrategia" type="checkbox" value="@estrategia.Codigo" checked="@checked1" style="display: inline-block !important;height: 13px !important;">
