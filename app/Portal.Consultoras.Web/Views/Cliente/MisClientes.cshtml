            <input type="email" name="correoelectronico" value="fgoyzueta@gmail.com" placeholder="Correo Electrónico" maxlength="80" />
            <input type="button" class="btnCliente_cancelar" name="cancelar" value="CANCELAR" onclick="javascript: $('#divEditarCliente').hide();" />
            <input type="button" class="btnCliente_agregar" name="editarCliente" value="GUARDAR" />
        </form>
    </div>
</div>

<!-- FIN POPUP EDITAR CLIENTE -->

<!-- POPUP ELIMINAR CLIENTE -->

