<!-- POPUP AGREGAR CLIENTE -->

<div class="contenedor_popup_agregarCliente mis_clientes" id="divAgregarCliente">
    <div class="popup_agregarCliente">
        <div class="btn_cerrarPopupCliente">
            <a href="javascript:;" onclick="javascript: $('#divAgregarCliente').hide();">
                <img src="@Url.Content("~/Content/Images/cerrar_04.png")" alt=" alternate text" />
            </a>
        </div>
        <h6>AGREGAR <b>CLIENTE</b></h6>
        <form action="" method="post">
            <input type="text" name="nombre" id="Nombres" value="" placeholder="Nombres y Apellidos" maxlength="50" class="input_search_form ValidaAlfabeto" />
            <input type="email" name="correoelectronico" value="" placeholder="Correo Electrónico" maxlength="80" id="Correo" class="input_search_form ValidarFormatoCorreo" />
            <input type="button" class="btnCliente_cancelar" name="cancelar" value="CANCELAR" onclick="javascript: $('#divAgregarCliente').hide();" />
            <input type="button" class="btnCliente_agregar" name="agregarCliente" value="GUARDAR" onclick="javascript: ValidarRegistroCliente();" />
        </form>
    </div>
</div>

<!-- FIN POPUP AGREGAR CLIENTE -->

<!-- POPUP EDITAR CLIENTE -->

<div class="contenedor_popup_agregarCliente mis_clientes" id="divEditarCliente">
