        <div class="icono_cliente_sb">
            {{#if_eq TieneTelefono '0'}}
                <img src="/Content/Images/icons/icoWarning.png" height="24" />
            {{/if_eq}}
        </div>
        <div class="nombre_cliente_sb">{{NombreCliente}}</div>
        <div class="apellido_cliente_sb">{{ApellidoCliente}}</div>
        <div class="telefonofijo_cliente_sb">{{Telefono}}</div>
        <div class="celular_cliente_sb">{{Celular}}</div>
        <div class="correo_clientes">{{eMail}}</div>
        <div class="editar_cliente"><a href="#" onclick="showClienteDetalle(this);"><img src="/Content/Images/Esika/editar_clientes.png"></a></div>
        <div class="eliminar_cliente"><a href="#" onclick="ShowDivEliminar('{{ClienteID}}');"><img src="/Content/Images/Esika/tacho-copy.png"></a></div>
