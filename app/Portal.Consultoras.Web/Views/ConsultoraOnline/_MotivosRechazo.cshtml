@using Portal.Consultoras.Web.Models
@{
    var countMotivos = 0;
    MisPedidosMotivoRechazoModel motivoOtros = null;
}
<link href="@Url.Content("~/Content/Css/Site/ConsultoraOnline/MotivosRechazo.css")" rel="stylesheet" />

<div id="MotivosRechazo" class="mobile hide motivos__rechazo__modal" style="display:block;">
    <div id="MotivosRechazo-Paso1">
        <a class="enlace__cerrar__modal__motivos__rechazo" onclick="javascript:$('#MotivosRechazo').fadeOut(100);" alt="Cerrar"></a>
        <h2 class="d-block text-bold motivo__rechazo__modal__titulo">¿A qué se debe el rechazo del pedido?</h2>
        <ul class="w-100 d-flex lista__motivos__rechazo">
            @foreach (var motivoRechazo in ViewBag.MotivosRechazo)
            {
                //countMotivos += 1;

                if (@motivoRechazo.MotivoSolicitudID != 11) //diferente a 11 otros
                {
                    <li class="d-block motivo__rechazo">
                        <input id="@motivoRechazo.MotivoSolicitudID" name="motivoRechazo" type="radio" class="d-none field__checkbox__sb" value="@motivoRechazo.MotivoSolicitudID" />
                        <label for="@motivoRechazo.MotivoSolicitudID" class="border-radius-4 text-center mr-0 tag__checkbox__sb tag__checkbox__sb--motivoRechazo">@motivoRechazo.Motivo</label>
                    </li>
                }
                else
                {
                    motivoOtros = motivoRechazo;
                }


            }

            @*<li class="d-block motivo__rechazo">
                    <input id="1" name="motivoRechazo" type="radio" class="d-none field__checkbox__sb" value="" />
