                </li>*@
        </ul>
        @if (motivoOtros != null)
        {
            <div class="d-flex form__group__fields form__group__fields--motivoAdicionalWrapper">
                <input id="OtroMotivo" type="checkbox" class="d-none field__checkbox__sb" value="@motivoOtros.MotivoSolicitudID">
                <label for="OtroMotivo" class="border-radius-4 text-center label__checkbox__sb"></label>
                <span class="d-inline-block motivo__adicional__otro">@motivoOtros.Motivo</span>
            </div>
        }

        <div class="d-flex form__group__fields">
            <input id="txtOtroMotivo" type="text" class="d-block w-100 p-0 text__field__sb" placeholder="Dinos cuál fue el motivo">
        </div>
        <button class="d-block w-100 center-block border-radius-4 text-bold btn__sb--disabled btn__sb btn__sb__primary btn__sb__primary--multimarca btn__sb__primary--confirmar">Confirmar</button>
    </div>
    <div id="MotivosRechazo-Paso2" class="motivos__rechazo__modal__paso2" style="display:none;">
