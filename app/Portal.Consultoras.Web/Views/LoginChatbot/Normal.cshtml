@using System.Configuration;

@model Portal.Consultoras.Web.Models.LoginChatbot.LoginNormalChatbotModel
@{
    Layout = "~/Views/LoginChatbot/_Main.cshtml";
}
@section styles{
}
@section scripts{
    <script type="text/javascript" src="@Url.Content("~/Scripts/PortalConsultoras/LoginChatbot/Normal.js")"></script>
    <script type="text/javascript">
        var paisesEsika = '@(ConfigurationManager.AppSettings["PaisesEsika"] ?? "")';
        var cargaApiFacebook = false;
    </script>
}

<div class="logo_normal"> </div>
<div class="texto_normal">Ingresa a tu usuario de <b>SomosBelcorp</b> por única vez</div>
<hr class="clear" />
<div class="campo_input_chat">
    <select id="ddlPais" class="DropDown select_pais_chat" tabindex="1">
        <option value="">Elige tu País</option>
        @if (Model.ListaPaises != null)
        {
            foreach (var item in Model.ListaPaises)
            {
                <option value="@item.CodigoISO" data-id="@item.PaisID">@item.Nombre</option>
            }
        }
    </select>
    <hr class="clear" />
</div>
<div class="campo_input_chat icono_usuario_chatbot">
    <div class="titulo_campo">CÓDIGO</div>
    <input id="txtUsuario" type="text" class="inputForm input_chat" value="" onfocus="" onblur="" placeholder="Usuario o Correo Electrónico">
    <div class="ayuda_usuario_facebook_chatBot">
        <a href="#" class="helper_facebook_chatBot"></a>
        <div class="mensaje_ayuda_usuario_chatBot">
            Tu código de consultora,
            DNI o correo electronico.
        </div>
    </div>
</div>
<div class="campo_input_chat icono_pass_chatbot">
    <div class="titulo_campo">CONTRASEÑA</div>
    <input type="password" id="txtPassword" class="inputForm input_chat" placeholder="Contraseña" value="">
    <div class="ayuda_usuario_facebook_chatBot">
        <a href="#" class="helper_facebook_chatBot"></a>
        <div class="mensaje_ayuda_usuario_chatBot">
            Si es la primera vez que
            ingresas, es tu número
            de DNI.   
        </div>
    </div>
</div>

<input type="button" id="btnLogin" class="btnLogin" value="INGRESA A TU CUENTA" onclick="LoginNormal()">