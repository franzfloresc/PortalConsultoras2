@using Portal.Consultoras.Common
@{
    ViewBag.Title = "Generar Reserva SAP";
}

<style type="text/css">
    #SelectedRowList {
        margin-top: 5px;
        border: 1px solid #999;
        background-color: #EEE;
        padding: 5px;
    }
</style>

<script type="text/javascript" src="~/Scripts/jquery.form.js"></script>
<script type="text/javascript">

    jQuery(function () {
        IniFecha();
        $("#txtPais").val('@Util.SinAcentosCaracteres(ViewBag.NombrePais)');
        $("#btnGenerar").click(function () {
            GenerarReserva();
        });
    });

    function GenerarReserva() {
        var vMessage = "";

        if (jQuery.trim($("#txtFechaGeneracion").val()) == "") {
            vMessage += "Debe ingresar la Fecha de Generación.\n";
        }

        if (vMessage != "") {
            alert(vMessage);
            return false;
        }
        else {
            var waiting = {
                message: 'Espere unos minutos, por favor...',
                title: 'Ejecutando Proceso'
            };

            var params = {
                FechaGeneracion: $("#txtFechaGeneracion").val()
            };

            waitingDialog(waiting);

            $.ajax({
                type: 'POST',
                url: window.baseUrl + 'ReservaSAP/GenerarReserva',
                data: JSON.stringify(params),
                dataType: 'json',
                contentType: 'application/json; charset=utf-8',
                async: true,
                cache: false,
                timeout: 120000, /* Tiempo máximo de 2min. al generar la reserva*/
                success: function (data) {
                    if (checkTimeout(data)) {
                        closeWaitingDialog();
                        if (data.success == true) {
                            alert(data.mensaje);
                        }
                        else {
                            alert(data.mensaje);
                        }
                    }
                },
                error: function (data, error) {
                    if (checkTimeout(data)) {
                        closeWaitingDialog();
                        alert("Ocurrio un error del Sistema.");
                    }
                }
            });
        }

    }

    function IniFecha() {
        $("#txtFechaGeneracion").datepicker({
            showOn: "button",
            buttonImage: '@Url.Content("~/Content/Images/calendar.png")',
            buttonImageOnly: true,
            dateFormat: 'dd/mm/yy'
        }).mask('99/99/9999');

    }
</script>

<div class="wrap_cab">

    <div class="filtros">
        <div class="elements">
            <div class="div-2">
                <h1>Generar Reserva SAP</h1>
            </div>
        </div>
    </div>
</div>
<div class="wrap">
    <div class="container clearfix" style="min-height: 250px;">
        <div class="border-wrapper_reg">

            <div class="div-3">
                <div class="titF">País :</div>
                <div class="selectP2 disabled borde_redondeado">
                    <input type="text" id="txtPais" disabled="disabled" />
                </div>
            </div>
            <div class="div-3">
                <div class="titF">Fecha Generación :</div>
                <div class="calendar borde_redondeado">
                     <input type="text" id="txtFechaGeneracion">
                </div>
            </div>
            <div class="div-3">
                <div class="titF"></div>
                <div class="input_add_alert_left">
                    <input type="button" name="" id="btnGenerar" value="Generar" />
                </div>
            </div>
        </div>
    </div>
</div>
<div id="loadingScreen"></div>
