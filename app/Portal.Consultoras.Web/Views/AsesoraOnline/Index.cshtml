<div id="formulario-inscripcion" class="seccion_formulario_inscripcion">
    <div class="seccion_formulario_inscripcion_fondo">
        <img src="@Url.Content("~/Content/Images/fondo_form.png")" alt="" />
    </div>
    <div class="wrapper_contenido_asesora_online alinear_derecha tipografia_lato">
        <div class="titulo_formulario_inscripcion tipografia_lato_light">
            <span class="tipografia_lato_bold">RESPONDE ESTA ENCUESTA</span><br />¡Y SUSCRÍBETE!
        </div>
        <div class="contenedor_formulario">
            <form class="formulario_inscripcion tipografia_lato">
                <div class="seccion_primer_paso">
                    <div class="seccion_primer_paso_titulo">
                        <div class="texto_titulo">
                            <span class="tipografia_lato_bold">¿Cuál es tu método de venta preferido?</span>
                            <span class="tipografia_lato_regular">Puedes seleccionar más de una opción.</span>
                        </div>
                    </div>
                    <div class="lista_opciones_crecimiento_negocio">
                        <div class="opcion_crecimiento_negocio">
                            <input id="revisar-catalogo-clientes" type="checkbox" name="opcion-crecimiento-negocio" value="1">
                            <label for="revisar-catalogo-clientes">
                                <span></span>
                                Reviso el catálogo con mis clientes
                            </label>
                        </div>
                        <div class="opcion_crecimiento_negocio textoOpcionDejarCatalogo">
                            <input id="dejar-catalogo-clientes" type="checkbox" name="opcion-crecimiento-negocio" value="1">
                            <label for="dejar-catalogo-clientes">
                                <span></span>
                                Dejo el catálogo a mis clientes y vuelvo
                            </label>
                        </div>
                        <div class="opcion_crecimiento_negocio textoOpcionTienda">
                            <input id="mis-clientes-vienen" type="checkbox" name="opcion-crecimiento-negocio" value="1">
                            <label for="mis-clientes-vienen">
                                <span></span>
                                Mis clientes vienen a mi tienda o mi casa
                            </label>
                        </div>
                        <div class="opcion_crecimiento_negocio">
                            <input id="llamar-pedir-productos" type="checkbox" name="opcion-crecimiento-negocio" value="1">
                            <label for="llamar-pedir-productos">
                                <span></span>
                                Me llaman a pedirme los productos
                            </label>
                        </div>
                        <div class="opcion_crecimiento_negocio">
                            <input id="compartir-catalogos" type="checkbox" name="opcion-crecimiento-negocio" value="1">
                            <label for="compartir-catalogos">
                                <span></span>
                                Comparto catálogos digitales
                            </label>
                        </div>
                    </div>
                </div>
                <div class="seccion_enviar_formulario">
                    <div class="terminos_condiciones_form">
                        <span id="AcepteTYC" style="color: rgb(202, 3, 0); display: none;">Tiene que aceptar los Términos y Condiciones</span>
                        <div>
                            <input type="checkbox" id="terminos-condiciones" value="1">
                            <label class="tipografia_lato_light" for="terminos-condiciones">
                                <span></span>
                                Acepto los <a href="https://s3.amazonaws.com/somosbelcorp/2017/VirtualCoach/Terminos/TerminosCondicionVC.pdf" title="Términos y condiciones" target="_blank">términos y condiciones.</a>
                            </label>
                        </div>
                        <div>
                            <input class="btn_enviar_form tipografia_lato tipografia_lato_bold" type="submit" id="enviar-form" value="Suscribirme">
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>

