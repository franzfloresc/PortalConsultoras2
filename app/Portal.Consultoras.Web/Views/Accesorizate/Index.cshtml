            PaisID: paisID
        };
        waitingDialog({ title: "Procesando" });
        jQuery.ajax({
            type: 'POST',
            url: baseUrl + 'Accesorizate/' + accion,
            dataType: 'json',
            contentType: 'application/json; charset=utf-8',
            data: JSON.stringify(Item),
            async: true,
            success: function (data) {
                if (checkTimeout(data)) {
                    closeWaitingDialog();
