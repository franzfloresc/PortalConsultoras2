    function ExportExcel() {
        var m = true;
        if ($("#list").getGridParam("reccount") == 0) {
            m = confirm('La grilla se encuentra vacía.\n¿ Está seguro(a) que desea continuar con la operación ?');
        }
        if (!m) {
            return;
        }
        var vPaisID = jQuery.trim($("#ddlPais").val());
        var vCampaniaID = $("#ddlCampania").val();
        var vCodigoOferta = $("#ddlConfiguracionOferta").val();
        var vmessage = "";
        if (vPaisID == "")
            vmessage += "Debe seleccionar un País. \n";
        if (vCampaniaID == "")
            vmessage += "Debe seleccionar la Campaña \n";

        if (vmessage != "") {
            alert(vmessage);
            return false;
        }
        else {
            waitingDialog({});

            setTimeout(function () {
                DownloadAttachExcel(vPaisID, vCampaniaID, vCodigoOferta)
            }, 0);
        }
    }

    function DownloadAttachExcel(vPaisID, vCampania, vCodigoOferta) {

        var content = baseUrl + "Accesorizate/ExportarExcel?" +
            "vPaisID=" + vPaisID +
            "&vCampania=" + vCampania +
            "&vCodigoOferta=" + vCodigoOferta;

        var iframe_ = document.createElement("iframe");
        iframe_.style.display = "none";
        iframe_.setAttribute("src", content);

        if (navigator.userAgent.indexOf("MSIE") > -1 && !window.opera) { // Si es Internet Explorer
            iframe_.onreadystatechange = function () {
                switch (this.readyState) {
                    case "loading":
                        waitingDialog({});
                        break;
                    case "complete":
                    case "interactive":
                    case "uninitialized":
                        closeWaitingDialog();
                        break;
                    default:
                        closeWaitingDialog();
                        break;
                }
            };
        }
        else {
            // Si es Firefox o Chrome
            $(iframe_).ready(function () {
                closeWaitingDialog();
            });
        }
        document.body.appendChild(iframe_);
    }

