            mtype: 'GET',
            contentType: "application/json; charset=utf-8",
            colNames: ['Tipo Oferta', 'Código SAP', 'Campaña', 'CUV', 'Descripción', 'Precio Oferta', 'Orden', 'Saldo', 'Stock Inicial', 'Unid.Permitidas', 'Foto', ''],
