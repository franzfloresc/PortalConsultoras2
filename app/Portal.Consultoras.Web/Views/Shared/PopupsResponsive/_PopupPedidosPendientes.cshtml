@*MC - HD-4277 - POPUP PEDIDOS PENDIENTES POR APROBAR*@
<link href="@Url.Content("~/Content/Css/Site/Shared/PopupsResponsive/general-popups.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/Css/Site/Shared/PopupsResponsive/popup-pedidos-pendientes.css")" rel="stylesheet" />

@{
    var isMobile = (bool)ViewData["isMobile"];
    var toFrom = (isMobile) ? "mobile" : "";
}

<div class="popup__wrapper bg__popups__default" id="PopupPedidosPendientes">
    <div class="popup__somos__belcorp popup__somos__belcorp--pedidosPendientes">
        <div class="popup__somos__belcorp__cabecera">
            <a onclick="javascript:$('#PopupPedidosPendientes').fadeOut(100);" title="Cerrar" class="popup__somos__belcorp__icono__cerrar popup__somos__belcorp__icono__cerrar--pedidosPendientes">
                <img src="@Url.Content("~/Content/Images/icono_cerrar_popup.svg")" alt="Cerrar Popup" />
            </a>
        </div>
        <div class="popup__somos__belcorp__contenido text-center">
            <div class="popup__somos__belcorp__icono popup__somos__belcorp__icono--pedidosPendientes center-block">
                <img src="@Url.Content("~/Content/Images/icono_notificacion_negativa.svg")" alt="Tienes pedidos pendientes por aprobar" />
            </div>
            <h2 class="popup__somos__belcorp__titulo popup__somos__belcorp__titulo--pedidosPendientes">
                Tienes pedidos pendientes
            </h2>
            <p class="text-center popup__somos__belcorp__mensaje popup__somos__belcorp__mensaje--pedidosPendientes">
                Para finalizar tu reserva <span class="text-bold">debes aprobar o rechazar</span> los pedidos que te han solicitado.
            </p>
            <a class="center-block text-center text-bold multimarca-background-color popup__somos__belcorp__btn popup__somos__belcorp__btn--verPedidosPorAprobar"
               href="@Url.Action("Pendientes","ConsultoraOnline",new { area = toFrom })">
                Ver pedidos por aprobar
            </a>
        </div>
    </div>
</div>
@*FIN - MC - HD-4277 - POPUP PEDIDOS PENDIENTES POR APROBAR*@