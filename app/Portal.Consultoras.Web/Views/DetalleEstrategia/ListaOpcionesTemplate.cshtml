<script id="lista-opciones-template" type="text/x-handlebars-template">
    {{#each this.Hermanos as |componente|}}
    {{#IsNullOrEmpty componente.NombreBulk '!='}}
    <ul {{#if TieneStock}}
        class="selecion_item list-inline"
        {{else}}
        class="selecion_item list-inline selecion_item_agotado"
        {{/if}}>
        <li class="seleccion_img"><img src="{{componente.ImagenBulk}}" alt=""></li>
        <li class="seleccion_title">{{#Substr 35 componente.NombreBulk}}{{/Substr}}</li>
        {{#iff this.FactorCuadre '==' '1'}}
            {{#iff componente.cantidadSeleccionada '==' '0'}}
                {{#if TieneStock}}
                    <li class="seleccion_btn" id="li-eligelo-{{componente.Cuv}}">
                        <button id="btn-eligelo-{{componente.Cuv}}"
                                {{#if ../esCampaniaSiguiente}}
                                class="disabled"
                                {{else}}
                                {{#if componente.EleccionBloqueada}}
                                class="disabled"
                                {{/if}}
                                {{/if}}
                                onclick="javascript: ListaOpcionesModule.SeleccionarOpcion('{{componente.Cuv}}')">Elígelo
                        </button>
                    </li>
                {{else}}
                    <li class="seleccion_btn" id="li-eligelo-{{componente.Cuv}}">
                        <button id="btn-eligelo-{{componente.Cuv}}" class="btn-eligelo-agotado">
                            Agotado
                        </button>
                    </li>
                {{/if}}
            {{else}}
            <li class="seleccion_btn" id="li-eligelo-{{componente.Cuv}}">
                <button id="btn-eligelo-{{componente.Cuv}}"
                        class="active"
                        onclick="javascript: ListaOpcionesModule.SeleccionarOpcion('{{componente.Cuv}}')">
                    Elegido
                </button>
            </li>
            {{/iff}}
        {{else}}
            <li class="seleccion_btn" id="li-eligelo-{{componente.Cuv}}"
                {{#iff componente.cantidadSeleccionada '!=' '0'}}
                style="display:none"
                {{/iff}}>

                {{#if TieneStock}}
                <button id="btn-eligelo-{{componente.Cuv}}"
                        {{#if ../esCampaniaSiguiente}}
                        class="disabled"
                        {{else}}
                        {{#if componente.EleccionBloqueada}}
                        class="disabled"
                        {{/if}}
                        {{/if}}
                        onclick="javascript: ListaOpcionesModule.SeleccionarOpcion('{{componente.Cuv}}')">
                    Elígelo
                </button>
                {{else}}
                <button id="btn-eligelo-{{componente.Cuv}}" class="btn-eligelo-agotado">
                    Agotado
                </button>
                {{/if}}
            </li>
        <li class="seleccion_btn seleccion_cantidad" id="li-cantidad-opciones-{{componente.Cuv}}"
            {{#iff componente.cantidadSeleccionada '==' '0'}}
            style="display:none"
            {{/iff}}>
            <div {{#if componente.EleccionBloqueada}}
                 class="contenedor_rangos disabled"
                 {{else}}
                 class="contenedor_rangos"
                 {{/if}} data-cantidad-contenedor="">
                <input class="txt_cantidad_pedido ValidaNumeral ValidaPasteNumeral" type="text"
                       {{#iff componente.cantidadSeleccionada '==' '0'}}
                       value="1"
                       {{else}}
                       value="{{componente.cantidadSeleccionada}}"
                       {{/iff}} size="2" maxlength="2" data-input="cantidad" data-cantidad-input="-" disabled>
                <div>
                    <a class="txt_menos" data-cantidad-agregar="-" {{#if componente.EleccionBloqueada}} {{else}} onclick="javascript:ListaOpcionesModule.EliminarOpcion('{{componente.Cuv}}',event)" {{/if}}>
                        <div class="dibujar_linea dibujar_menos"></div>
                    </a>
                    <a class="txt_mas" data-cantidad-agregar="+" onclick="javascript:ListaOpcionesModule.SeleccionarOpcion('{{componente.Cuv}}',event)">
                        <div class="dibujar_linea dibujar_mas"></div>
                    </a>
                </div>
            </div>
        </li>
        {{/iff}}

    </ul>
    {{/IsNullOrEmpty}}
    {{/each}}
</script>
