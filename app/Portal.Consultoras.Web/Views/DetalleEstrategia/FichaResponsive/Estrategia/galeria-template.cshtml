@using Portal.Consultoras.Common

<script id="galeria-template" type="text/x-handlebars-template">
    <div class="col-2 d-none d-sm-none d-md-none d-lg-block" style="margin-top: 20px;">
        <div class="contenedor_imagen_thumbnail {{#if this.EsFichaEnriquecida}} slider-nav-detail {{else}} slider-nav {{/if}}">
            <div class="contenedor_carrusel">
                {{#iff this.EsFichaEnriquecida}}
                    <img src="{{ImgUrl ImagenBulk}}" class="img-fluid" />
                {{else}}
                    {{#iff TipoPersonalizacion '==' 'CAT'}}
                        <img src="{{FotoProducto01}}" data-imagen-producto="{{FotoProducto01}}" />
                    {{/iff}}
                    {{#iff TipoPersonalizacion '!=' 'CAT'}}
                        {{#if isMobile}}
                            <img src="{{ImgMedium FotoProducto01}}" data-imagen-producto="{{ImgMedium FotoProducto01}}" />
                        {{else}}
                            <img src="{{ImgUrl FotoProducto01}}" data-imagen-producto="{{ImgUrl FotoProducto01}}" />
                        {{/if}}
                    {{/iff}}
                {{/iff}}
            </div>
            {{#each this.FotosCarrusel as |foto|}}
                <div class="contenedor_carrusel">
                    <img src="{{foto}}" class="img-fluid" />
                </div>
            {{/each}}
        </div>
    </div>
    <div class="col-lg-9 col-md-12">
        <div class="contenedor_imagen {{#if this.EsFichaEnriquecida}} slider-for-detail {{else}} slider-for {{/if}}">
            <div class="contenedor_carrusel">
                {{#iff this.EsFichaEnriquecida}}
                    <img src={{ImgUrl this.ImagenBulk}} />
                {{else}}
                    {{#iff this.TipoPersonalizacion '==' 'CAT'}}
                        <img src="{{this.FotoProducto01}}" data-imagen-producto="{{this.FotoProducto01}}" />
                    {{/iff}}
                    {{#iff this.TipoPersonalizacion '!=' 'CAT'}}
                        {{#if isMobile}}
                            <img src="{{ImgMedium this.FotoProducto01}}" data-imagen-producto="{{ImgMedium this.FotoProducto01}}" />
                        {{else}}
                            <img src="{{ImgUrl this.FotoProducto01}}" data-imagen-producto="{{ImgUrl this.FotoProducto01}}" />
                        {{/if}}
                    {{/iff}}
                {{/iff}}
            </div>
            {{#each this.FotosCarrusel as |foto|}}
                <div class="contenedor_carrusel">
                    <img src="{{foto}}" />
                </div>
            {{/each}}
        </div>
        {{#iff this.EsFichaEnriquecida}}
            <p class="text-center pt-5 pt-md-2">* Foto Referencial</p>
        {{else}}
            {{#iff CodigoVariante 'ContainsArray' '[@Constantes.TipoEstrategiaSet.IndividualConTonos,@Constantes.TipoEstrategiaSet.CompuestaVariable]'}}
                <p class="text-center pt-5 pt-md-2">* Foto Referencial</p>
            {{/iff}}
        {{/iff}}
    </div>
</script>
