<script id="resumen-opciones-template" type="text/x-handlebars-template">
    {{#each this.Hermanos as |componente|}}
    {{#iff componente.cantidadAplicada '>' 0}}
    <ul class="tonos_seleccionados_item {{#iff this.CodigoVariante '==' '2001'}}tono_seleccionado{{/iff}}" data-tono="">
        <li class="imagen_seleccionado"><img src="{{componente.ImagenBulk}}" alt="" /></li>
        <li class="titulo_selecionado">
            <span class="cantidad_producto_opt">x{{componente.cantidadAplicada}} </span> 
            <span class="descripcion_tipo">{{#Substr 25  componente.NombreBulk}}{{/Substr}}</span>
        </li>
    </ul>
    {{/iff}}
    {{/each}}

    {{#iff this.resumenAplicados.length '>' 0}}
    {{#each this.resumenAplicados as |componente|}}
    <div data-tono="" data-tono-select="{{componente.Cuv}}" style="display: none;">
        <input type="hidden" name="nameMarcaID" id="Estrategia_hd_MarcaID" value="{{componente.IdMarca}}" />
        <input type="hidden" name="namePrecioCatalogo" id="Estrategia_hd_PrecioCatalogo" value="{{componente.PrecioCatalogo}}" />
    </div>
    {{/each}}
    {{/iff}}

    <a class="btn_cambiar_opciones {{#iff this.CodigoVariante '==' '2001'}}cambiar_opcion{{/iff}}" href="#" onclick="javascript: ComponentesModule.SeleccionarComponente('{{this.Cuv}}')">
        {{#iff this.FactorCuadre '==' '1'}}
        Cambiar opción
        {{else}}
        Cambiar opciones
        {{/iff}}
        <img src="/Content/Images/mobile/Esika/right-arrow.svg" alt="" />
    </a>
    {{#iff this.CodigoVariante '==' '2001'}}
    <hr class="clear">
    {{/iff}}
</script>