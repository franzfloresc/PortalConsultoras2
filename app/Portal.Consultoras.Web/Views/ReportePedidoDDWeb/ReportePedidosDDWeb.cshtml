                                value: item.Codigo,
                                id: item.ConsultoraID
                            };
                        }));
                    }
                })
            },
            select: function (event, ui) {
                $("#hdn_CondultoraID").val(ui.item.id);
            },
            minLength: 3,
        });
        $("#btnBuscar").click(function () {
            if ($("#ddlPais").val() == "") {
                alert("Debe seleccionar un País, verifique");
                return false;
            }
