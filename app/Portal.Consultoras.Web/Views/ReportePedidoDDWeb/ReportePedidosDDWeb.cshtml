                alert("Debe seleccionar una Campaña, verifique");
                return false;
            }
            fnGrilla();
        });
        $("#txtCodConsultora").keypress(function (evt) {
            var charCode = (evt.which) ? evt.which : window.event.keyCode;
            if (charCode <= 13) {
                return false;
            }
            else {
                var keyChar = String.fromCharCode(charCode);
                var re = /[a-zA-Z0-9ñÑáéíóúÁÉÍÓÚ]/;
                return re.test(keyChar);
            }
        });
        // SB20-871
        $("#ddlEsRechazado").change(function () {
            var value = this.value;
            if (value == "1") {
                $("#ddlOrigen").val(2).change();
                $("#ddlEnviadosValidacion").val(0).change();
            }
        });

        $("#ddlOrigen").change(function () {
            if ($(this).val() == 1) {
                //$("#chkEsRechazado").attr('checked', false);
            }
        });

        fnGrilla();
    });
    function DownloadAttachExcel(vPaisID, vCampania, vConsultora, vRegionID, vZonaID, vOrigen, vEstadoValidacion, vEsRechazado) {
        // TODO: probar la repercusion de este if
        if (checkTimeout()) {
            var isPedido = "ExportarExcelCabecera";
            if ($("#hdnPedidoDetalle").val() === "1") {
                $("#hdnPedidoDetalle").val("0");
                isPedido = "ExportarExcelDetallePedido";
            }
            var content = baseUrl + "ReportePedidoDDWeb/" + isPedido + "?vPaisID=" + vPaisID +
                                "&vCampania=" + vCampania +
                                "&vConsultora=" + vConsultora +
                                "&vRegionID=" + vRegionID +
                                "&vZonaID=" + vZonaID +
                                "&vOrigen=" + vOrigen +
                                "&vEstadoValidacion=" + vEstadoValidacion +
                                "&vEsRechazado=" + vEsRechazado;

            var iframe_ = document.createElement("iframe");
            iframe_.style.display = "none";
            iframe_.setAttribute("src", content);
            iframe_.frameBorder = 0;

            if (navigator.userAgent.indexOf("MSIE") > -1 && !window.opera) { // Si es Internet Explorer
                iframe_.onreadystatechange = function () {
                    switch (this.readyState) {
                        case "loading":
                            waitingDialog({});
                            break;
                        case "complete":
                        case "interactive":
                        case "uninitialized":
                            closeWaitingDialog();
                            delCookie("DescargaCompleta");
                            break;
                        default:
                            closeWaitingDialog();
                            delCookie("DescargaCompleta");
                            break;
                    }
                };
            }
            else {
                // Si es Firefox o Chrome
                document.body.appendChild(iframe_);

                var _timer = setInterval(function () {
                    var success = getCookie("DescargaCompleta");
                    if (success === "1") {
                        clearInterval(_timer);
                        closeWaitingDialog();
                        delCookie("DescargaCompleta");
                    }
                }, 1000)
                return;
            }

            document.body.appendChild(iframe_);
        }
    }

    function getCookie(name) {
        var pairs = document.cookie.split("; "),
            count = pairs.length, parts;
        while (count--) {
            parts = pairs[count].split("=");
            if (parts[0] === name)
                return parts[1];
        }
        return false;
    }

    function delCookie(name) {
        date = new Date();
        date.setDate(date.getDate() - 1);
        document.cookie = name + "=" + '=;expires=' + date + "; path=/";
    }
    function LimpiarDependencias(Id) {
        var ddlCampania = $('#ddlCampania');
        var ddlZona = $('#ddlZona');
        ddlCampania.empty();
        ddlZona.empty();

        if (Id == "") {
            ddlZona.append($('<option/>', {
                value: "",
                text: "-- Todas --"
            }));
        } else {
            ddlZona.append($('<option/>', {
                value: "",
                text: "-- Todas --"
            }));
        }
        ddlCampania.append($('<option/>', {
            value: "",
            text: "-- Seleccionar --"
        }));
    }
    function fnGrilla() {
