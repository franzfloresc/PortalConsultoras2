                alert("Debe seleccionar una Campaña, verifique");
                return false;
            }

            fnGrilla();
        });
        $("#btnExcel").click(function () {
            if ($("#ddlPais").val() == "") {
                alert("Debe seleccionar un País, verifique");
                return false;
            }
            if ($("#ddlCampania").val() == "") {
                alert("Debe seleccionar una Campaña, verifique");
                return false;
            }
            waitingDialog({});

            var paisID = jQuery.trim($("#ddlPais").val());
            var campania = jQuery.trim($("#ddlCampania").val());
            var consultora = jQuery.trim($("#txtCodConsultora").val());
            var regionID = $('#ddlRegion option:selected').text();
            var zonaID = jQuery.trim($("#ddlZona").val());
            var origen = jQuery.trim($("#ddlOrigen").val());
            var estadoValidacion = jQuery.trim($("#ddlEnviadosValidacion").val());
            var esRechazado = jQuery.trim($("#ddlEsRechazado option:selected").val());
            var fechaInicio = $("#txtFechaInicio").val();
            var fechaFin = $("#txtFechaFin").val();

            setTimeout(function () {
                DownloadExcelPedido(paisID, campania, consultora, regionID, zonaID, origen, estadoValidacion, esRechazado, fechaInicio, fechaFin)
            }, 0);
        });

        fnGrilla();
    });

    function DownloadExcelPedido(paisID, campania, consultora, regionID, zonaID, origen, estadoValidacion, esRechazado, fechaInicio, fechaFin) {        
        var urlExcel = "ExportarExcelCabecera";
        var urlCount = "ValidLimitCountCabecera";
        var mensajeError = "@Html.Raw(Constantes.MensajesError.ReportePedidoDDWeb_DescargaCabecera)";
        if ($("#hdnPedidoDetalle").val() === "1") {
            $("#hdnPedidoDetalle").val("0");
            urlExcel = "ExportarExcelDetallePedido";
            urlCount = "ValidLimitCountDetalle";
            mensajeError = "@Html.Raw(Constantes.MensajesError.ReportePedidoDDWeb_DescargaDetalle)";
        }

        var parameters = "?PaisID=" + paisID +
            "&Campania=" + campania +
            "&Consultora=" + consultora +
            "&RegionID=" + regionID +
            "&ZonaID=" + zonaID +
            "&Origen=" + origen +
            "&EstadoValidacion=" + estadoValidacion +
            "&EsRechazado=" + esRechazado +
            "&FechaInicio=" + fechaInicio +
            "&FechaFin=" + fechaFin;

        waitingDialog();
        $.get(baseUrl + "ReportePedidoDDWeb/" + urlCount + parameters)
            .done(function (response) {
                if (!checkTimeout(response)) return false;

                if (!response.success) alert(response.message);
                else DownloadAttachExcel(baseUrl + "ReportePedidoDDWeb/" + urlExcel + parameters);
            })
            .fail(function() { alert(mensajeError); })
            .always(closeWaitingDialog);
    }

    function DownloadAttachExcel(content) {
        var iframe_ = document.createElement("iframe");
        iframe_.style.display = "none";
        iframe_.setAttribute("src", content);
        iframe_.frameBorder = 0;

        if (navigator.userAgent.indexOf("MSIE") > -1 && !window.opera) { // Si es Internet Explorer
            iframe_.onreadystatechange = function () {
                switch (this.readyState) {
                    case "loading":
                        waitingDialog();
                        break;
                    case "complete":
                    case "interactive":
                    case "uninitialized":
                        closeWaitingDialog();
                        delCookie("DescargaCompleta");
                        break;
                    default:
                        closeWaitingDialog();
                        delCookie("DescargaCompleta");
                        break;
                }
            };
        }
        else {
            // Si es Firefox o Chrome
            document.body.appendChild(iframe_);

            var _timer = setInterval(function () {
                var success = getCookie("DescargaCompleta");
                if (success === "1") {
                    clearInterval(_timer);
                    closeWaitingDialog();
                    delCookie("DescargaCompleta");
                }
            }, 1000)
            return;
        }

        document.body.appendChild(iframe_);
    }

    function getCookie(name) {
        var pairs = document.cookie.split("; "),
            count = pairs.length, parts;
        while (count--) {
            parts = pairs[count].split("=");
            if (parts[0] === name)
                return parts[1];
        }
        return false;
    }

    function delCookie(name) {
        date = new Date();
        date.setDate(date.getDate() - 1);
        document.cookie = name + "=" + '=;expires=' + date + "; path=/";
    }
    function LimpiarDependencias(Id) {
        var ddlCampania = $('#ddlCampania');
        var ddlZona = $('#ddlZona');
        ddlCampania.empty();
        ddlZona.empty();

        if (Id == "") {
            ddlZona.append($('<option/>', {
                value: "",
                text: "-- Todas --"
            }));
        } else {
            ddlZona.append($('<option/>', {
                value: "",
                text: "-- Todas --"
            }));
        }
        ddlCampania.append($('<option/>', {
            value: "",
            text: "-- Seleccionar --"
        }));
    }
