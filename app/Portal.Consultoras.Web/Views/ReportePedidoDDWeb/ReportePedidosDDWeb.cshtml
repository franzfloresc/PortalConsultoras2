        $('#ddlRegion').change(function () {
            var Id = $(this).val();
            if (Id != null) {
                waitingDialog({});
                $.ajaxSetup({ cache: false });
                $.ajax({
                    type: 'GET',
                    url: baseUrl + 'ReportePedidoDDWeb/ObtenerZonasByRegion',
                    data: "PaisID=" + $("#ddlPais").val() + "&RegionID=" + (Id == "" ? -1 : Id),
                    cache: false,
                    dataType: 'Json',
                    success: function (data) {
                        if (checkTimeout(data)) {
                            var ddlZona = $('#ddlZona');
                            ddlZona.empty();
                            if (data.listaZonas.length > 0) {
                                ddlZona.append($('<option/>', {
                                    value: "",
                                    text: "-- Todas --"
                                }));
                                for (var item in data.listaZonas) {
                                    if (data.listaZonas.hasOwnProperty(item)) {
                                        ddlZona.append($('<option/>', {
                                            value: data.listaZonas[item].Codigo,
                                            text: data.listaZonas[item].Codigo
                                        }));
                                    }
                                }
                            }
                            closeWaitingDialog();
                        }
                    },
                    error: function (x, xh, xhr) {
                        if (checkTimeout(x)) {
                            closeWaitingDialog();
                        }
                    }
                });
            }
        });

        $('#ddlPais').change(function () {
            var Id = $(this).val();
            if (Id != null) {
                waitingDialog({});
                $.ajaxSetup({ cache: false });
                $.getJSON(baseUrl + 'ReportePedidoDDWeb/ObtenterCampaniasyZonasPorPais', { PaisID: Id == "" ? 0 : Id }, function (data) {
                    if (checkTimeout(data)) {
                        LimpiarDependencias(Id);
                        if (Id != "") {
                            var ddlRegion = $('#ddlRegion');
                            var ddlZona = $('#ddlZona');
                            var ddlCampania = $('#ddlCampania');
                            if (data.DropDownListCampania.length > 0) {
                                for (var item in data.DropDownListCampania) {
                                    if (data.DropDownListCampania[item].CampaniaID) {
                                        ddlCampania.append($('<option/>', {
                                            value: data.DropDownListCampania[item].Codigo,
                                            text: data.DropDownListCampania[item].Codigo
                                        }));
                                    }
                                }
                            }
                            if (data.DropDownListZona.length > 0) {
                                for (var item in data.DropDownListZona) {
                                    if (data.DropDownListZona.hasOwnProperty(item)) {
                                        ddlZona.append($('<option/>', {
                                            value: data.DropDownListZona[item].Codigo,
                                            text: data.DropDownListZona[item].Codigo
                                        }));
                                    }
                                }
                            }
                            if (data.DropDownListRegion.length > 0) {
                                for (var item in data.DropDownListRegion) {
                                    if (data.DropDownListRegion.hasOwnProperty(item)) {
                                        ddlRegion.append($('<option/>', {
                                            value: data.DropDownListRegion[item].RegionID,
                                            text: data.DropDownListRegion[item].Codigo
                                        }));
                                    }
                                }
                            }
                        }
                        closeWaitingDialog();
                    }
                });
            }
        });

        $("#txtCodConsultora").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: baseUrl + "ReportePedidoDDWeb/SelectConsultora", type: "GET", dataType: "json",
                    data: {
                        paisID: $("#ddlPais").val(),
                        codigo: request.term,
                        rowCount: 10
                    },
                    success: function (data) {
                        response($.map(data, function (item) {
                            return {
