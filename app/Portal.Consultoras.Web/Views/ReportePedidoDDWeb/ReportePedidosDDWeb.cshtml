<script type="text/javascript">
    jQuery(document).ready(function () {
        $('#ddlPais').change(function () {
            var Id = $(this).val();
            if (Id != null) {
                waitingDialog({});
                $.ajaxSetup({ cache: false });
                $.getJSON(baseUrl + 'BaseAdm/ObtenerCampaniasZonasRegionesPorPais', { PaisID: Id == "" ? 0 : Id }, function (data) {
                    if (checkTimeout(data)) {
                        LimpiarDependencias(Id);
                        if (Id != "") {
                            var ddlRegion = $('#ddlRegion');
                            var ddlZona = $('#ddlZona');
                            var ddlCampania = $('#ddlCampania');
                            if (data.lstCampania.length > 0) {
                                for (var item in data.lstCampania) {
                                    if (data.lstCampania[item].CampaniaID) {
                                        ddlCampania.append($('<option/>', {
                                            value: data.lstCampania[item].Codigo,
                                            text: data.lstCampania[item].Codigo
                                        }));
                                    }
                                }
                            }
                            if (data.lstZona.length > 0) {
                                for (var item in data.lstZona) {
                                    if (data.lstZona.hasOwnProperty(item)) {
                                        ddlZona.append($('<option/>', {
                                            value: data.lstZona[item].Codigo,
                                            text: data.lstZona[item].Codigo
                                        }));
                                    }
                                }
                            }
                            if (data.lstRegion.length > 0) {
                                for (var item in data.lstRegion) {
                                    if (data.lstRegion.hasOwnProperty(item)) {
                                        ddlRegion.append($('<option/>', {
                                            value: data.lstRegion[item].RegionID,
                                            text: data.lstRegion[item].Codigo
                                        }));
                                    }
                                }
                            }
                        }
                        closeWaitingDialog();
                    }
                });
            }
        });
        $('#ddlRegion').change(function () {
            var Id = $(this).val();
            if (Id != null) {
                waitingDialog({});
                $.ajaxSetup({ cache: false });
                $.ajax({
                    type: 'GET',
                    url: baseUrl + 'ReportePedidoDDWeb/ObtenerZonasByRegion',
                    data: "PaisID=" + $("#ddlPais").val() + "&RegionID=" + (Id == "" ? -1 : Id),
                    cache: false,
                    dataType: 'Json',
                    success: function (data) {
                        if (checkTimeout(data)) {
                            var ddlZona = $('#ddlZona');
                            ddlZona.empty();
                            if (data.listaZonas.length > 0) {
                                ddlZona.append($('<option/>', {
                                    value: "",
                                    text: "-- Todas --"
                                }));
                                for (var item in data.listaZonas) {
                                    if (data.listaZonas.hasOwnProperty(item)) {
                                        ddlZona.append($('<option/>', {
                                            value: data.listaZonas[item].Codigo,
                                            text: data.listaZonas[item].Codigo
                                        }));
                                    }
                                }
                            }
                            closeWaitingDialog();
                        }
                    },
                    error: function (x, xh, xhr) {
                        if (checkTimeout(x)) {
                            closeWaitingDialog();
                        }
                    }
                });
            }
        });

        $("#txtCodConsultora").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: baseUrl + "ReportePedidoDDWeb/SelectConsultora", type: "GET", dataType: "json",
                    data: {
                        paisID: $("#ddlPais").val(),
                        codigo: request.term,
                        rowCount: 10
                    },
                    success: function (data) {
                        response($.map(data, function (item) {
                            return {
                                label: item.Codigo,
                                value: item.Codigo,
                                id: item.ConsultoraID
                            };
                        }));
                    }
                })
            },
            select: function (event, ui) {
                $("#hdn_CondultoraID").val(ui.item.id);
            },
            minLength: 3,
        });
        $("#txtCodConsultora").keypress(function (evt) {
            var charCode = (evt.which) ? evt.which : window.event.keyCode;
            if (charCode <= 13) {
                return false;
            }
            else {
                var keyChar = String.fromCharCode(charCode);
                var re = /[a-zA-Z0-9ñÑáéíóúÁÉÍÓÚ]/;
                return re.test(keyChar);
            }
        });
        $("#ddlEsRechazado").change(function () {
            var value = this.value;
            if (value == "1") {
                $("#ddlOrigen").val(2).change();
                $("#ddlEnviadosValidacion").val(0).change();
            }
        });

        $("#ddlOrigen").change(function () {
            if ($(this).val() == 1) {
            }
        });

        $("#txtFechaInicio, #txtFechaFin").datepicker({
            showOn: "button",
            buttonImage: '@Url.Content("~/Content/Images/calendar.png")',
            buttonImageOnly: true,
            dateFormat: 'dd/mm/yy'
