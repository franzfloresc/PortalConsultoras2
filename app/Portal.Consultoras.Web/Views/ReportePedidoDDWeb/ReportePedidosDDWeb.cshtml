                vRegionID: function () { return jQuery.trim($('#ddlRegion option:selected').text()); },
                vZonaID: function () { return jQuery.trim($("#ddlZona").val()); },
                vOrigen: function () { return jQuery.trim($("#ddlOrigen").val()); },
                vEstadoValidacion: function () { return jQuery.trim($("#ddlEnviadosValidacion").val()); },
                vEsRechazado: function () { return $("#ddlEsRechazado option:selected").val(); }
