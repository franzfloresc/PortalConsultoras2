            colModel: [
                { name: 'paisISO', index: 'paisISO', width: 0, editable: false, align: 'center', hidden: true },
                { name: 'NroRegistro', index: 'NroRegistro', width: 6, editable: true, resizable: false },
                { name: 'FechaRegistro', index: 'FechaRegistro', width: 10, editable: true, resizable: false },
                { name: 'FechaReserva', index: 'FechaReserva', width: 10, editable: true, resizable: false },
                { name: 'CampaniaCodigo', index: 'CampaniaCodigo', width: 8, editable: true, resizable: false },
                { name: 'Seccion', index: 'Seccion', width: 6, editable: true, resizable: false },
                { name: 'Region', index: 'Region', width: 6, editable: true, resizable: false },
                { name: 'Zona', index: 'Zona', width: 6, editable: true, resizable: false },
                { name: 'ConsultoraCodigo', index: 'ConsultoraCodigo', width: 10, editable: true, resizable: false },
                { name: 'ConsultoraNombre', index: 'ConsultoraNombre', width: 15, editable: true, resizable: false },
                { name: 'PrimeraCampaniaCodigo', index: 'PrimeraCampaniaCodigo', width: 8, editable: true, resizable: false },
                { name: 'ImporteTotal', index: 'ImporteTotal', width: 8, editable: true, resizable: false },
                { name: 'ImporteTotalConDescuento', index: 'ImporteTotalConDescuento', width: 8, editable: true, resizable: false },
                { name: 'ConsultoraSaldo', index: 'ConsultoraSaldo', width: 8, editable: true, resizable: false },
                { name: 'OrigenNombre', index: 'OrigenNombre', width: 6, editable: true, resizable: false },
                { name: 'EstadoValidacionNombre', index: 'EstadoValidacionNombre', width: 6, editable: true, resizable: false },
                { name: 'IndicadorEnviado', index: 'IndicadorEnviado', width: 6, editable: true, resizable: false },
                { name: 'TipoProceso', index: 'TipoProceso', width: 0, editable: false, align: 'center', hidden: true },
                {
                    name: 'MotivoRechazo', index: 'MotivoRechazo', width: 12, editable: true, resizable: false,
                    cellattr: function (rowId, tv, rawObject, cm, rdata) {
                        return 'style="white-space:normal !important;word-break: break-all;"'
                    },
                    formatter: function (cellValue, options, rowObject) {
                        console.log(cellValue);
                        return cellValue.replace(',', '<br/>');
                    }
                },
                { name: 'Detalle', index: 'Detalle', width: 6, editable: true, sortable: false, align: 'center', resizable: false, formatter: ShowActions }
            ],
            jsonReader:
                {
                    root: "rows",
                    page: "page",
                    total: "total",
                    records: "records",
                    repeatitems: true,
                    cell: "cell",
                    idCampania: "idCampania",
                    idPedido: "idPedido"
                },
            pager: jQuery('#pager'),
            loadtext: 'Cargando datos...',
            recordtext: "{0} - {1} de {2} Registros",
            emptyrecords: 'No hay resultados',
            rowNum: 10,
            scrollOffset: 0,
            rowList: [10, 20, 30, 40, 50],
            sortname: 'CampaniaCodigo',
            sortorder: 'asc',
            multiselect: false,
            height: 'auto',
            width: 1200,
            pgtext: 'Pág: {0} de {1}',
            altRows: true,
            altclass: 'jQGridAltRowClass',
            loadComplete: function () { },
            gridComplete: function () { }
        });
        jQuery("#gvwPedidosCampana").jqGrid('navGrid', "#pager", { edit: false, add: false, refresh: false, del: false, search: false });
        jQuery("#gvwPedidosCampana").setGridParam({ datatype: 'json', page: 1 }).trigger('reloadGrid');

        var paisID = '@ViewBag.PaisOcultoID';
        // 9 - México - 1630
        if (paisID != '9') {
            var myGrid = $('#gvwPedidosCampana');
            myGrid.jqGrid('hideCol', myGrid.getGridParam("colModel")[9].name);
        }


    }

    function SendData(paisISO, CampaniaCod, ConsultoraCod, ConsultoraNombre, UsuarioNombre, Origen, Validado, Saldo, Importe, importeConDescuento, tipoProceso, motivoRechazo) {
        var form1 = document.createElement("form");
        var data = document.createElement("input");
        form1.setAttribute("id", "form1");
        form1.action = baseUrl + "ReportePedidoDDWeb/ReportePedidosDDWebDetalle";
        form1.setAttribute("method", "POST");
        data.setAttribute("type", "hidden");
        data.setAttribute("name", "data");
        var d = {
            paisISO: paisISO,
            CampaniaCod: CampaniaCod,
            ConsultoraCod: ConsultoraCod,
            ConsultoraNombre: ConsultoraNombre,
            UsuarioNombre: UsuarioNombre,
            Origen: Origen,
            Validado: Validado,
            Saldo: Saldo,
            Importe: Importe,
            ImporteConDescuento: importeConDescuento,
            Usuario: $("#hdnUsuario").val(),
            TipoProceso: tipoProceso,
            MotivoRechazo: motivoRechazo == 'null' ? '' : motivoRechazo
        }
        data.value = JSON.stringify(d);
        form1.appendChild(data);
        document.body.appendChild(form1);
        form1.submit();
    }
