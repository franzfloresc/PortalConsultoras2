@{
    var model = Portal.Consultoras.Web.SessionManager.SessionManager.Instance.GetUserData();
    
    if (model == null)
    {
        Layout = "~/Views/Shared/_LoginLayout.cshtml";
    }
    else
    {
        if (model.RolID == 1) //Solo para Consultoras
        {
            Layout = "~/Views/Shared/_MainLayout.cshtml";
        }
        else
        {
            Layout = "~/Views/Shared/_SACLayout.cshtml";
        }
    }
}