                <div style="float: right;">
                    <input id="btnExcel" type="button" value="Excel" onclick="ExportExcel();" />
                    <input type="button" onclick="Imprimir();" value="Imprimir" />
                </div>
            </div>
        </div>
        <div class="border-wrapper">
            <table id="list"></table>
            <div id="pager"></div>
        </div>
        <div class="sep"></div>
        <div class="elements2">
            <div class="div-3">
                <div class="titAutoRight" style=" padding-bottom:2px; padding-top: 2px;">
                    <label class="color_red" style=" color:black; font-weight:bold;">
                        Importe Total: @ViewBag.SimboloPW 
                    </label>
                    <label id="lblTotalParcial" class="color_red" style=" color:black; font-weight:bold;">
                        @ViewBag.Parcial
                    </label>
                </div>
            </div>
            <div class="div-3">
                <div class="titAutoRight" style=" padding-bottom:2px; padding-top: 2px;">
                    <label class="color_red" style=" color:black; font-weight:bold;">
                        Flete: @ViewBag.SimboloPW 
                    </label>
                    <label id="lblFlete" class="color_red" style=" color:black; font-weight:bold;">
                        @ViewBag.Flete
                    </label>
                </div>
            </div>
            <div class="div-3">
                <div class="titAutoRight" style=" padding-bottom:2px; padding-top: 2px;">
                    <label class="color_red" style=" color:black; font-weight:bold;">
                        Total Facturado: @ViewBag.SimboloPW 
                    </label>
                    <label id="lblTotalFacturado" class="color_red" style=" color:black; font-weight:bold;">
                        @ViewBag.Total
                    </label>
                </div>
            </div>
        </div>
    </section>
</div>
