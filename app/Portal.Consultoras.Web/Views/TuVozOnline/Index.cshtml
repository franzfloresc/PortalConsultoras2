@using Portal.Consultoras.Web.Models

@{
    ViewBag.Title = "Tu Voz Online";
    Layout = "~/Views/Shared/_MainLayoutResponsive.cshtml";
}

<link href="@Url.Content("~/Content/Css/Site/TuVozOnline/TuVozOnline.css")" rel="stylesheet" />

<main class="w-100 row flex-row justify-content-center ml-0 mr-0 layout__main__content layout__main__content--tuVozOnline">
    <section class="row flex-row ml-0 mr-0 mx-auto layout__content">
        <a title="Volver" class="d-block enlace__volver__atras">
            <span class="d-inline-block enlace__volver__atras__icono">
                <img src="@Url.Content("~/Content/Images/icono_volver.svg")" alt="Volver" />
            </span>
            <span class="d-inline-block text-bold">Volver</span>
        </a>
        <div class="row flex-row justify-content-start align-content-start ml-0 mr-0 mx-md-auto tu__voz__online__confirmacion__correo__form__wrapper">
            <h1 class="d-block text-bold text-center tu__voz__online__confirmacion__correo__form__titulo">
                Ingresa tu correo para comenzar<br />
                a usar Tu Voz Online.
            </h1>
            <div class="d-block form__group__fields form__group__fields--correoElectronico">
                <input class="d-block w-100 text-bold text__field__sb" id="CorreoElectronicoCampo" type="text" value="" />
                <label class="d-block w-100 label__field__sb" for="CorreoElectronicoCampo">Correo Electrónico</label>
            </div>
            <div class="d-flex flex-row ml-0 mr-0 form_group_fields form_group_fields--terminosYCondiciones">
                <input id="TerminosYCondiciones" type="checkbox" value="" class="d-none field__checkbox__sb" />
                <label class="d-inline-block border-radius-4 label__checkbox__sb label__checkbox__sb--multimarca" for="TerminosYCondiciones"></label>
                <span class="d-inline-block">Estoy de acuerdo con los <a href="#" title="" class="d-inline-block text-underline enlace__terminos__y__condiciones">términos y condiciones</a> sobre protección de datos personales.</span>
            </div>
            <button type="button" class="d-block mx-auto text-bold text-center border-radius-4 btn__sb btn__sb__primary--multimarca btn__sb--actualizar">Actualizar</button>
        </div>
    </section>
</main>