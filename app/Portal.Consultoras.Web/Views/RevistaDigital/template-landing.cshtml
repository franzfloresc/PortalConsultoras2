
@using Portal.Consultoras.Common
@using Portal.Consultoras.Web.Models

@model Portal.Consultoras.Web.Models.RevistaDigitalLandingModel
@{
    ViewBag.Title = "CLUB GANA+";
    Layout = "~/Views/Shared/_MainLayoutContenedor.cshtml";
    var idBorrar = "borrar" + Model.CampaniaID;
    var revistaDigital = ViewBag.revistaDigital ?? new RevistaDigitalModel();
}

@section styles{
    @System.Web.Optimization.Styles.Render("~/bundles/css/Site/RevistaDigital-Landing")
}


<div class="BloqueLandingRD" data-listado-campania="@Model.CampaniaID"
     data-OrigenPedidoWeb="@Constantes.OrigenPedidoWeb.RevistaDigitalDesktopLanding"
     data-OrigenPedidoWeb-popup="@Constantes.OrigenPedidoWeb.RevistaDigitalDesktopLandingPopUp">

    <div class="content_belcorp" data-listado-content="" style="margin: 0 80px 0 180px;">

        @if (!Model.ProductosPerdio)
        {
            <div id="orderby-filter" style="padding: 0px 2%;">
            <div id="divBusquedaFiltros" class="rd-busqueda-filtros">
                <div class="rd-seccion2" style="padding: 0px 0%; height:auto;">

                    <div id="divCantProductos" class="cantidad_productos_fix cantidad_productos_fav" style="text-align:left;">
                        <div class="rd-cantidad">
                            Mostrando <span id="spnCantidadFiltro">0</span> de <span id="spnCantidadTotal">0</span>
                        </div>
                        <div class="rd-filtro-limpiar">
                            <div id="div-delete-filters" style="display: none; margin-right: 0px;">
                                <a href="javascript:;" class="link-ffc_landing" data-filtro-tipo="@idBorrar" style="text-decoration: underline;">Borrar Filtros</a>
                            </div>
                        </div>
                    </div>
                    <div id="divFiltros" class="rd-fitlros-fix rd-filtros">
                        @if (Model.FiltersByBrand.Any())
                        {
                            <select class="marca_ept" data-filtro-tipo="fijo" data-filtro-campo="marca">
                                @foreach (var item in Model.FiltersByBrand)
                                {
                                    <option value="@item.Codigo">@item.Descripcion</option>
                                }
                            </select>
                        }
                        @if (Model.FiltersBySorting.Any())
                        {
                            <select class="marca_ept" data-filtro-tipo="fijo" data-filtro-campo="precio" data-filtro-accion="orden">
                                @foreach (var item1 in Model.FiltersBySorting)
                                {
                                    <option value="@item1.Codigo">@item1.Descripcion</option>
                                }
                            </select>
                        }
                    </div>
                    <div style="clear:both;"></div>
                </div>
            </div>
        </div>
        }

       
            <div id="RDListado" data-content-item="@Model.CampaniaID"
                 data-OrigenPedidoWeb="@Constantes.OrigenPedidoWeb.RevistaDigitalDesktopLanding"
                 data-OrigenPedidoWeb-popup="@Constantes.OrigenPedidoWeb.RevistaDigitalDesktopLandingPopUp">

                <div id="divOfertaProductos" style="text-align: center;"></div>
                <hr class="clear" />
                @if (Model.ProductosPerdio)
    {
        if (!revistaDigital.EsSuscrita && !revistaDigital.EsActiva)
        {

            <style>
                .contenedor_ganamas {
                    width: 100%;
                    max-height: 500px;
                    overflow: hidden;
                }

                    .contenedor_ganamas .sb_contenedor_ganamas_bg {
                        width: 100%;
                        height: 230px;
                        background-color: #deaf0c;
                        position: relative;
                        z-index: 150;
                    }

                    .contenedor_ganamas .sb_contenedor_ganamas_bg_two {
                        width: 100%;
                        height: 150px;
                        background-color: #deaf0c;
                        position: relative;
                        z-index: 60;
                    }

                /*.contenedor_ganamas .sb_contenedor_ganamas {
                        max-width: 1189px;
                        margin: auto;
                        position: relative;
                        top: -200px;
                        z-index: 100;
                    }

                    .contenedor_ganamas .sb_contenedor_ganamas .head_gana_mas .club_logo {
                        display: inline-block;
                        width: 20%;
                    }*/

                .contenido_gana_mas_ns {
                    top: -100px;
                    z-index: 100;
                }
            </style>


            <!--Bryan NO SUSCRITA Historia 636-->

            <div id="block_inscribete" class="contenedor_ganamas">
                <div class="sb_contenedor_ganamas_bg"></div>
                <div class="sb_contenedor_ganamas_bg_two"></div>
            </div>

            <div class="contenido_gana_mas_ns">
                <hr class="clear" />
                <div id="divOfertaProductosPerdio" data-content-perdido="@Model.CampaniaID" style="text-align: center;"></div>
                <hr class="clear" />
            </div>

}
else if (revistaDigital.EsSuscrita && !revistaDigital.EsActiva)
{
            <!--Bryan SUSCRITA INACTIVA Historia 642-->
            <div id="block_inscribete">
                <div class="content_belcorp">
                    <div class="block_inscribete_predio">
                        <span class="hblock_title_perdio">@Model.PerdioTitulo</span><br />
                        <span class="hblock_title_perdio2">@Model.PerdioSubTitulo</span>
                    </div>
                </div>
            </div>
}
else
{
            <div>
                <div id="block_inscribete">
                    <div class="content_belcorp">
                        <div class="block_inscribete_predio">
                            <span class="hblock_title_perdio">@Model.PerdioTitulo</span><br />
                            <span class="hblock_title_perdio2">@Model.PerdioSubTitulo</span>
                        </div>
                    </div>
                </div>

            </div>
}


}
            </div>
    </div>
    <hr class="clear" />
    <div id="divOfertaProductosLoad" style="display: none;">Cargando Productos<br></div>
    <hr class="clear" />
</div>

<hr class="clear" />

@Html.Partial("~/Views/EstrategiaPersonalizada/template-producto-landing.cshtml")

<div class="contenedor_popup_detalleCarousel" id="popupDetalleCarousel_lanzamiento" data-popup-main=""></div>
@Html.Partial("~/Views/EstrategiaPersonalizada/template-producto-verdetalle.cshtml")

<div class="contenedor_popup_detalleCarousel" id="popupDetalleCarousel_packNuevas"></div>
@Html.Partial("~/Views/EstrategiaPersonalizada/template-producto-packnueva.cshtml")

@Html.Partial("~/Views/RevistaDigital/template-mensaje-bloqueado.cshtml", Model.MensajeProductoBloqueado)

<div class="flecha_scroll">
    <a href="javascript:;" title="Flecha Scroll" class="enlace_scroll"></a>
</div>

@section scripts{
    <script type="text/javascript">
        var urlLoad = '@Url.Content("~/Content/Images/loading_spinner.gif")';
        var tipoOrigenPantalla = 1;
        var urlOfertaCargarProductos = '@Url.Action("RDObtenerProductos", "RevistaDigital")';
        var urlOfertaDetalleProducto = '@Url.Action("Detalle", "RevistaDigital")';
        var urlOfertaDetalleProductoTem = '@Url.Action("GuardarProductoTemporal", "RevistaDigital")';
        var origenPedidoWebEstrategia = '@Constantes.OrigenPedidoWeb.RevistaDigitalDesktopLanding';
        var tipoOrigenEstrategia = 17;
        var CantidadFilas = @Model.CantidadFilas;
        var mayormenor = '@Constantes.ShowRoomTipoOrdenamiento.ValorPrecio.MayorAMenor';
        var menormayor = '@Constantes.ShowRoomTipoOrdenamiento.ValorPrecio.MenorAMayor';
        var tieneMasVendidos = 0;
        var campaniaId = @Model.CampaniaID;
        var revistaDigital= @Html.Raw(Json.Encode(revistaDigital));
    </script>
    @System.Web.Optimization.Scripts.Render("~/bundles/RevistaDigital-Landing")
}