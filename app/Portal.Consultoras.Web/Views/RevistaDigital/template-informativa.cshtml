            <div class="arrow-down"></div>
            <p class="como-funciona-txt">
                ¿CÓMO FUNCIONA?
            </p>
            <div class="caja-texto">
                <span class="nro"><img src="~/Content/Images/RevistaDigital/check-icon.svg" /></span>
                <span class="txt">
                    @if (Model.EsSuscripcionInmediata)
                    {
                        <text>
                            Suscríbete hoy mismo con un solo clic a Gana+
                        </text>
                    }
                    else
                    {
                        <text>
                            En esta campaña te suscribes a GANA+
                        </text>
                    }

                </span>
                <div class="clear"></div>
                <span class="nro"><img src="~/Content/Images/RevistaDigital/check-icon.svg" /></span>
                <span class="txt">
                    @if (Model.EsSuscripcionInmediata)
                    {
                        <text> Comienza a disfrutar de todos los beneficios desde el primer día.</text>
                    }
                    else
                    {
                        <text>Desde tu próximo pedido, <b> dejarás de recibir la revista guía de negocio impresa.</b></text>
                    }

                </span>
                <div class="clear"></div>
                <span class="nro mobil-nro-funciona"><img src="~/Content/Images/RevistaDigital/check-icon.svg" /></span>
                <span class="txt mobil-nro-funciona">
                    @if (Model.EsSuscripcionInmediata)
                    {
                        <text>Encuentra las ofertas exclusivas para ti a diario.</text>
                    }
                    else
                    {
                        <text>
                            En la siguiente campaña, ¡podrás disfrutar de ser parte de GANA+!
                        </text>
                    }

                </span>
                <div class="clear"></div>


                @if (Model.EsSuscripcionInmediata)
                {
                    <text>   <span class="txt recuerda-txt-2">
                            <b>
                                Recuerda que al suscribirte dejarás de recibir tu guía de negocio impresa<br />
                            </b>
                            (Ejemplo: Si te suscribes en C10, dejarás de recibir tu guía de negocio en C12).
                        </span></text>
                }
                else
                {
                    <text>  <span class="txt recuerda-txt">
                            RECUERDA QUE PUEDES CANCELAR TU SUSCRIPCIÓN CUANDO QUIERAS.
                        </span></text>

                }

            </div>
            <div class="caja-img">
                <div class="visual-funcionamiento"></div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
}

@if (Model.Origen == null || Model.Origen == Constantes.RevistaDigitalOrigen.RD)
{
    <div class="suscribete" data-estadoregistro="@Model.EstadoSuscripcion">
        <div class="contenedor-suscripcion">
            @if (Model.EsSuscrita && Model.MostrarCancelarSuscripcion)
            {
                <p class="txt-deseas-cancelar">
                    ¿DESEAS CANCELAR TU SUSCRIPCIÓN?
                </p>
                <span class="deseas-cancelar">
                    Solo haz clic en el siguiente botón y dejarás de recibir todos los beneficios que te brinda GANA+
                </span>
                <a href="javascript: RDDesuscripcion_pregunta();" class="suscribete-btn">Cancela tu suscripción aquí</a>
            }
            @if (!Model.EsSuscrita)
            {
                <a href="javascript: RDSuscripcion();" class="suscribete-btn">Suscríbete gratis aquí</a>
            }
            <a href="javascript: MostrarTerminos();" class="ver-terminos" style="text-decoration:underline;">
                VER TÉRMINOS Y CONDICIONES
            </a>
        </div>
    </div>
}
else if (Model.CancelarSuscripcion)
{
    <div class="suscribete" data-estadoregistro="@Model.EstadoSuscripcion">
        <div class="contenedor-suscripcion">
            @if (Model.EsSuscrita && Model.MostrarCancelarSuscripcion)
            {
                <p class="txt-deseas-cancelar">
                    ¿NO TE GUSTÓ GANA+?
                </p>
                <span class="deseas-cancelar">
                    Cancela tu suscripción haciendo clic en el siguiente botón y dejarás de recibir todos los beneficios que te brinda GANA+
                </span>
                <a href="javascript: RDDesuscripcion_pregunta();" class="suscribete-btn">Cancela tu suscripción aquí</a>
            }
            @if (!Model.EsSuscrita)
            {
                <a href="javascript: RDSuscripcion();" class="suscribete-btn">Suscríbete gratis aquí</a>
            }
            <a href="javascript: MostrarTerminos();" class="ver-terminos" style="text-decoration:underline;">
                VER TÉRMINOS Y CONDICIONES
            </a>
        </div>
    </div>
}

