@model Portal.Consultoras.Web.Models.ShowRoomOfertaModel

@{
    ViewBag.Title = "Detalle Oferta";
}

@section styles{  
    <link href="@Url.Content("~/Content/Css/Site/slick-pedido.css")" rel="stylesheet" />    
}
<div class="fondo_set">
    <div class="content_belcorp">
        <div class="content_solo_ficha_set">
            <div class="content_producto_set">
                <img src="@Model.ImagenProducto" style="width:100%;">
                <div class="compartir_redes_ficha" style="padding-left: 0px; margin-top:20px;">
                    <div class="texto_compartelo">Compártelo con tus clientes</div>
                    <a class="btn_compartir_facebook_ficha" href="javascript:;" data-compartir="face">
                        <img src="/Content/Images/Esika/facebook.png">
                    </a>
                    <hr class="clear">
                </div>
                <hr class="clear">
            </div>
            <div class="content_detalle_set">
                <div class="content_left_ficha">
                    <div class="titulo_set">@Model.Descripcion</div>
                </div>
                <div class="content_right_ficha" style="text-align:right">
                    <div class="precio_valorizado_showroom">@Model.Simbolo @Model.FormatoPrecioOferta</div>
                    <div class="precio_oferta_venta">Precio para ti <b>@Model.Simbolo @Model.FormatoPrecioCatalogo</b></div>
                    <div class="ganancia_showroom">Gana @Model.Simbolo @Model.FormatoGana</div>
                </div>
                <hr class="clear" />
                <div class="titulo_separador">CONTENIDO</div>
                @foreach (var detalle in Model.ListaDetalleOfertaShowRoom)
                {
                    <div class="nombre_marca_set">@detalle.MarcaProducto</div>
                    <div class="content_detalle_showroom">
                        <div class="cantidad_set_individual">x2</div>
                        <div class="nombre_set_individual">@detalle.NombreProducto 
                            <span class="detalle_set_showroom">@detalle.Descripcion1</span>
                            <span class="detalle_set_showroom">@detalle.Descripcion3</span>
                        </div>
                        <div class="precio_regular_set">@detalle.Descripcion1</div>
                    </div>
                }
                <div class="linea_separadora" style="margin-top:20px; margin-bottom:10px;"></div>
                <div class="liquidacion_rango_home">
                    <input type="text" value="1" size="2" maxlength="2" class="liquidacion_rango_cantidad_pedido ValidaNumeral ValidaPasteNumeral" data-input="cantidad" data-cantidad-input="-">
                    <div class="liquidacion_rango_right_pedido">
                        <a class="mas" data-cantidad-agregar="+"><img src="/Content/Images/Esika/mas.png" alt=""></a>
                        <a class="menos" data-cantidad-agregar="-"><img src="/Content/Images/Esika/menos.png" alt=""></a>
                    </div>
                </div>
                <a class="boton_Agregalo_home btn_aregar_set" data-btn-agregar-sr="">AGRÉGALO</a>
            </div>
            <hr class="clear" />
        </div>
        <hr class="clear" />
    </div>    
</div>
<div class="catalogoPersonalizadoBloque" style="margin-top:85px; overflow:hidden;">
   <div class="content_belcorp">
       <div class="titulo_carrusel_showroom">LAS CONSULTORAS TAMBIÉN VIERON ESTOS SETS</div>
       <!--CARRUSEL-->
       <div class="responsive">
           @foreach (var oferta in Model.ListaOfertaShowRoom)
           {
                <div class="set-productos-showroom-carrusel" data-item="@oferta.OfertaShowRoomID" >
                    <div class="producto_img_home mini" data-img="">
                        <img src="@oferta.ImagenProducto" style="width: auto; height: 100%;" class="imagen_producto">
                        <a class="ver_detalle_carrusel">VER DETALLE</a>
                    </div>
                    <div class="producto_nombre_descripcion">
                        <p class="nombre-producto-set">@oferta.Descripcion</p>
                        <div class="producto_precio" style="margin-bottom:3px;">
                            <span class="precio-oferta-normal">@oferta.Simbolo @oferta.FormatoPrecioOferta</span>
                            <span class="precio-oferta-venta"><b>@oferta.Simbolo @oferta.FormatoPrecioCatalogo</b></span>
                        </div>
                        <div class="liquidacion_rango_home" data-cantidad-contenedor="">
                            <input type="text" value="1" size="2" maxlength="2" class="liquidacion_rango_cantidad_pedido ValidaNumeral ValidaPasteNumeral" data-input="cantidad" data-cantidad-input="-">
                            <div class="liquidacion_rango_right_pedido">
                                <a class="mas" data-cantidad-agregar="+"><img src="/Content/Images/Esika/mas.png" alt=""></a>
                                <a class="menos" data-cantidad-agregar="-"><img src="/Content/Images/Esika/menos.png" alt=""></a>
                            </div>
                        </div>
                        <a class="boton_Agregalo_home" data-btn-agregar-sr="">AGRÉGALO</a>
                        <div class="clear"></div>
                        <div style="padding-top:9px; height: 15px;">
                            <div class="agregado product-add" style="text-align: right;display:@Model.Agregado;">
                                AGREGADO
                                <div class="icono"></div>
                            </div>
                        </div>
                    </div>
                </div>
           }     
       </div>
   </div>
</div>
<div class="content_belcorp">
    <div class="content_tip_negocio">
        <div class="tip_negocio_showroom">
            <span class="titulo_tip">tip de negocio</span>@Model.TipNegocio
        </div>
    </div>
</div>

@section scripts{
<script type="text/javascript" src="@Url.Content("~/Scripts/slick.min.js")"></script>
   <script type="text/javascript" src="@Url.Content("~/Scripts/PortalConsultoras/ShowRoom/ShowRoom.js")"></script>
}