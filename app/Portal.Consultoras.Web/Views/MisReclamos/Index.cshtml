            $("#Selector2 span").html("<img src='" + imgCheck + "' />");
            $("#Selector3").addClass("paso_active_reclamo");
            $('#Cambio2').hide(); //muestro mediante id  
            $('#Paso3').show(); //oculto mediante id 

        });
        $("#IrSolicitudInicial").on("click", function () {
            $("#Selector1 span").html("1");
            $("#Selector2 span").html("2");
            $("#Selector3 span").html("3");
            $("#Selector2").removeClass("paso_active_reclamo");
            $("#Selector3").removeClass("paso_active_reclamo");
            $('#UltimasSolicitudes').show(); //muestro mediante id 
            $('#Paso1').show(); //muestro mediante id  
            $('#Paso3').hide(); //oculto mediante id 

        });
        $("#IrSolicitudEnviada").on("click", function () {           
            $('.content_general_reclamos').hide();
            $('#TituloReclamo').hide();
            $('#SolicitudEnviada').show(); 
        });
        $("#IrDetalleSolicitudes").on("click", function () {
            $('#Paso1').show(); //oculto mediante id 
            $('#Paso2').hide(); //oculto mediante id 
            $('#Cambio2').hide(); //muestro mediante id  
            $('#Paso3').hide(); //oculto mediante id 
            $("#Selector1 span").html("1");
            $("#Selector2 span").html("2");
            $("#Selector3 span").html("3");
            $("#Selector2").removeClass("paso_active_reclamo");
            $("#Selector3").removeClass("paso_active_reclamo");
            $('#SolicitudEnviada').hide();
            $('#TituloReclamo').show();
            $('.content_registro_reclamos').show();
        });


    });
</script>
