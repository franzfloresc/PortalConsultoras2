        });
        $(".reclamo_motivo_select").on("click", function () {
            if ($(this).hasClass("reclamo_motivo_select_click")) {
                $(this).removeClass("reclamo_motivo_select_click");
            } else {
                $(this).addClass("reclamo_motivo_select_click");
            }  
        });
        $("#IrPAso2").on("click", function () {
            $("#Selector1 span").html("<img src='" + imgCheck + "' />");
            $("#Selector2").addClass("paso_active_reclamo");           
            $('#Paso1').hide(); //muestro mediante id 
            $('#Paso2').show(); //oculto mediante id              
            
        });      
        $("#CambioProducto").on("click", function () {           
            $('#Paso2').hide(); //muestro mediante id             
            $('#Cambio1').show(); //oculto mediante id  
        });
