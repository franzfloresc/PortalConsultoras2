        {
            "name": "Debug tests in Chrome",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "webRoot": "${workspaceFolder}"
        }/*,
        {
            "type": "node",
            "request": "launch",
            "name": "Karma Launch",
            "program": "${workspaceFolder}/node_modules/karma/bin/karma",
            "args":[
                "start",
                "${workspaceRoot}/karma.conf.js"
            ],
            "console": "integratedTerminal",
        }*/
    ]
}