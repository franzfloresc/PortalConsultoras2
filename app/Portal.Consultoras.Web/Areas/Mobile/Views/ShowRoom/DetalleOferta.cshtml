@section scripts{
<script type="text/javascript">
		/* Oscar */
		var ShowRoomProduct = {
			content : null,

			init: function(){
				this.content = jQuery('.content_room_product_sheet');
				this.palette_variants();
				this.select_variants.init();
				this.slider();
			},

			select_variants: {
				init: function(){
					this.open();
					this.selected();
				},

				open: function(){
					jQuery('.item_product .variants .select_variant', this.content).on('click touch', function(e){
						e.preventDefault();
						var obj = jQuery(this);
						var select = jQuery('.variants_items', obj.parent());

						obj.toggleClass('opened');
						select.slideToggle();
					});
				},

				selected: function(){
					jQuery('.item_product .variants .variants_items a', this.content).on('click touch', function(e){
						e.preventDefault();
						var obj = jQuery(this);
						var parent = obj.parent().parent();
						var selected = jQuery('.select_variant', parent);

						selected.find('.color').css('background-color', obj.data('color') );
						selected.find('.title_variant').html( obj.data('title') );

						obj.parent().slideUp('fast');
						selected.removeClass('opened');
					});
				}
			},

			palette_variants: function(){
				jQuery('.item_product .variants .variants_colors .variant', this.content).on('click touch', function(e){
					e.preventDefault();
					var obj = jQuery(this);
					var parent = obj.parent().parent();
					var selected = jQuery('.select_variant', parent);

					selected.find('.color').css('background-color', obj.data('color') );
					selected.find('.title_variant').html( obj.data('title') );
				});
			},

			slider: function(){
				jQuery(".box_promotions .slider").slick();
			}
		};

		jQuery(document).ready(function () {
			ShowRoomProduct.init();
		});
		/* Fin Oscar */
</script>
