@using Portal.Consultoras.Web.CustomHelpers
@model Portal.Consultoras.Web.Models.MisPedidosModel

@{
    var layout = ViewContext.MobileLayout();
    Layout = string.Format("~/Areas/Mobile/Views/Shared/{0}.cshtml", layout);
    var mobileConfiguracion = Html.MobileAppConfiguracion();
}

@section styles{
    @System.Web.Optimization.Styles.Render("~/Bundle/Css/Mixto/Bootstrap")
    @System.Web.Optimization.Styles.Render("~/Bundle/Css/Mixto/SugerenciaPendientes")
}

@{
    if (!mobileConfiguracion.EsAppMobile)
    {
        <div class="titulo_mobile">
            <a href="@Request.UrlReferrer" class="enlace_regresar catalogosR" title="Regresar"></a>
            &nbsp;&nbsp;&nbsp;&nbsp;PENDIENTES
        </div>
        <div class="pestana_esika"></div>
        <div class="pestana_lbel"></div>
    }
}

<!-- Vista por cliente / producto -->

<div class="container-flex">

    <!-- Registro total  -->
    @if (Model.RegistrosTotal != "0")
    {

        <!-- Menú Tabs -->
        <div class="vc-tabs">
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item active">
                    <a class="nav-link " id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Vista por cliente</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Vista por producto</a>
                </li>
            </ul>
        </div>
        <!-- / Menú Tabs -->

        <!-- Contenido tabs -->
        <div class="container vc-tabs-bottom">
            <div class="tab-content" id="myTabContent">
                <!-- Vista por cliente -->
                <div class="tab-pane fade active in" id="home" role="tabpanel" aria-labelledby="home-tab">

                    @foreach (var item in Model.ListaPedidos)
                    {
                        <div class="container vc-box vc-box--shadow">
                            <!--   Pedidos   -->
                            <div class="row align-items-center">
                                <div class="col-8">
                                    <div class="vc-box">
                                        <div class="vc-box--header">
                                            <span class="vc-box--title">@item.Cliente</span>
                                        </div>
                                        <div class="vc-box--content">
                                            <p><strong>Precio total: </strong> @ViewBag.Simbolo @item.FormatoPrecioTotal </p>
                                            <p>
                                                <strong>Origen: </strong>
                                                @if (item.MarcaID == 0)
                                                {
                                                    @item.MedioContacto
                                                }
                                                else
                                                {
                                                    <text>Portal @item.Marca</text>
                                                }
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-4 ">
                                    <div class=" vc-box">
                                        <div class="vc-box--action">
                                            <a class="vc-box--btn vc-box--title" href="@Url.Action("DetallePedidoPendiente", "ConsultoraOnline", new { ids = item.PedidoId })">Confirmar productos</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- / Pedidos -->
                        </div>


                    }
                </div>
                <!-- / Vista por cliente -->
                <!-- Vista por producto -->
                <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                    <!--   Productos   -->
                    @foreach (var item2 in Model.ListaProductos)
                    {
                        <div class="container vc-box">
                            <div class="row align-items-start  ">
                                <div class="col no-padd">
                                    <div class="vc-box">
                                        <img src="@item2.Url" class="vc-box--img">
                                    </div>
                                </div>
                                <div class="col-10">
                                    <div class=" vc-box">
                                        <div class="vc-box--header">
                                            <span class="vc-box--title">x @item2.CantidadTotal @item2.Producto</span>
                                        </div>
                                        <div class="vc-box--content">
                                            <p><strong>Monto total: </strong>@ViewBag.Simbolo @item2.FormatoPrecioTotal</p>
                                            <p><strong>Origen: </strong>@item2.MedioContacto</p>
                                        </div>
                                        <div class="vc-box--action vc-box--radius">
                                            <p class="vc-box--title"><strong>Te lo pidieron</strong></p>
                                            @foreach (var item3 in item2.ListaClientes)
                                            {
                                                <p>@item3.Cliente</p>
                                            }
                                            <p>Ver más...</p>
                                            <div class="vc-box--button">
                                                <a class="vc-box--btn vc-box--title" href="@Url.Action("DetallePedidoPendienteClientes", "ConsultoraOnline", new { cuv = item2.CUV })">Confirmar clientes</a>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>

                            <hr>
                        </div>
                    }

                </div>
                <!-- / Vista por producto -->

            </div>
        </div>
        <!-- / Contenido tabs -->
    }
    <!-- / Registro total -->

</div>

@section scripts {
    <script type="text/javascript">
        var urlLoad = '@Url.Content("~/Content/Images/Loading.gif")';
        var urlPendientes = '@Url.Action("Pendientes", "ConsultoraOnline")';
    </script>

    <script type="text/javascript" src="@Url.Content("~/Scripts/PortalConsultoras/Mobile/ConsultoraOnline/Pendientes.js")"></script>
}

