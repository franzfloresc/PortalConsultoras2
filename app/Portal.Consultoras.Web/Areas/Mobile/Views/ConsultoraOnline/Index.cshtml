@section scripts
{

    <script type="text/javascript">

    var consultoraID = '@ViewBag.ConsultoraID';
    var urlDesafiliar = '@Url.Action("Desafiliar", "ConsultoraOnline", new {area = "Mobile"})';
    var urlInformacion = '@Url.Action("Informacion", "ConsultoraOnline", new {area = "Mobile"})';

    $(document).ready(function () {

        $('.slide-landing').slick({
            slidesToShow: 1,
            slidesToScroll: 1,
            autoplay: true,
            dots: true,
            arrows: false,
            infinite: true,
        });

        $("#lnkDesactivar").click(function () {
            $("#popupDesafiliar").modal("show");
        });

        $("#btnCancelar").click(function () {
            $("#popupDesafiliar").modal("hide");
        });

        $("#btnDesactivar").click(function () {
            var opcion = $('input[type=radio]:checked').val();

            if (opcion == undefined) {
                messageInfo("Seleccione una opcion para la desafiliación");
            } else {
                var params = {
                    consultoraID: consultoraID,
                    opcionDesafiliacion: opcion
                };

                jQuery.ajax({
                    type: 'POST',
                    url: urlDesafiliar,
                    dataType: 'json',
                    contentType: 'application/json; charset=utf-8',
                    data: JSON.stringify(params),
                    async: true,
                    success: function (data) {
                        if (checkTimeout(data)) {
                            if (data.success == true) {
                                dataLayer.push({
                                    'event': 'virtualEvent',
                                    'category': 'CCC',
                                    'action': 'Desactivar',
                                    'label': $('input[type=radio]:checked').parent().prev().html()
                                });
                                window.location = urlInformacion;
                            } else {
                                messageInfo(data.message);
                            }
                        }
                    },
                    error: function (data, error) {
                        if (checkTimeout(data)) {
                            messageInfo(data.message);
                            CloseLoading();
                        }
                    }
                });

                $("#popupDesafiliar").modal("hide");
            }
        });
    });

    </script>
}
