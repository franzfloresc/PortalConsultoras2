<div id="popupEleccionRegalo" class="popup_eleccion_regalo_programaNuevas w-100 text-center" style="display:none;">
    <div class="popup_eleccion_regalo_programaNuevas_header w-100">
        <a class="icono_cerrar_popup_eleccion_regalo_programaNuevas" title="Cerrar" href="javascript:;" onclick="javascript: $('#popupEleccionRegalo').fadeOut(200); $('#popupEleccionRegalo').scrollTop(0);">
            <img src="@Url.Content("~/Content/Images/btn_cerrar_popup_color_negro.svg")" alt="Cerrar" />
        </a>
        <div class="icono_regalo icono_regalo_popup_programaNuevas">
            <img src="@Url.Content("~/Content/Images/icono_regalo.png")" alt="Elige tu regalo" />
        </div>
        <h2 class="titulo_popup_eleccion_regalo_programaNuevas">
            <span class="mensaje_titulo_popup_eleccion_regalo">¡Puedes elegir tu regalo del Programa de Nuevas ahora!</span>
            <span>Será tuyo si pasas <span id="montoPremioMeta"></span></span>
        </h2>
    </div>
    <div class="popup_eleccion_regalo_programaNuevas_contenido w-100">
        <div class="opciones_regalo_programaNuevas_wrapper w-100">
            <div id="carouselOpcionesRegalo" class="opciones_regalo_carousel_programaNuevas slider center">
            </div>
            <a class="enlace_elegir_otro_regalo" title="Elegir otro regalo">
                Cambiar Producto
            </a>
        </div>
        <a class="btn_seguir_comprando text-uppercase" href="javascript:;" onclick="javascript: $('#popupEleccionRegalo').fadeOut(200); $('#popupEleccionRegalo').scrollTop(0);">
            Seguir comprando
        </a>
    </div>
</div>
<script id="premios-electivos-template" type="text/x-handlebars-template">
    {{#each lista}}
    <div class="opcion_regalo_carousel_programaNuevas" data-cuv="{{CUV2}}">
        <div class="img_regalo_carousel">
            <img src="{{ImagenURL}}" alt="" />
        </div>
        <div class="marca_producto text-uppercase">
            Esika @*{{DescripcionMarca}}*@
        </div>
        <div class="descrip_regalo_carousel">
            {{DescripcionResumen}}
        </div>
        <button class="btn_elegir_regalo text-uppercase">
            Elegir
        </button>
        <div class="mensaje_regalo_elegido">
            <span class="icono_check_regalo_elegido">
                <img src="@Url.Content("~/Content/Images/check_regalo_elegido.svg")" alt="" />
            </span>
            <span class="texto_regalo_elegido text-uppercase">
                Regalo Elegido
            </span>
        </div>
    </div>
    {{/each}}
</script>