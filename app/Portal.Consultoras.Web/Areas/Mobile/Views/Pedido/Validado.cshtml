                        </div>
                    </div>
                    <div class="toggle-content">
                        <div class="toggle-info">
                            <span class="ganancia-titulo first-color">
                                Catálogo
                            </span>
                            <span class="ganancia-total first-color">
                                @Model.Simbolo <span id="div-ganancia-totalGananciaCatalogo">&nbsp;@Model.FormatoMontoAhorroCatalogo</span>
                            </span>
                        </div>
                        <div class="toggle-info">
                            <span class="ganancia-titulo first-color">
                                Guía de negocio
                            </span>
                            <span class="ganancia-total first-color">
                                @Model.Simbolo <span id="div-ganancia-totalGananciaRevista">&nbsp;@Model.FormatoGananciaRevista</span>
                            </span>
                        </div>
                        <div class="toggle-info">
                            <span class="ganancia-titulo first-color">
                                @ViewBag.LabelGananciaWeb
                            </span>
                            <span class="ganancia-total first-color">
                                @Model.Simbolo <span id="div-ganancia-totalGananciaWeb">&nbsp;@Model.FormatoGananciaWeb</span>
                            </span>
                        </div>
                        <div class="toggle-info">
                            <span class="ganancia-titulo first-color">
                                Otros
                            </span>
                            <span class="ganancia-total first-color">
                                @Model.Simbolo <span id="div-ganancia-totalGananciaOtros">&nbsp;@Model.FormatoGananciaOtros</span>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <!-- </GananciaEstimada-->
            <!-- <GananciaTotal>-->
            <div class="ganancia-total">
                <div class="ganancia-content">
                    <div class="ganancia-info">
                        <span class="ganancia-titulo titulo-up first-color">
                            Has agregado:
                        </span>
                        <span class="ganancia-total first-color">
                            <span class="par-2">@Model.CantidadProductos</span> Unidad(es)
                        </span>

                    </div>
                    <div class="ganancia-info">
                        <span class="ganancia-titulo first-color">
                            Total sin descuento.
                        </span>
                        <span class="ganancia-total first-color">
                            @Model.Simbolo @Model.DescripcionSubTotal
                        </span>
                    </div>
                    <div class="ganancia-info separator">
                        <span class="ganancia-titulo first-color">
                            (-) Dscto. Ofertas Por Niveles
                        </span>
                        <span class="ganancia-total first-color">
                            @Model.Simbolo @Model.DescripcionDescuento
                        </span>
                    </div>
                    <div class="ganancia-info pb-2">
                        <span class="ganancia-titulo titulo-up titulo-700">
                            MONTO TOTAL :
                        </span>
                        <span class="ganancia-total first-color">
                            <span>@Model.Simbolo @Model.DescripcionTotal</span>

                        </span>
                    </div>
                      @*HD-4513*@
                    @if (ViewBag.PagoContado){
                        <div class="ganancia-info first-color">
                            <span class="info_mis_descuentos">(-) Mis Descuentos:</span>
                            <span class="ganancia-total first-color" >
                                    @Model.Simbolo @Model.STPDescuento
                            </span>
                        </div>
                        <div class="ganancia-info first-color">
                            <span class="info_mis_descuentos">(+) Gastos de Transporte:</span>
                            <span class="ganancia-total first-color" >
                                @Model.Simbolo @Model.STPFlete
                            </span>
                        </div>  
                        <div class="ganancia-info first-color">
                            <span class="info_mis_descuentos">(+) Saldo Campaña Anterior:</span>
                            <span class="ganancia-total first-color" >
                                @Model.Simbolo @Model.STPDeuda
                            </span>
                        </div>  
                        <div class="ganancia-info total_a_pagar_wrapper pb-2">
                            <span class="text-bold info_mis_descuentos titulo-up">Total a Pagar:</span>
                            <span class="ganancia-total first-color" >
                                @Model.Simbolo @Model.STPPagoTotal
                            </span>
                        </div>
                    }
