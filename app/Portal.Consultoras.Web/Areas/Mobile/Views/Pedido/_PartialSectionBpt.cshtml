@using Portal.Consultoras.Common
@using Portal.Consultoras.Web.Models
@model RevistaDigitalModel
@{
    ConfiguracionPaisDatosModel configuracionPaisDatosModel;
    var urlLogo = Model.MLogoComercialNoActiva;
    if (Model.TieneRDC && Model.EsSuscrita)
    {
        urlLogo = Model.MLogoComercialActiva;
    }
}

@if (Model.TieneRDC)
{
    if (Model.EsActiva)
    {
        if (Model.EsSuscrita)
        {
            configuracionPaisDatosModel = Model.ConfiguracionPaisDatos.FirstOrDefault(x => x.Codigo == Constantes.ConfiguracionPaisDatos.RD.MPedidoInscritaActiva) ?? new ConfiguracionPaisDatosModel();
        }
        else
        {
            configuracionPaisDatosModel = Model.ConfiguracionPaisDatos.FirstOrDefault(x => x.Codigo == Constantes.ConfiguracionPaisDatos.RD.MPedidoNoInscritaActiva) ?? new ConfiguracionPaisDatosModel();
        }
            
        <div class="mob_home_bpt">
            <div class="banner_pedido_rd" style="margin-bottom:0 !important;">
                <div class="cabecera_pedido_rd">
                    <div class="rd_logo">
                        <img src="@urlLogo" height="40" width="90" alt="">
                    </div>
                    <div class="cabecera_pedido_text">@Html.Raw(configuracionPaisDatosModel.Valor1)</div>
                </div>
                <div class="banner_pedido_masofertas">
                    <div class="banner_pedido_text">@Html.Raw(configuracionPaisDatosModel.Valor2)</div>
                    <div class="btn_red">
                        <a href="javascript:RedireccionarContenedorComprar(@Constantes.OrigenPedidoWeb.RevistaDigitalMobilePedidoSeccion, '@Constantes.ConfiguracionPais.RevistaDigital')">
                            VER TODAS MIS OFERTAS
                            <img class="rd_arrowright" src="@Url.Content("~/Content/Images/RevistaDigital/rd_arrowright_red.png")">
                        </a>
                    </div>
                </div>
                <div style="padding-top:20px" id="divContenedorListaEstrategia">
                    <div class="contenedor_carrusel_home content_carrusel_agregado" id="divListadoEstrategia"
                            data-origenpedidoweb="@Constantes.OrigenPedidoWeb.RevistaDigitalMobileHomeSeccion">
                        <div style="text-align: center;">Cargando Productos Destacados<br><img src="/Content/Images/Loading.gif" /><br /></div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        if (Model.EsSuscrita)
        {
            configuracionPaisDatosModel = Model.ConfiguracionPaisDatos.FirstOrDefault(x => x.Codigo == Constantes.ConfiguracionPaisDatos.RD.MPedidoInscritaNoActiva) ?? new ConfiguracionPaisDatosModel();
        }
        else
        {
            configuracionPaisDatosModel = Model.ConfiguracionPaisDatos.FirstOrDefault(x => x.Codigo == Constantes.ConfiguracionPaisDatos.RD.MPedidoNoInscritaNoActiva) ?? new ConfiguracionPaisDatosModel();
        }
            
        <div class="wrapper_resumen_mobile">
            <div class="banner_pedido_rd">
                <div class="cabecera_pedido_rd">
                    <div class="rd_logo">
                        <img src="@urlLogo" height="40" width="90" alt="">
                    </div>
                    <div class="cabecera_pedido_text">@Html.Raw(configuracionPaisDatosModel.Valor1)</div>
                </div>
                <div class="banner_pedido_masofertas">
                    <div class="banner_pedido_text">@Html.Raw(configuracionPaisDatosModel.Valor2)</div>
                    <div class="btn_red">
                        <a href="javascript:RedireccionarContenedorComprar(@Constantes.OrigenPedidoWeb.RevistaDigitalMobileHomeSeccion, '@Constantes.ConfiguracionPais.RevistaDigital')">
                            VER TODAS MIS OFERTAS
                            <img class="rd_arrowright" src="@Url.Content("~/Content/Images/RevistaDigital/rd_arrowright_red.png")">
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <hr class="clear" />
        @Html.Partial("~/Areas/Mobile/Views/Bienvenida/template-opt-seccion.cshtml",
        new ViewDataDictionary { { "Source", 2 }, { "NombreConsultora", ViewBag.NombreConsultora }, { "Origen", Constantes.OrigenPedidoWeb.OfertasParaTiMobileHome } });
    }
}
else if (Model.TieneRDR)
{
    configuracionPaisDatosModel = Model.ConfiguracionPaisDatos.FirstOrDefault(x => x.Codigo == Constantes.ConfiguracionPaisDatos.RDR.MPedidoRdr) ?? new ConfiguracionPaisDatosModel();
    <div class="mob_home_bpt">
        <div class="banner_pedido_rd" style="margin-bottom:0 !important;">
            <div class="cabecera_pedido_rd">
                <div class="rd_logo">
                    <img src="@urlLogo" height="40" width="90" alt="">
                </div>
                <div class="cabecera_pedido_text">@Html.Raw(configuracionPaisDatosModel.Valor1)</div>
            </div>
            <div class="banner_pedido_masofertas">
                <div class="banner_pedido_text">@Html.Raw(configuracionPaisDatosModel.Valor2)</div>
                <div class="btn_red">
                    <a href="javascript:RedireccionarContenedorComprar(@Constantes.OrigenPedidoWeb.RevistaDigitalMobileHomeSeccion, '@Constantes.ConfiguracionPais.RevistaDigitalReducida')">
                        VER TODAS MIS OFERTAS
                        <img class="rd_arrowright" src="@Url.Content("~/Content/Images/RevistaDigital/rd_arrowright_red.png")">
                    </a>
                </div>
            </div>
            <div style="padding-top:20px" id="divContenedorListaEstrategia">
                <div class="contenedor_carrusel_home content_carrusel_agregado" id="divListadoEstrategia"
                        data-origenpedidoweb="@Constantes.OrigenPedidoWeb.RevistaDigitalMobileHomeSeccion">
                    <div style="text-align: center;">Cargando Productos Destacados<br><img src="/Content/Images/Loading.gif" alt=""/><br /></div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    @Html.Partial("~/Areas/Mobile/Views/Bienvenida/template-opt-seccion.cshtml",
    new ViewDataDictionary { { "Source", 1 }, { "NombreConsultora", ViewBag.NombreConsultora }, { "Origen", Constantes.OrigenPedidoWeb.OfertasParaTiMobileHome } });
}
