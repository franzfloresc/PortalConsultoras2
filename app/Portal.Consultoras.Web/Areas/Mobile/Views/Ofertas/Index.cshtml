@using System.Configuration
@using Portal.Consultoras.Common

@model Portal.Consultoras.Web.Models.EstrategiaPersonalizadaModel
@{
    Layout = "~/Areas/Mobile/Views/Shared/_MobileLayoutContenedor.cshtml";
}
@section styles{
<link href="@Url.Content("~/Content/Css/Site/slick.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/Css/Site/jquery.rateyo.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/Css/Mobile/esika/revistaDigital.css")" rel="stylesheet" />
    <style>
        .bc-menu-vertical-next {
            text-align: right !important;
        }
            .bc-menu-vertical-prev img, .bc-menu-vertical-next img {
                height: 20px !important;
                padding: 0px 19px !important;
                margin-top: 10px !important;
            }
        .bc_para_ti-menu-opciones ul li a {
            padding: 5px;
            display: block;
            cursor: pointer;
            font-size: 10px;
            text-transform: uppercase;
        }
        .slick-track {
            position: relative;
            top: 0;
            left: 0 !important;
            display: block;
            width: 100% !important;
            overflow: hidden !important;
        }
        .bc-menu-vertical-prev, .bc-menu-vertical-next{
            width:auto !important;
        }
    </style>
}
@foreach (var seccion in Model.ListaSeccion)
{
    <div data-seccion="@seccion.Codigo" data-campania="@seccion.CampaniaID">
        <div data-seccion-content="">
            @Html.Partial("~/Areas/Mobile/Views/EstrategiaPersonalizada/presentacion-" + seccion.TemplatePresentacion + ".cshtml", seccion)
        </div>
        <div data-seccion-load=""></div>
    </div>
}

@Html.Partial("~/Views/EstrategiaPersonalizada/template-producto-landing.cshtml")
@Html.Partial("~/Views/EstrategiaPersonalizada/presentacion-carrusel-previsuales-producto.cshtml")

@section scripts{
<script type="text/javascript">
        var urlLoad = '@Url.Content("~/Content/Images/loading_spinner.gif")';
</script>
<script type="text/javascript" src="@Url.Content("~/Scripts/jquery.flexslider.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/PortalConsultoras/EstrategiaPersonalizada/Index.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/PortalConsultoras/EstrategiaPersonalizada/EstrategiaAccion.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/PortalConsultoras/EstrategiaPersonalizada/LocalStorage.js")"></script>
<script>
    $('.bc_para_ti-menu ul li a').hover(function (e) {
            $(this).find('img.default').css('display', 'none');
            $(this).find('img.hover').css('display', 'inline');
            $(this).find('img.hover').css('margin-right', '5px');
        }, function (e) {
            $(this).find('img.default').css('display', 'inline');
            $(this).find('img.default').css('margin-right', '5px');
            $(this).find('img.hover').css('display', 'none');
        });
</script>
}