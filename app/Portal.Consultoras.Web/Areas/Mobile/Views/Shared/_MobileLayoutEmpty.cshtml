    <script type="text/javascript">
		$(function () {
			SetFormatDecimalPais(formatDecimalPaisMain);

			HandlebarsRegisterHelper();

			if (ingresoExterno == "NoSoporta") {
				$("body").on("click", ".enlace_regresar", function (e) {
