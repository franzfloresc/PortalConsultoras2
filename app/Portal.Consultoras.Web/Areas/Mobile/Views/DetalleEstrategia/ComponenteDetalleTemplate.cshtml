@using Portal.Consultoras.Common


<div data-ficha-contenido="componenteDetalle-template"></div>

<script id="componenteDetalle-template" type="text/x-handlebars-template">
    <div class="modal modal_producto_detalle fade" id="modal_producto_detalle" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <button type="button" class="btn_volver" data-dismiss="modal" aria-label="Close"><img src="/Content/Images/mobile/Esika/right-arrow.svg" alt="" />   Volver</button>
                    <div class="row imagen_producto ">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <img src="https://d1y60eoca8fkyl.cloudfront.net/Matriz/PE/PE_2000825142019343304_byszvswrvn_medium.png">
                        </div>
                        <hr class="clear">
                        <div id="contenedor_foto_referencial" class="texto_referencial">
                            <span data-texto_referencial="">* Foto Referencial</span>
                        </div>
                    </div>
                    <hr class="clear">
                    <div class="row marca_producto">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <h2>{{Marca}}</h2>
                        </div>
                    </div>

                    <div class="row descripcion_producto">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            {{Descripcion}}
                        </div>
                        {{#each this.UnidadMedida as |value|}}
                        <div class="col-md-12 col-sm-12 col-xs-12 descripcion_item">
                            {{value}}
                        </div>
                        {{/each}}
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            Para tu cliente
                        </div>
                        <div class="col-md-12 col-sm-12 col-xs-12 descripcion_item">
                            {{Moneda}} {{PrecioCliente}}
                        </div>

                        <div class="row tabs">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <ul id="mnuDetalleComponente" class="tabs ficha_tabs">

                                    <li id="div_ficha_tab1">
                                        <a class="tab-link">Modo de uso</a>
                                        <ul class="tabs_container">
                                            {{#each this.ModoUso as |myitem|}}
                                            <h4>{{myitem.Titulo}}</h4>
                                            <p>{{myitem.Valor}}</p>
                                            {{/each}}
                                        </ul>
                                    </li>

                                    <li id="div_ficha_tab2">
                                        <a class="tab-link">Descubre más</a>
                                        <ul>
                                            {{#each this.DescubreMas as |myitem|}}
                                            <h4>{{myitem.Titulo}}</h4>
                                            <p>{{myitem.Valor}}</p>
                                            {{/each}}
                                        </ul>
                                    </li>
                                    <li id="div_ficha_tab3">
                                        <a class="tab-link">Tips de venta</a>
                                        <ul>
                                            {{#each this.TipVenta as |myitem|}}
                                            <h4>{{myitem.Titulo}}</h4>
                                            <p>{{myitem.Valor}}</p>
                                            {{/each}}
                                        </ul>
                                    </li>
                                    <li id="div_ficha_tab4">
                                        <a class="tab-link">Videos</a>

                                        <div style="width:99% !important; height:500px !important;">
                                            <div id="carouselVideo">
                                                {{#each this.TipVenta as |myitem|}}

                                                <div style="width:200px;height:200px;">
                                                    <h4>{{myitem.Titulo}}</h4>
                                                    <p>{{myitem.Valor}}</p>
                                                </div>
                                                {{/each}}
                                                  
                                            </div>
                                        </div>
                                    </li>

                                </ul>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</script>
