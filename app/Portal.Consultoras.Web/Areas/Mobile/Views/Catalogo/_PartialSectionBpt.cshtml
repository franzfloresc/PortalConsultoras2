                <div class="logo-club-etiqueta logo_no_suscrita">
                </div>
                <span class="margin_top">
                    <p>@Html.Raw(configuracionPaisDatosModel.Valor1)</p>
                </span>
                <a href="javascript:RedireccionarContenedorComprar(@Constantes.OrigenPedidoWeb.RevistaDigitalMobileCatalogoSeccion, '@Constantes.ConfiguracionPais.OfertasParaTi')" class="boton-ver-mas no_suscrita" style="background:black">
                    VER MÁS
                </a>
            </div>
