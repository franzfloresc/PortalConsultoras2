                            @Html.Raw(configuracionPaisDatosModel.Valor2)
                        </div>
                        <div class="btn_red">
                            <a class="rd_arrowright" href="javascript:RedireccionarContenedorComprar(@Constantes.OrigenPedidoWeb.RevistaDigitalMobileCatalogoSeccion, '@Constantes.ConfiguracionPais.OfertasParaTi')">
                                VER TODAS MIS OFERTAS
                            </a>
                        </div>
                    </div>
                </div>
            </div>*@
        <div class="wrapper_resumen_mobile_clubganamas" style="height: auto;">
