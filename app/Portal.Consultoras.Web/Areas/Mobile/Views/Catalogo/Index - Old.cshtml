        function ObtenerImagenCatalogo(catalogo, defered) {
            var src = "";

            jQuery.ajax({
                type: "GET",
                url: '//search.issuu.com/api/2_0/document?username=somosbelcorp&q=docname:' + catalogo + '&jsonCallback=?',
                dataType: "json",
                success: function(result) {
                    src = urlNoImagen;

                    if (result.response.docs.length > 0) {
                        var doc = result.response.docs[result.response.docs.length - 1];

                        src = '//image.issuu.com/' + doc.documentId + '/jpg/page_1_thumb_large.jpg';
                    }

                    defered.resolve(src);
                },
                error: function(x, xh, xhr) {
                    console.error(xh);
                    src = urlNoImagen;
                    defered.resolve(src);
                }
            });

            return defered.promise();
        }

