
@{
    ViewBag.Title = "Pago En Línea";
    Layout = "~/Areas/Mobile/Views/Shared/_MobileLayout.cshtml";
}

@section styles{

    <link rel="stylesheet" href="@Url.Content("~/Content/Css/Mobile/Esika/pago-en-linea.css")">

    <style type="text/css">
        .footer-page {
            display: none;
            margin-bottom: 54px;
        }
    </style>

}

<!-- TÍTULO -->
<div class="cabecera_vista_pago_en_linea">
    <a href="@Request.UrlReferrer" class="enlace_regresar ajustePosicionFlecha" style="display:normal" title="Regresar"></a>
    PAGO EN LÍNEA
</div>
<!-- FIN TÍTULO -->

<div class="content_belcorp">
    <div class="pestana_lbel"></div>

    <!-- VISTA PROCESO DE PAGO EN LÍNEA -->

    <div class="proceso_de_pago_en_linea">

        <!-- CANTIDAD PASOS PROCESO DE PAGO -->

        <div class="cantidad_pasos_proceso_pago">
            <span class="paso_proceso_pago_en_linea paso_activo">1</span>
            <span class="paso_proceso_pago_en_linea mr-0">2</span>
            @*<span class="paso_proceso_pago_en_linea mr-0">3</span>*@
            <div class="linea_conectora_pasos">
                <span class="fondo_pasos_proceso_pago_avance"></span>
            </div>
        </div>

        <!-- FIN CANTIDAD PASOS PROCESO DE PAGO -->

        <!-- VISTA SELECCIÓN MONTO A PAGAR -->

        <div class="seleccion_monto_a_pagar">
            <h3>Selecciona el monto a pagar</h3>
            <form class="opciones_pago" method="post" action="">
                <ul class="lista_opciones_pago">
                    <li class="opcion_pago">
                        <div class="col_izq">
                            <div class="contenedor_monto_pago_total">
                                <h4 class="titulo_monto_pago_total">
                                    Pago total:
                                </h4>
                                <div class="monto_total_pago_en_linea">
                                    <span class="tipo_moneda_pais">S/</span>
                                    <span class="monto_moneda_pais">1000.00</span>
                                </div>
                            </div>
                            <div class="fecha_vencimiento_pago_en_linea">
                                <span>Vence </span>
                                <span>15/01</span>
                            </div>
                        </div>
                        <div class="col_der">
                            <input type="radio" id="pagoTotal" name="opcionPago" value="1" checked />
                            <label for="pagoTotal">
                                <span></span>
                            </label>
                        </div>
                    </li>
                    @*<li class="opcion_pago">
                        <div class="col_izq">
                            <div class="monto_total_pago_en_linea">
                                <span class="tipo_moneda_pais">S/</span>
                                <span class="monto_moneda_pais">437.34</span>
                            </div>
                            <div class="fecha_vencimiento_pago_en_linea">
                                <span>Vence </span>
                                <span>27/01</span>
                            </div>
                        </div>
                        <div class="col_der">
                            <input type="radio" id="pagoTotal2" name="opcionPago" value="2" />
                            <label for="pagoTotal2">
                                <span></span>
                            </label>
                        </div>
                    </li>*@
                    <li class="opcion_pago pagoParcial">
                        <div class="col_izq">
                            <h4 class="titulo_monto_pago_editable">
                                Pago Parcial:
                            </h4>
                            <div class="monto_editable_pago_en_linea">
                                <span class="tipo_moneda_pais">S/</span>
                                <input type="text" class="monto_a_editar" placeholder="0.00" value="" />
                            </div>
                        </div>
                        <div class="col_der">
                            <input type="radio" id="pagoParcial" name="opcionPago" value="3" />
                            <label for="pagoParcial">
                                <span></span>
                            </label>
                        </div>
                    </li>
                </ul>
            </form>
            <p class="info_comision_pago_en_linea">
                *Cargo por gastos administrativos: 3% (<span class="tipo_moneda_pais">S/ </span><span class="monto_comision_pago_en_linea">20.00</span>)
            </p>
            <div class="aceptar_terminos_y_condiciones">
                <div class="area_activa_barra_activacion">
                    <div class="barra_activacion" data-estado="0">
                        <div class="control_activacion">
                        </div>
                        <div class="tooltip_terminos_y_condiciones">
                            <span>Debes aceptar los términos y condiciones</span>
                        </div>
                    </div>
                </div>
                <div class="descripcion_opcion_activacion">
                    Acepta los <a title="Términos y condiciones" class="ver_terminos_y_condiciones">términos y condiciones</a>
                </div>
            </div>
        </div>

        <!-- FIN VISTA SELECCIÓN MONTO A PAGAR -->

    </div>

    <!-- FIN VISTA PROCESO DE PAGO EN LÍNEA -->

    <div class="contenedor_info_pago_seguro_y_ctas">

        <!-- INFORMACIÓN DE PAGO SEGURO CON TARJETAS (VISA Y MASTERCARD) -->

        <div class="info_pago_seguro_con_tarjetas">
            <div class="icono_pago_seguro">
                <img src="@Url.Content("~/Content/Images/icono-pago-seguro.svg")" alt="Pago Seguro" />
            </div>
            <div class="texto_info_pago_seguro">
                <span class="texto_pago_seguro solo_visa">Pago seguro a través de</span>
                @*<span class="texto_pago_seguro visa_y_mastercard">Pago seguro</span>*@
            </div>
            <div class="icono_marcas_tarjetas">
                <span class="icono_marca_visa">
                    <img src="@Url.Content("~/Content/Images/logo-visa.svg")" alt="Visa" />
                </span>
                @*<span class="icono_marca_mastercard">
                    <img src="@Url.Content("~/Content/Images/logo-mastercard.svg")" alt="Mastercard" />
                </span>*@
            </div>
        </div>

        <!-- FIN INFORMACIÓN DE PAGO SEGURO CON TARJETAS (VISA Y MASTERCARD) -->

        <!-- CALL TO ACTIONS PAGO EN LÍNEA -->

        @*<button type="button" class="cta_pago_en_linea btn_continuar">
            Continuar
        </button>*@

        <button type="button" class="cta_pago_en_linea btn_pago_credito_visa">
            <span>Pagar con crédito Visa</span>
            <span>
                (<span class="tipo_moneda_pais">S/ </span><span class="monto_a_pagar">1020.00</span>)
            </span>
        </button>

        @*<button type="button" class="cta_pago_en_linea btn_pagar">
            Pagar
        </button>*@

        <!-- FIN CALL TO ACTIONS PAGO EN LÍNEA -->

    </div>

</div>

