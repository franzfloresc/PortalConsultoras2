@using Portal.Consultoras.Web.Models.PagoEnLinea;
@model PagoEnLineaModel

@{
    ViewBag.Title = "Pago Exitoso";
    Layout = "~/Areas/Mobile/Views/Shared/_MobileLayout.cshtml";
}

@section styles{

    <link rel="stylesheet" href="@Url.Content("~/Content/Css/Mobile/Esika/pago-en-linea.css")">

    <style type="text/css">
        .footer-page {
            display: none;
            margin-bottom: 54px;
        }
    </style>

}

<!-- TÍTULO -->
<div class="cabecera_vista_pago_en_linea">
    <a href="@Request.UrlReferrer" class="enlace_regresar ajustePosicionFlecha" style="display:normal" title="Regresar"></a>
    PAGO EN LÍNEA
</div>
<!-- FIN - TÍTULO -->

<div class="content_belcorp">
    <div class="pestana_lbel"></div>

    <!-- VISTA PROCESO DE PAGO EN LÍNEA -->

    <div class="proceso_de_pago_en_linea">

        <!-- VISTA PAGO EXITOSO -->

        <div class="pago_exitoso">

            <div class="icono_pago_exitoso"></div>
            <h3 class="titulo_pago_exitoso">
                ¡Pago <strong>exitoso</strong>!
            </h3>
            <p class="mensaje_felicitacion_por_pago_exitoso">
                Muy bien @Model.NombreConsultora <span class="imagen_felicitacion"><img src="@Url.Content("~/Content/Images/celebracion-img.png")" alt="Felicitaciones" /></span>
            </p>
            <p class="info_constancia_pago_exitoso">
                Te enviamos una constancia de pago a tu correo o puedes revisarla <a href='@Url.Action("DetallePagoEnLinea", "Notificaciones", new { area = "Mobile" })?solicitudId=@Model.PagoEnLineaResultadoLogId' class="enlace_ir_a_notificaciones" title="Ir A Notificaciones">aquí</a>
            </p>            
            <div class="resumen_pago_exitoso">
                <h3 class="titulo_resumen_pago_exitoso">
                    Resumen del pago
                </h3>
                <div class="resumen_pago">
                    <p class="info_num_operacion_pago">
                        Número de operación: <span class="num_operacion_pago">@Model.NumeroOperacion</span>
                    </p>
                    <div class="monto_pagado">
                        <span>Monto:</span>
                        <span>@Model.Simbolo @Model.MontoDeudaString</span>
                    </div>
                    <div class="monto_gastos_administrativos">
                        <span>Cargo plataforma online:</span>
                        <span>@Model.Simbolo @Model.MontoGastosAdministrativosString</span>
                    </div>
                    <div class="total_monto_pagado">
                        <span>Total pagado:</span>
                        <span>@Model.Simbolo @Model.MontoDeudaConGastosString</span>
                    </div>
                    <div class="monto_saldo_pendiente">
                        <div>Saldo pendiente:</div>
                        <div>
                            <span>@Model.Simbolo</span>
                            <span>@Model.SaldoPendienteString</span>
                        </div>
                    </div>
                    <div class="fecha_vencimiento_saldo_pendiente">
                        <span>Vencimiento:</span>
                        <span>@Model.FechaVencimientoString</span>
                    </div>
                </div>
            </div>
            <p class="info_horarios_efectivos_pagos">
                @Model.MensajeInformacionPagoExitoso
            </p>
            <a href="@Url.Action("Index","EstadoCuenta")" class="enlace_ver_estado_de_cuenta" title="Ver estado de cuenta">
                <span class="icono_enlace_enviar_estado_cuenta">
                    <img src="@Url.Content("~/Content/Images/icono_enviar_detalle_correo.svg")" alt="Enviar detalle a correo" />
                </span>
                <span>Ver Estado de Cuenta</span>
            </a>
        </div>

        <!-- FIN - VISTA PAGO EXITOSO -->

    </div>

    <!-- FIN - VISTA PROCESO DE PAGO EN LÍNEA -->

</div>

@section scripts{    
    <script type="text/javascript">
        //var timeCloseRain = 60000;
        var esMobile = true;
        var listaIconoLluvia = new Array();
        listaIconoLluvia[0] = '@Url.Content("~/Content/Images/confetti-rombo.svg")';
        listaIconoLluvia[1] = '@Url.Content("~/Content/Images/confetti-estrella.svg")';
        listaIconoLluvia[2] = '@Url.Content("~/Content/Images/confetti-circulo.svg")';
        //listaIconoLluvia[3] = '@Url.Content("~/Content/Images/confetti-tiras.svg")';
        listaIconoLluvia[3] = '@Url.Content("~/Content/Images/confetti-ondas.svg")';

        $(document).ready(function () {
            dataLayer.push({
                'event': 'virtualEvent',
                'category': 'Pago en Línea',
                'action': 'Clic en Botón',
                'label': 'Pago Exitoso'
            });
        });
    </script>    
    <script type="text/javascript" src="@Url.Content("~/Scripts/nieve.js")"></script>
}
