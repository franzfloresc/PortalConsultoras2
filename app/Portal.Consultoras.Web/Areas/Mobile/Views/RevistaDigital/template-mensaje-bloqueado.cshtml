
@model Portal.Consultoras.Web.Models.MensajeProductoBloqueadoModel
@using Portal.Consultoras.Web.Models
@{

    var divid = @Model.divId ?? "divMensajeBloqueada";
    var revistaDigital = ViewBag.revistaDigital ?? new RevistaDigitalShortModel();
}

    <div class="Content_general_pop_up contenedor_fondo_popup content_general_pop_up" id="@Model.IdPopup"
         data-popup-main="" data-popup-function-hide="rdPopup.Cerrar()" style="display:none;">
        <div class="content_pop_up_intriga" data-popup-body="">
            <div class="mobile_contenido-popup-nuevo-2017">
                <div class="mobile_centrar-estructura" data-popup-body="" style="border: 5px solid #C39934; background:transparent;">
                    <a class="mobile_cerrar-popup" data-popup-close=""><img src="@Url.Content("~/Content/Images/close-icon.svg")" alt=""></a>


                    <div class="mobile_centrar-vertical-contenido">
                        <div class="clear"></div>
                        <p class="mobile_primer-texto" style="">
                            @Model.MensajePopupPrimero
                        </p>
                        <p class="mobile_segundo-texto" style="">
                            @Model.MensajePopupSegundo
                        </p>

                        <a href="@Model.UrlBtnPopup" class="mobile_btn-popup" data-popup-close="" style="">
                            <span>@Model.MensajeBtnPopup</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

<div class="Content_general_pop_up" id="@divid" style="display: none;" data-popup-main="">
    <div class="popup_rd_bloqueado" data-popup-body="">
        <a class="cerrar_fichaProducto" style="position: absolute; top:0px; right: -35px;" href="javascript:;" data-popup-close="divMensajeBloqueada">
            <img src="/Content/Images/cerrar_04_blanco.png" alt="" alternate="" text="">
        </a>
        @if (Model.MensajeIconoSuperior)
        {
            <span class="icono_exclamacion"></span>
        }
            <div class="popup_text">@Model.MensajeTitulo</div>
            <hr class="clear" />
            <div class="box_producto" data-item-html="" style="overflow: hidden;"></div>
            <hr class="clear" />
            @if (Model.BtnInscribirse)
        {
            <div class="rd_btn" data-estadoregistro0="">
                <div class="btn_diagonal rd_btn_rojo"><a href="javascript: RDPageInformativa()">SUSCRÍBETE</a></div>
            </div>
        }
            @if (Model.MensajeTieneDudas)
        {
            <div class="popup_text">¿TIENES DUDAS?</div>
            <a href="javascript: RDPageInformativa();" class="popup_text rd_ver_mas">CONOCE TODO SOBRE CLUB GANA+</a>
        }
    </div>
</div>

