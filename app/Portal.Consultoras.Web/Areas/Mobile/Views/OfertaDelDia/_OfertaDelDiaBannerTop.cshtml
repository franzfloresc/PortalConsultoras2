@using Portal.Consultoras.Web.Models
@using Portal.Consultoras.Web.Models.Estrategia.OfertaDelDia;
@{

    DataModel Model = ViewBag.MostrarOfertaDelDia == true ? ViewBag.OfertaDelDia ?? new DataModel() : new DataModel();
    var prod = new EstrategiaPersonalizadaProductoModel();
    if (Model.ListaOferta.Count > 0)
    {
        prod = Model.ListaOferta.First();
    }
    var origenPedidoWeb = Portal.Consultoras.Common.Constantes.OrigenPedidoWeb.MobileOtrasOfertaDelDiaFicha;
}
<style>
    .flip-clock-wrapper .flip{
        box-shadow: 0 2px 5px @Model.ColorFondo1 !important;
    }
    .flip-clock-wrapper ul li a div div.inn {
        text-shadow: 0 1px 2px @Model.ColorFondo1 !important;
        background-color: @Model.ColorFondo1 !important;
    }
</style>
<div data-item="" data-OrigenPedidoWeb="@origenPedidoWeb">
    <div style="display:none;" data-item-campos="" >
        <input data-estrategia="@Json.Encode(prod)" />
    </div>
    <div class="BloqueOfertaDiaHeader"  style="background-color: @Model.ColorFondo1" href="javascript:;" onclick="OnClickFichaDetalle($(this));">
        <div class="row_contador" style="padding: 0;">
            <div class="float_left" style="margin-left: 16px;">
                <div class="solo_hoy_mobile2"><img src="@Model.ImagenSoloHoy" alt="" /></div>

                <div class="clock" data-total-seconds="@Model.TeQuedan.TotalSeconds" style="top: 2px; left: 115px;"></div>
            </div>
            <a class="btn_compralo_ahora cabecera-no-home" href="javascript:;" >@Model.TextoVerDetalle</a>
            <div class="imagen_set_oferta_mobile2">
                <img src="@Model.ImagenBanner" alt="" />
            </div>
        </div>
    </div>
</div>
