                    <input type="hidden" id="hdn_FlgCheckSMS" value="@Model.FlgCheckSMS" />
                    <input type="hidden" id="hdn_FlgCheckEMAIL" value="@Model.FlgCheckEMAIL" />
                    @*FIN HD-3897*@
                    <div class="datos_codigo w-50 text-left">
                        <span class="text-left text-bold">Código : </span>
                        @if (Model.DigitoVerificador != null && ViewBag.PaisesDigitoControl.Contains(Model.PaisISO))
                        {<span class="text-right text-bold">@Model.CodigoUsuario - <span class="text-bold">@Model.DigitoVerificador</span></span>}
                    else
                    { <span class="text-bold">@Model.CodigoUsuario</span>}
                    </div>

                    <div class="datos_zona w-50 text-right">
                        <span class="text-left text-bold">Zona : </span>
                        <span class="text-right text-bold">@Model.Zona</span>
                    </div>
                </div>
                @if (Model.NombreGerenteZonal != "" && Model.IndicadorConsultoraDigital == 0)
                {
                    <div class="datos_gerente_zona">
                        <span class="text-left text-bold">Gerente de zona : </span>
                        <span class="text-right text-bold pull-right">@Model.NombreGerenteZonal</span>
                        <div class="clear"></div>
                    </div>
                }
                @*<a href="@Url.Action("CambiarContrasenia", "MiPerfil", new {area = "Mobile"})" title="Cambiar contraseña" class="enlace_cambiar_contrasenia_consultora text-center text-bold text-uppercase">
                    <span class="icono_cambio_password"></span>
                    <span class="enlace_texto">Cambiar contraseña</span>
                </a>*@
            </div>
        </div>
    </section>

    @*INI EINCA HD-3180 Y HD-3304 15-01-2019*@
    @if (Model.PaisID == Constantes.PaisID.Colombia)
    {
        <section>
            <div style="display:flex; display:-webkit-flex;display:-ms-flexbox; flex-direction:row; justify-content:center;padding-left:5px;">
                <span style="padding-right:.5rem;">
                    <img style="width:30px;margin-top:.5rem;" src="@Url.Content("~/Content/Images/icono_advertencia_consultora_registrada_coach.png")" />
                </span>
                <span style="color:#e81c36;font-weight:bold;font-size:15px;margin-bottom:15px;">
