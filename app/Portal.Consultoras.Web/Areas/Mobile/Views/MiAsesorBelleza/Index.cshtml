                <img src="@Url.Content("~/Content/Images/mobile/Esika/manicure_virtual_esika.png")" alt="Manicure Virtual" />
            </div>
            <div class="asesor_belleza_texto">
                <span>Manicure</span>
                <span>Virtual</span>
            </div>
        </div>
        <div class="asesor_belleza_contenido">
            <div class="asesor_belleza_img">
                <img src="@Url.Content("~/Content/Images/mobile/Esika/esika_blog.png")" alt="Esika Blog" />
            </div>
            <div class="asesor_belleza_texto">
                <span>Ésika</span>
                <span>Blog</span>
            </div>
        </div>
    </div>
    <!-- FIN TAB ESIKA -->

    <!-- TAB LBEL -->
    <div class="tab_contenido_asesorBelleza" data-tag-html="Lbel" style="display:none;">
        <div class="asesor_belleza_contenido">
