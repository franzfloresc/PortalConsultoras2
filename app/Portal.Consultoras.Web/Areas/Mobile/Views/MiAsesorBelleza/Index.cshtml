@using Portal.Consultoras.Common
@using Portal.Consultoras.Web.Areas.Mobile.Models

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Mobile/Views/Shared/_MobileLayout.cshtml";
}

<div class="titulo_mobile titulo_asesorBelleza">
    <a href="@Request.UrlReferrer" class="enlace_regresar catalogosR" title="Regresar"></a>
    &nbsp;&nbsp;&nbsp;&nbsp;MI ASESOR DE BELLEZA
</div>
<div class="fondo_f2f2f2">
    <div class="pestana_esika"></div><!--PESTANA ESIKA-->
    <div class="pestana_lbel"></div><!--PESTANA LBEL-->
    <ul class="tabs_asesoresBelleza" data-tab="tab" style="margin-bottom:0">
        <li class="one">
            <a href="#" data-tag="Esika">
                Ésika
                <div class="marcador_tab"></div>
            </a>
        </li>
        <li class="two">
            <a href="#" data-tag="Lbel">
                L'bel
                <div class="marcador_tab oculto"></div>
            </a>
        </li>

        <li class="three">
            <a href="#" data-tag="Cyzone">
                Cyzone
                <div class="marcador_tab oculto"></div>
            </a>
        </li>

        <hr id="barCursor">
    </ul>
</div>

<div class="wrapper_resumen_mobile">

    <!-- TAB ESIKA -->
