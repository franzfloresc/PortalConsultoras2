@model Portal.Consultoras.Web.Models.ConfiguracionSeccionHomeModel

@{
    List<string> lStyleBoton = new List<string>();
    List<string> lStylePanel = new List<string>();
    List<string> lStyleText = new List<string>();

    #region Diseño de boton
    if (!String.IsNullOrEmpty(Model.BotonColor) && Model.BotonColor.Replace("#", "").Trim().Length > 0)
    {
        lStyleBoton.Add("background-color: " + Model.BotonColor + ";");
    }
    if (!String.IsNullOrEmpty(Model.BotonColorTexto) && Model.BotonColorTexto.Replace("#", "").Trim().Length > 0)
    {
        lStyleBoton.Add("color: " + Model.BotonColorTexto + ";");
    }
    #endregion
    #region Diseño de panel
    if (!String.IsNullOrEmpty(Model.ColorFondo) && Model.ColorFondo.Replace("#", "").Trim().Length > 0)
    {
        lStylePanel.Add("background-color: " + Model.ColorFondo + ";");
        lStylePanel.Add("color: white;");
        lStylePanel.Add("text-align: center;");
        lStylePanel.Add("height: auto;");
        lStylePanel.Add("padding: 20px 0;");
        
    }
    if (!String.IsNullOrEmpty(Model.ImagenFondo) && Model.ImagenFondo.Replace("#", "").Trim().Length > 0)
    {
        lStylePanel.Add("background: url(" + Model.ImagenFondo + ") center center no-repeat;");
        lStylePanel.Add("background-position: left !important;");
        lStylePanel.Add("background-size: contain;");
        
        lStylePanel.Add("vertical-align: middle;");
    }
    #endregion
    #region Diseño de texto en panel
    if (!String.IsNullOrEmpty(Model.ColorTexto) && Model.ColorTexto.Replace("#", "").Trim().Length > 0)
    {
        lStyleText.Add("color: " + Model.ColorTexto + ";");
    }
    #endregion
}

<div class="container">
<style type="text/css">
.atp_main{
  background-color: #e70002;
  color: white;
  font-family: 'lato';
  text-align:center;
  height: auto;
  padding: 20px 0; 
}
.atp_title{
  letter-spacing: 2px;
  font-size:22px;
  font-weight: 900;
  margin:0;
  padding:0;
}
.atp_content{
  line-height: 1em;
  font-size:14px;
  font-weight:900;
  margin:30px 0;
}
.atp_content p{
  line-height:16px;
  margin:0;
}
.atp_content p > span{
  font-size: 18px;
}
.atp_button{
  background-color: black;
  color: white;
  border:none;
  cursor:pointer;
}
  .atp_button:hover{
    cursos:pointer;
  }
.atp_button_center{
  text-align:center;
  padding:14px; 
  min-width: 100px;
  width: 30%;
  border-radius:4px;
  font-size:11px;
}
.text-upper{
  text-transform: uppercase;
}


</style>
    <div class="atp_main" style="@Html.Raw(String.Join("", lStylePanel))">
        <div class="atp_main_content">
            <h2 class="atp_title text-upper" style="@Html.Raw(String.Join("", lStyleText))">@Model.Titulo</h2>
            <div class="atp_content">
                <p data-subtitulo="@Model.SubTitulo" 
                   style="@Html.Raw(String.Join("", lStyleText))">
                    @Model.SubTitulo
                </p>
                @*<span>Sigue el texto aquí.</span>*@
            </div>
        </div>
        <button class="atp_button atp_button_center text-upper" 
                style="@Html.Raw(String.Join("", lStyleBoton))"
                data-crea="@Model.BotonTexto1" 
                data-modifica="@Model.BotonTexto2"
                @*data-landing="@Url.Action("Index", "ArmaTuPack")"*@
                data-landing="@Model.UrlLandig"
                data-popup="false"
                data-cuv=""
                onclick="javascript: BannerInteractivo().ConsultaRedireccionaLanding(this);">
            @Model.BotonTexto1
        </button>
    </div>
</div>